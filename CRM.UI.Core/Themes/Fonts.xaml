<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Font Families -->
    <FontFamily x:Key="DefaultFontFamily">Segoe UI</FontFamily>
    <FontFamily x:Key="HeadingFontFamily">Segoe UI Semibold</FontFamily>
    <FontFamily x:Key="MonospaceFontFamily">Consolas</FontFamily>

    <!-- Font Sizes -->
    <system:Double xmlns:system="clr-namespace:System;assembly=mscorlib" x:Key="H1FontSize">32</system:Double>
    <system:Double xmlns:system="clr-namespace:System;assembly=mscorlib" x:Key="H2FontSize">24</system:Double>
    <system:Double xmlns:system="clr-namespace:System;assembly=mscorlib" x:Key="H3FontSize">20</system:Double>
    <system:Double xmlns:system="clr-namespace:System;assembly=mscorlib" x:Key="H4FontSize">18</system:Double>
    <system:Double xmlns:system="clr-namespace:System;assembly=mscorlib" x:Key="H5FontSize">16</system:Double>
    <system:Double xmlns:system="clr-namespace:System;assembly=mscorlib" x:Key="H6FontSize">14</system:Double>
    <system:Double xmlns:system="clr-namespace:System;assembly=mscorlib" x:Key="BodyFontSize">14</system:Double>
    <system:Double xmlns:system="clr-namespace:System;assembly=mscorlib" x:Key="CaptionFontSize">12</system:Double>
    <system:Double xmlns:system="clr-namespace:System;assembly=mscorlib" x:Key="SmallFontSize">10</system:Double>
</ResourceDictionary>