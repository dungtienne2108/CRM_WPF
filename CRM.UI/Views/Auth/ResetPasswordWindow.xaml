<Window x:Class="CRM.UI.Views.Auth.ResetPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CRM.UI.Views.Auth"
        mc:Ignorable="d"
        Title="Xác nhận mật khẩu mới" Height="250" Width="400">
    <StackPanel Margin="20" VerticalAlignment="Center">
        <TextBlock Text="Nhập mã xác thực (OTP)" Margin="0,0,0,5"/>
        <TextBox Text="{Binding Otp, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" 
                 Height="30" Margin="0,0,0,15"/>

        <TextBlock Text="Mật khẩu mới" Margin="0,0,0,5"/>
        <PasswordBox x:Name="NewPasswordBox" Height="30" Margin="0,0,0,15"
                     PasswordChanged="PasswordBox_OnPasswordChanged"/>

        <Button Content="Xác nhận" Height="35" 
                Command="{Binding ResetPasswordCommand}"/>
    </StackPanel>
</Window>
