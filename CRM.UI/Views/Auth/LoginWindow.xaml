<Window x:Class="CRM.UI.Views.Auth.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:CRM.UI.Views.Auth"
        xmlns:converters="clr-namespace:CRM.UI.Converters"
        mc:Ignorable="d"
        Title="{Binding Title}" Height="600" Width="800"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="{DynamicResource MaterialDesignPaper}">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>
        <converters:InverseBooleanToVisibleConverter x:Key="InverseBoolToVisConverter"/>

        <Storyboard x:Key="FadeIn">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                           From="0" To="1" Duration="0:0:0.3"/>
        </Storyboard>

        <Storyboard x:Key="SlideIn">
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                           From="50" To="0" Duration="0:0:0.5">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
    </Window.Resources>

    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard Storyboard="{StaticResource FadeIn}"/>
        </EventTrigger>
    </Window.Triggers>

    <Border CornerRadius="10" Background="White">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" 
                            Direction="0" 
                            RenderingBias="Quality" 
                            ShadowDepth="0" 
                            Color="#40000000"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" 
                    CornerRadius="10,10,0,0"
                    Background="{DynamicResource PrimaryHueMidBrush}"
                    Height="40"
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- App Icon -->
                    <materialDesign:PackIcon Grid.Column="0"
                                           Kind="Domain"
                                           Width="20" Height="20"
                                           VerticalAlignment="Center"
                                           Foreground="White"
                                           Margin="15,0,10,0"/>

                    <!-- Title -->
                    <TextBlock Grid.Column="1"
                             Text="CRM System - Login"
                             VerticalAlignment="Center"
                             Foreground="White"
                             FontSize="14"
                             FontWeight="Medium"/>

                    <!-- Minimize Button -->
                    <Button Grid.Column="2"
                           Click="MinimizeButton_Click"
                           Style="{StaticResource MaterialDesignFlatButton}"
                           Width="40" Height="40"
                           Padding="0"
                           Foreground="White"
                           materialDesign:RippleAssist.Feedback="White">
                        <materialDesign:PackIcon Kind="WindowMinimize" Width="18" Height="18"/>
                    </Button>

                    <!-- Close Button -->
                    <Button Grid.Column="3"
                           Click="CloseButton_Click"
                           Style="{StaticResource MaterialDesignFlatButton}"
                           Width="40" Height="40"
                           Padding="0"
                           Foreground="White"
                           materialDesign:RippleAssist.Feedback="White">
                        <materialDesign:PackIcon Kind="Close" Width="18" Height="18"/>
                    </Button>
                </Grid>
            </Border>

            <Grid Grid.Row="1">
                <Grid Panel.ZIndex="999" 
                      Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisConverter}}"
                      Background="#80000000">
                    <materialDesign:Card Width="150" Height="150"
                                       UniformCornerRadius="10">
                        <Grid>
                            <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}"
                                       Width="60" Height="60"
                                       IsIndeterminate="True"
                                       Value="50"/>
                            <TextBlock Text="Đang đăng nhập..."
                                     HorizontalAlignment="Center"
                                     VerticalAlignment="Bottom"
                                     Margin="0,0,0,30"
                                     FontSize="14"/>
                        </Grid>
                    </materialDesign:Card>
                </Grid>

                <ScrollViewer VerticalScrollBarVisibility="Hidden"
                              HorizontalScrollBarVisibility="Hidden">
                    <StackPanel Margin="50,30,50,30">
                        <StackPanel.RenderTransform>
                            <TranslateTransform/>
                        </StackPanel.RenderTransform>

                        <StackPanel.Triggers>
                            <EventTrigger RoutedEvent="StackPanel.Loaded">
                                <BeginStoryboard Storyboard="{StaticResource SlideIn}"/>
                            </EventTrigger>
                        </StackPanel.Triggers>

                        <Grid HorizontalAlignment="Center" Margin="0,0,0,20">
                            <Ellipse Width="90" Height="90"
                                   Fill="{DynamicResource PrimaryHueLightBrush}"/>
                            <Image Source="pack://application:,,,/CRM.UI;component/Resources/Logo FLC Group H.png"
                                                   Width="120" Height="120"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"
                                                  />
                        </Grid>

                        <TextBlock Text="Chào mừng quay trở lại!"
                                 FontSize="28"
                                 FontWeight="Light"
                                 HorizontalAlignment="Center"
                                 Foreground="{DynamicResource PrimaryHueDarkBrush}"
                                 Margin="0,0,0,5"/>

                        <TextBlock Text="Vui lòng đăng nhập tài khoản"
                                 FontSize="14"
                                 Foreground="{DynamicResource MaterialDesignBodyLight}"
                                 HorizontalAlignment="Center"
                                 Margin="0,0,0,30"/>

                      <!--  <materialDesign:Card Background="#FFEBEE"
                                           Padding="15"
                                           UniformCornerRadius="5"
                                           Margin="0,0,0,20"
                                           Visibility="{Binding HasErrors, Converter={StaticResource BoolToVisConverter}}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <materialDesign:PackIcon Kind="AlertCircleOutline"
                                                       Width="24" Height="24"
                                                       Foreground="#F44336"
                                                       VerticalAlignment="Top"
                                                       Margin="0,0,10,0"/>

                                <TextBlock Grid.Column="1"
                                         Text="{Binding ErrorMessage}"
                                         TextWrapping="Wrap"
                                         Foreground="#D32F2F"
                                         FontSize="13"
                                         VerticalAlignment="Center"/>
                            </Grid>
                        </materialDesign:Card> -->
                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBox x:Name="UsernameTextBox"
                                   Text="{Binding UserName, UpdateSourceTrigger=PropertyChanged}"
                                   materialDesign:HintAssist.Hint="Tên đăng nhập"
                                   materialDesign:HintAssist.IsFloating="True"
                                   materialDesign:TextFieldAssist.HasClearButton="True"
                                   materialDesign:TextFieldAssist.LeadingIcon="Account"
                                   Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                   FontSize="14"
                                   TabIndex="0">
                                <TextBox.InputBindings>
                                    <KeyBinding Key="Return" Command="{Binding LoginCommand}"/>
                                </TextBox.InputBindings>
                            </TextBox>
                        </Grid>

                        <Grid Margin="0,0,0,15">
                            <Grid>
                                <!-- Password Box (Hidden) -->
                                <PasswordBox x:Name="PasswordBox"
                                           materialDesign:HintAssist.Hint="Mật khẩu"
                                           materialDesign:HintAssist.IsFloating="True"
                                           materialDesign:TextFieldAssist.HasClearButton="True"
                                           materialDesign:TextFieldAssist.LeadingIcon="Lock"
                                           Style="{StaticResource MaterialDesignOutlinedPasswordBox}"
                                           PasswordChanged="PasswordBox_PasswordChanged"
                                           FontSize="14"
                                           TabIndex="1"
                                           Visibility="{Binding IsPasswordVisible, 
                                                      Converter={StaticResource InverseBoolToVisConverter}}">
                                    <PasswordBox.InputBindings>
                                        <KeyBinding Key="Return" Command="{Binding LoginCommand}"/>
                                    </PasswordBox.InputBindings>
                                </PasswordBox>

                                <!-- Text Box (Visible) -->
                                <TextBox x:Name="PasswordTextBox"
                                       Text="{Binding Password, UpdateSourceTrigger=PropertyChanged}"
                                       materialDesign:HintAssist.Hint="Password"
                                       materialDesign:HintAssist.IsFloating="True"
                                       materialDesign:TextFieldAssist.HasClearButton="True"
                                       materialDesign:TextFieldAssist.LeadingIcon="Lock"
                                       Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                       FontSize="14"
                                       TabIndex="1"
                                       Visibility="{Binding IsPasswordVisible, 
                                                  Converter={StaticResource BoolToVisConverter}}">
                                    <TextBox.InputBindings>
                                        <KeyBinding Key="Return" Command="{Binding LoginCommand}"/>
                                    </TextBox.InputBindings>
                                </TextBox>

                                <!-- Toggle Password Visibility Button -->
                                <Button Command="{Binding TogglePasswordVisibilityCommand}"
                                      Style="{StaticResource MaterialDesignFlatButton}"
                                      HorizontalAlignment="Right"
                                      VerticalAlignment="Center"
                                      Margin="0,8,8,0"
                                      Width="24" Height="24"
                                      Padding="0"
                                      ToolTip="Show/Hide Password">
                                    <materialDesign:PackIcon Width="20" Height="20">
                                        <materialDesign:PackIcon.Style>
                                            <Style TargetType="materialDesign:PackIcon">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsPasswordVisible}" Value="True">
                                                        <Setter Property="Kind" Value="EyeOff"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding IsPasswordVisible}" Value="False">
                                                        <Setter Property="Kind" Value="Eye"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </materialDesign:PackIcon.Style>
                                    </materialDesign:PackIcon>
                                </Button>
                            </Grid>
                        </Grid>

                        <Grid Margin="0,0,0,25">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Remember Me -->
                            <CheckBox x:Name="RememberMeCheckBox" 
                                    Grid.Column="0"
                                    IsChecked="{Binding RememberMe}"
                                    Content="Ghi nhớ lần đăng nhập này"
                                    FontSize="13"
                                    TabIndex="2"/>

                            <!-- Forgot Password -->
                            <Button Grid.Column="1"
                                   Command="{Binding ForgotPasswordCommand}"
                                   Content="Quên mật khẩu?"
                                   Style="{StaticResource MaterialDesignFlatButton}"
                                   Foreground="{DynamicResource PrimaryHueMidBrush}"
                                   FontSize="13"
                                   Padding="4,0"
                                   Height="Auto"
                                   TabIndex="3"/>
                        </Grid>

                        <Button Command="{Binding LoginCommand}"
                               IsDefault="True"
                               Style="{StaticResource MaterialDesignRaisedButton}"
                               materialDesign:ButtonAssist.CornerRadius="25"
                               Height="50"
                               FontSize="16"
                               TabIndex="4">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Login" 
                                                       VerticalAlignment="Center"
                                                       Margin="0,0,8,0"/>
                                <TextBlock Text="Đăng nhập" 
                                         VerticalAlignment="Center"
                                         FontWeight="Medium"/>
                            </StackPanel>
                        </Button>

                        
                        
                    </StackPanel> 
                </ScrollViewer>
            </Grid>
        </Grid>
    </Border>
</Window>
