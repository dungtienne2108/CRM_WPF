<UserControl x:Class="CRM.UI.Views.DepositManagement.DepositManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:local="clr-namespace:CRM.UI.Views.DepositManagement"
             xmlns:viewModels="clr-namespace:CRM.UI.ViewModels.DepositManagement"
             xmlns:converters="clr-namespace:CRM.UI.Converters"
             mc:Ignorable="d" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             Background="{DynamicResource MaterialDesignPaper}">
    <UserControl.Resources>
        <converters:CurrencyFormatConverter x:Key="CurrencyFormatConverter"/>

        <!-- Style cho DataGrid Header -->
        <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}">
            <Setter Property="Background" Value="{DynamicResource MaterialDesignToolBarBackground}"/>
            <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBody}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Height" Value="48"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
        </Style>

        <!-- Style cho DataGrid Row -->
        <Style TargetType="DataGridRow" BasedOn="{StaticResource MaterialDesignDataGridRow}">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource MaterialDesignSelection}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style cho ComboBox trong dropdown button -->
        <Style x:Key="StatusComboBoxStyle" TargetType="ComboBox" BasedOn="{StaticResource MaterialDesignComboBox}">
            <Setter Property="Width" Value="140"/>
            <Setter Property="Height" Value="32"/>
        </Style>

    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!--Header-->
        <Grid Grid.Row="0" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Tiêu đề -->
            <TextBlock Grid.Column="0" 
                       Text="Danh sách đặt cọc"
                       Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                       VerticalAlignment="Center"
                       Margin="0,0,32,0"/>

            <TextBox Grid.Column="1"
                     x:Name="SearchTextBox"
                     Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                     materialDesign:HintAssist.Hint="Tìm kiếm..."
                     materialDesign:TextFieldAssist.HasLeadingIcon="True"
                     materialDesign:TextFieldAssist.LeadingIcon="Search"
                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                     MaxWidth="480"
                     MinWidth="320"
                     VerticalAlignment="Center"
                     Margin="16,0"
                     >
                <TextBox.InputBindings>
                    <KeyBinding Key="Enter" Command="{Binding SearchCommand}" />
                </TextBox.InputBindings>
            </TextBox>

            <Button Grid.Column="2"
         Margin="0,0,5,0"
         Command="{Binding ExportCommand}"
         Content="Xuất dữ liệu"
         Style="{StaticResource MaterialDesignOutlinedButton}"
         materialDesign:ButtonAssist.CornerRadius="4"
         Height="40"
         Padding="24,0"
         VerticalAlignment="Center"/>
        </Grid>

        <!--DataGrid-->
        <Border Grid.Row="1"
                Margin="8" Padding="0"
                CornerRadius="0"                
                materialDesign:ElevationAssist.Elevation="Dp4">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="40"/>
                </Grid.ColumnDefinitions>

                <DataGrid x:Name="CustomerDataGrid"
                          Grid.Column="0"
                      ItemsSource="{Binding DepositItems}"
                      Style="{StaticResource MaterialDesignDataGrid}"
                      BorderBrush="Gray"
                      BorderThickness="1"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      HeadersVisibility="Column"
                      GridLinesVisibility="All"
                          RowHeight="48"
                      HorizontalGridLinesBrush="{DynamicResource MaterialDesignDivider}"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Auto"
                      SelectedItem="{Binding SelectedDepositItem}">
                    
                    <DataGrid.Columns>
                        <!-- STT -->
                        <DataGridTextColumn Header="STT" 
                                        Binding="{Binding Index}"
                                        Width="0.6*"
                                        IsReadOnly="True"
                                        ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"/>

                        <!-- CheckBox -->
                        <DataGridCheckBoxColumn Header="" 
                                            Binding="{Binding IsSelected}"
                                            Width="0.5*"
                                            ElementStyle="{StaticResource MaterialDesignDataGridCheckBoxColumnStyle}"/>

                        <!-- Mã -->
                        <DataGridTextColumn Header="Mã" 
                                        Binding="{Binding Code}"
                                        Width="1*"
                                        IsReadOnly="True"
                                        ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"/>

                        <!-- Tên -->
                        <DataGridTextColumn Header="Tên" 
                                        Binding="{Binding Name}"
                                        Width="1*"
                                        IsReadOnly="True"
                                        ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"/>

                        <!-- Cơ hội -->
                        <DataGridTextColumn Header="Tên cơ hội" 
                                        Binding="{Binding OpportunityName}"
                                        Width="1.2*"
                                        IsReadOnly="True"
                                        ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"/>

                        <DataGridTextColumn Header="Tên khách hàng" 
                                        Binding="{Binding CustomerName}"
                                        Width="1.2*"
                                        IsReadOnly="True"
                                        ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"/>

                        <DataGridTextColumn Header="Tiền đặt cọc (VNĐ)" 
                                        Binding="{Binding Amount, Converter={StaticResource CurrencyFormatConverter}}"
                                        Width="1.2*"
                                        IsReadOnly="True"
                                        ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"/>

                        <!-- Nhân sự phụ trách -->
                        <DataGridTextColumn Header="Ngày có hiệu lực" 
                                        Binding="{Binding StartDate, StringFormat={}{0:dd/MM/yyyy}}"
                                        Width="0.9*"
                                        IsReadOnly="True"
                                        ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"/>

                        <!-- Địa chỉ -->
                        <DataGridTextColumn Header="Ngày hết hiệu lực" 
                                        Binding="{Binding EndDate, StringFormat={}{0:dd/MM/yyyy}}"
                                        Width="0.9*"
                                        IsReadOnly="True"
                                        ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"/>

                        <!-- Mức độ tiềm năng -->
                        <DataGridTextColumn Header="Mô tả" 
                                        Binding="{Binding Description}"
                                        Width="1.3*"
                                        IsReadOnly="True"
                                        ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"/>
                    </DataGrid.Columns>

                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="MouseDoubleClick">
                            <i:InvokeCommandAction Command="{Binding OpenDetailCommand}"
                               CommandParameter="{Binding SelectedItem, RelativeSource={RelativeSource AncestorType=DataGrid}}" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </DataGrid>
                
            </Grid>

        </Border>

        <!--Pagi -->
        <Grid Grid.Row="2" Margin="0,16,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Thông tin tổng số -->
            <TextBlock Grid.Column="0"
                       x:Name="TotalRecordsText"
                       Text="{Binding TotalRecordsText}"
                       Style="{StaticResource MaterialDesignBody2TextBlock}"
                       VerticalAlignment="Center"/>

            <!-- nút -->
            <StackPanel Grid.Column="1" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                <Button x:Name="FirstPageButton"
                        Command="{Binding FirstPageCommand}"
                        Content="&lt;&lt;"
                        Style="{StaticResource MaterialDesignOutlinedButton}"
                        Width="40" Height="32"
                        Margin="2"/>

                <Button x:Name="PreviousPageButton"
                        Command="{Binding PreviousPageCommand}"
                        Content="&lt;"
                        Style="{StaticResource MaterialDesignOutlinedButton}"
                        Width="40" Height="32"
                        Margin="2"/>

                <TextBox x:Name="PageNumberTextBox"
                         Text="{Binding CurrentPage, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         Width="60" Height="36"
                         FontSize="16"
                         FontWeight="Medium"
                         Padding="0,4,0,4"
                         Margin="8,0"
                         HorizontalContentAlignment="Center"
                         VerticalContentAlignment="Center"
                         KeyDown="PageNumberTextBox_KeyDown"
                         IsReadOnly="True"
                         />

                <Button x:Name="NextPageButton"
                        Command="{Binding NextPageCommand}"
                        Content=">"
                        Style="{StaticResource MaterialDesignOutlinedButton}"
                        Width="40" Height="32"
                        Margin="2"/>

                <Button x:Name="LastPageButton"
                        Command="{Binding LastPageCommand}"
                        Content="&gt;&gt;"
                        Style="{StaticResource MaterialDesignOutlinedButton}"
                        Width="40" Height="32"
                        Margin="2"/>
            </StackPanel>

            <!-- Records per page -->
            <StackPanel Grid.Column="2" 
                        Orientation="Horizontal"
                        VerticalAlignment="Center">
                <TextBlock Text="Hiển thị"
                           Style="{StaticResource MaterialDesignBody2TextBlock}"
                           VerticalAlignment="Center"
                           Margin="0,0,8,0"/>

                <ComboBox x:Name="RecordsPerPageComboBox"
                          ItemsSource="{x:Static viewModels:DepositManagementViewModel.RecordsPerPageOptions}"
                          SelectedValue="{Binding RecordsPerPage}"
                          Style="{StaticResource MaterialDesignComboBox}"
                          Width="80"
                          Height="32"
                          SelectedIndex="0">
                </ComboBox>

                <TextBlock Text="bản ghi/trang"
                           Style="{StaticResource MaterialDesignBody2TextBlock}"
                           VerticalAlignment="Center"
                           Margin="8,0,0,0"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
