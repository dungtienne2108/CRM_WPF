<Window x:Class="CRM.UI.Views.DepositManagement.AddDepositDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CRM.UI.Views.DepositManagement"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:converters="clr-namespace:CRM.UI.Converters"
        mc:Ignorable="d"
        Title="Thêm đặt cọc"
        Height="700" Width="600"
         WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>
        <converters:StringToIntConverter x:Key="StringToIntConverter"/>
        <converters:StringToDecimalConveter x:Key="StringToDecimalConverter"/>
        <converters:CurrencyFormatConverter x:Key="CurrencyFormatConverter"/>

        <Style x:Key="MaterialCard" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Opacity="0.2" BlurRadius="20" ShadowDepth="5"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="#2196F3"/>
            <Setter Property="Margin" Value="0,16,0,8"/>
        </Style>

        <Style x:Key="MaterialTextBox" TargetType="TextBox" BasedOn="{StaticResource MaterialDesignOutlinedTextBox}">
            <Setter Property="materialDesign:HintAssist.IsFloating" Value="True"/>
            <Setter Property="Height" Value="48"/>
            <Setter Property="Margin" Value="0,8"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style x:Key="MaterialComboBox" TargetType="ComboBox" BasedOn="{StaticResource MaterialDesignOutlinedComboBox}">
            <Setter Property="materialDesign:HintAssist.IsFloating" Value="True"/>
            <Setter Property="Height" Value="48"/>
            <Setter Property="Margin" Value="0,8"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style x:Key="MaterialDatePicker" TargetType="DatePicker" BasedOn="{StaticResource MaterialDesignOutlinedDatePicker}">
            <Setter Property="materialDesign:HintAssist.IsFloating" Value="True"/>
            <Setter Property="Height" Value="48"/>
            <Setter Property="Margin" Value="0,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="SelectedDateFormat" Value="Short"/>
            <Setter Property="Language" Value="vi-VN"/>
            <Setter Property="CalendarStyle" Value="{StaticResource MaterialCalendarNoHeaderStyle}"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0" Background="#2196F3" Height="60">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Thêm thông tin đặt cọc" 
                               Grid.Column="0"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"
                               Margin="24,0"
                               FontSize="20"
                               FontWeight="Medium"
                               Foreground="White"/>
            </Grid>

            <!-- Content -->
            <ScrollViewer Grid.Row="1" 
                            VerticalScrollBarVisibility="Hidden"
                            Margin="24,16">
                <StackPanel>

                    <!-- Thông tin khách hàng -->
                    <TextBlock Text="THÔNG TIN ĐẶT CỌC" Style="{StaticResource SectionHeader}"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Tên cơ hội bán Hàng -->
                        <TextBox Grid.Row="0" Grid.Column="0"
                                     Style="{StaticResource MaterialTextBox}"
                                     materialDesign:HintAssist.Hint="Tên cơ hội bán hàng"
                                     Padding="8,4,8,4"
                                     Margin="0,8,8,8"
                                     VerticalContentAlignment="Center"
                                     Text="{Binding OpportunityName, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                                     IsEnabled="False"
                                     IsReadOnly="True"/>

                        <!-- Khách hàng -->
                        <TextBox Grid.Row="0" Grid.Column="1"
                                      Style="{StaticResource MaterialTextBox}"
                                      materialDesign:HintAssist.Hint="Khách hàng"
                                      Padding="8,4,8,4"
                                      Margin="8,8,0,8"
                                      VerticalContentAlignment="Center"
                                      Text="{Binding CustomerName, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                                      IsEnabled="False"
                                      IsReadOnly="True"
                                      />

                        <!-- Nhân viên -->
                        <TextBox Grid.Row="1" Grid.Column="0"
                                     Style="{StaticResource MaterialTextBox}"
                                     materialDesign:HintAssist.Hint="Nhân viên phụ trách"
                                     Padding="8,4,8,4"
                                     VerticalContentAlignment="Center"
                                     Margin="0,8,8,8"
                                     Text="{Binding EmployeeName, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                                     IsEnabled="False"
                                     IsReadOnly="True"/>

                        <!-- Tên đặt cọc -->
                        <TextBox Grid.Row="1" Grid.Column="1"
                                     Style="{StaticResource MaterialTextBox}"
                                     materialDesign:HintAssist.Hint="Tên đặt cọc"
                                     Padding="8,4,8,4"
                                     Margin="8,8,0,8"
                                     VerticalContentAlignment="Center"
                                     Text="{Binding DepositName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     />

                        <DatePicker Grid.Column="0" Grid.Row="2"
                            SelectedDate="{Binding StartDate, Mode=TwoWay}"
                            materialDesign:HintAssist.Hint="Ngày có hiệu lực"
                            Margin="0,8,8,8"
                            Padding="8,4,8,4"
                            VerticalContentAlignment="Center"
                            Style="{StaticResource MaterialDatePicker}" />

                        <DatePicker Grid.Column="1" Grid.Row="2"
                            SelectedDate="{Binding EndDate, Mode=TwoWay}"
                            materialDesign:HintAssist.Hint="Ngày hết hiệu lực"
                            Margin="8,8,0,8"
                            Padding="8,4,8,4"
                            VerticalContentAlignment="Center"
                            Style="{StaticResource MaterialDatePicker}" />

                        <TextBox Grid.Row="3" Grid.Column="0"
                             Style="{StaticResource MaterialTextBox}"
                             materialDesign:HintAssist.Hint="Tiền đặt cọc (VNĐ)"
                             Padding="8,4,8,4"
                             Margin="0,8,8,8"
                             VerticalContentAlignment="Center"
                             Text="{Binding Amount, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource StringToDecimalConverter}}"
                             />

                        <TextBox Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2"
                                 Height="80"
                             Style="{StaticResource MaterialTextBox}"
                             materialDesign:HintAssist.Hint="Mô tả"
                             Padding="8,4,8,4"
                             Margin="0,8,8,8"
                                 AcceptsReturn="True"
                                 TextWrapping="Wrap"
                             VerticalContentAlignment="Center"
                             Text="{Binding Description, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             />
                    </Grid>

                    <TextBlock Text="THÔNG TIN SẢN PHẨM" Style="{StaticResource SectionHeader}"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <ComboBox Grid.Column="0"
                                   Style="{StaticResource MaterialComboBox}"
                                   materialDesign:HintAssist.Hint="Sản phẩm"
                                   Margin="0,8,8,8"
                                      Padding="8,4,8,4"
                                   ItemsSource="{Binding OpportunityItems}"
                                   SelectedItem="{Binding SelectedOpportunityItem}"
                                   DisplayMemberPath="ProductName"/>

                        <TextBox Grid.Column="1"
                                    Style="{StaticResource MaterialTextBox}"
                                    materialDesign:HintAssist.Hint="Tên dự án"
                                    Margin="8,8,0,8"
                                    Padding="8,4,8,4"
                                     IsReadOnly="True"
                                    Text="{Binding ProjectName}"/>
                    </Grid>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBox Grid.Column="0"
                            Style="{StaticResource MaterialTextBox}"
                            materialDesign:HintAssist.Hint="Số lượng"
                            Margin="0,8,8,8"
                                 Padding="8,4,8,4"
                             IsReadOnly="True"
                            Text="{Binding ProductQuantity}"/>

                        <TextBox Grid.Column="1"
                            Style="{StaticResource MaterialTextBox}"
                            materialDesign:HintAssist.Hint="Giá (VNĐ)"
                            Margin="8,8,0,8"
                                 Padding="8,4,8,4"
                             IsReadOnly="True"
                            Text="{Binding ProductPrice, Converter={StaticResource CurrencyFormatConverter}}"/>

                    </Grid>

                    <!-- Thông tin liên hệ -->
                    <TextBlock Text="THÔNG TIN LIÊN HỆ" Style="{StaticResource SectionHeader}"/>
                       
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <ComboBox Grid.Column="0"
                                   Style="{StaticResource MaterialComboBox}"
                                   materialDesign:HintAssist.Hint="Liên hệ"
                                   Margin="0,8,8,8"
                                      Padding="8,4,8,4"
                                   ItemsSource="{Binding CustomerContacts}"
                                   SelectedItem="{Binding SelectedContact}"
                                   DisplayMemberPath="Name"/>

                        <TextBox Grid.Column="1"
                                    Style="{StaticResource MaterialTextBox}"
                                    materialDesign:HintAssist.Hint="Số điện thoại"
                                    Margin="8,8,0,8"
                                    Padding="8,4,8,4"
                                     IsReadOnly="True"
                                    Text="{Binding ContactPhone}"/>
                    </Grid>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBox Grid.Column="0"
                                Style="{StaticResource MaterialTextBox}"
                                materialDesign:HintAssist.Hint="Email"
                                Margin="0,8,8,8"
                                     Padding="8,4,8,4"
                                 IsReadOnly="True"
                                Text="{Binding ContactEmail}"/>

                        <TextBox Grid.Column="1"
                                Style="{StaticResource MaterialTextBox}"
                                materialDesign:HintAssist.Hint="Loại quan hệ"
                                Margin="8,8,0,8"
                                     Padding="8,4,8,4"
                                 IsReadOnly="True"
                                Text="{Binding ContactType}"/>

                    </Grid>
                   
                </StackPanel>
            </ScrollViewer>

            <!-- Footer -->
            <Border Grid.Row="2" 
                       Background="#FAFAFA"
                       Height="72">
                <StackPanel Orientation="Horizontal" 
                              HorizontalAlignment="Right"
                              VerticalAlignment="Center"
                              Margin="24,0">

                    <Button Content="HỦY"
                              Style="{StaticResource MaterialDesignOutlinedButton}"
                              Width="100"
                              Height="40"
                              Margin="0,0,16,0"
                              Command="{Binding CancelCommand}"/>

                    <Button Content="Lưu"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Width="100" Height="40"
                            Margin="0,0,16,0"
                            HorizontalAlignment="Right"
                            IsEnabled="{Binding CanSave, Converter={StaticResource InverseBooleanConverter}}"
                            Command="{Binding SaveCommand}"/>
                </StackPanel>
            </Border>

        </Grid>
    </Grid>
</Window>
