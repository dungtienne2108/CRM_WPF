<UserControl x:Class="CRM.UI.Views.LeadManagement.LeadManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:local="clr-namespace:CRM.UI.Views.LeadManagement"
             xmlns:viewModels="clr-namespace:CRM.UI.ViewModels.LeadManagement"
             mc:Ignorable="d" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             Background="{DynamicResource MaterialDesignPaper}">
    <UserControl.Resources>
        <!-- Style cho DataGrid Header -->
        <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}">
            <Setter Property="Background" Value="{DynamicResource MaterialDesignToolBarBackground}"/>
            <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBody}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Height" Value="48"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
        </Style>

        <!-- Style cho DataGrid Row -->
        <Style TargetType="DataGridRow" BasedOn="{StaticResource MaterialDesignDataGridRow}">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource MaterialDesignSelection}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style cho ComboBox trong dropdown button -->
        <Style x:Key="StatusComboBoxStyle" TargetType="ComboBox" BasedOn="{StaticResource MaterialDesignComboBox}">
            <Setter Property="Width" Value="140"/>
            <Setter Property="Height" Value="32"/>
        </Style>

        <x:Array x:Key="StatusOptionsArray" Type="sys:String" 
         xmlns:sys="clr-namespace:System;assembly=mscorlib">
            <sys:String>Chưa liên lạc</sys:String>
            <sys:String>Chuyển đổi</sys:String>
            <sys:String>Không chuyển đổi</sys:String>
        </x:Array>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!--Header-->
        <Grid Grid.Row="0" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Tiêu đề -->
            <TextBlock Grid.Column="0" 
                       Text="Danh sách khách hàng tiềm năng"
                       Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                       VerticalAlignment="Center"
                       Margin="0,0,32,0"/>

            <TextBox Grid.Column="1"
                     x:Name="SearchTextBox"
                     Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                     materialDesign:HintAssist.Hint="Tìm kiếm..."
                     materialDesign:TextFieldAssist.HasLeadingIcon="True"
                     materialDesign:TextFieldAssist.LeadingIcon="Search"
                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                     MaxWidth="400"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Center"
                     Margin="16,0"
                     >
                <TextBox.InputBindings>
                    <KeyBinding Key="Enter" Command="{Binding SearchCommand}" />
                </TextBox.InputBindings>
            </TextBox>

        <!--    <Button Grid.Column="2"
            x:Name="ConvertButton"
            Command="{Binding ConvertStageCommand}"  
            Content="Chuyển đổi"
            Style="{StaticResource MaterialDesignRaisedButton}"
            materialDesign:ButtonAssist.CornerRadius="4"
            Height="40"
            Padding="16,0"
            Margin="8,0"
            VerticalAlignment="Center"/> -->

                <!-- Button Tạo mới -->
            <Button Grid.Column="2"
         Margin="0,0,5,0"
         Command="{Binding ExportCommand}"
         Content="Xuất dữ liệu"
         Style="{StaticResource MaterialDesignOutlinedButton}"
         materialDesign:ButtonAssist.CornerRadius="4"
         Height="40"
         Padding="24,0"
         VerticalAlignment="Center"/>

            <Button Grid.Column="3"
                    x:Name="CreateNewButton"
                    Command="{Binding CreateNewCommand}"
                    Content="Tạo mới"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    materialDesign:ButtonAssist.CornerRadius="4"
                    Height="40"
                    Padding="24,0"
                    VerticalAlignment="Center"/>
        </Grid>

        <!--DataGrid-->
        <Border Grid.Row="1"
                Margin="8" Padding="0"
                CornerRadius="0"                
                materialDesign:ElevationAssist.Elevation="Dp4">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="40"/>
                </Grid.ColumnDefinitions>
                
                <DataGrid x:Name="CustomerDataGrid"
                          Grid.Column="0"
                      ItemsSource="{Binding LeadItems}"
                      Style="{StaticResource MaterialDesignDataGrid}"
                      BorderBrush="Gray"
                      BorderThickness="1"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      HeadersVisibility="Column"
                      GridLinesVisibility="All"
                          RowHeight="48"
                      HorizontalGridLinesBrush="{DynamicResource MaterialDesignDivider}"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Auto"
                      SelectedItem="{Binding SelectedLeadItem}"
                          FontSize="14">
                    <DataGrid.Resources>
                        <Style TargetType="DataGridRow">
                            <EventSetter Event="MouseDoubleClick" Handler="DataGridRow_MouseDoubleClick"/>
                        </Style>
                    </DataGrid.Resources>
                    <DataGrid.Columns>
                        <!-- STT -->
                        <DataGridTextColumn Header="STT" 
                                        Binding="{Binding Index}"
                                        Width="0.6*"
                                        IsReadOnly="True"
                                        ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"/>

                        <!-- CheckBox -->
                        <DataGridCheckBoxColumn Header="" 
                                            Binding="{Binding IsSelected}"
                                            Width="0.5*"
                                            ElementStyle="{StaticResource MaterialDesignDataGridCheckBoxColumnStyle}"/>

                        <!-- Mã -->
                        <DataGridTextColumn Header="Mã" 
                                        Binding="{Binding Code}"
                                        Width="1*"
                                        IsReadOnly="True"
                                        ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"/>

                        <!-- Tên -->
                        <DataGridTextColumn Header="Tên" 
                                        Binding="{Binding Name}"
                                        Width="1.5*"
                                        IsReadOnly="True"
                                        ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"/>

                        <!-- Công ty 
                        <DataGridTextColumn Header="Công ty" 
                                        Binding="{Binding Company}"
                                        Width="150"
                                        IsReadOnly="True"
                                        ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"/>
-->
                        <!-- Số điện thoại -->
                        <DataGridTextColumn Header="Số điện thoại" 
                                        Binding="{Binding Phone}"
                                        Width="1.2*"
                                        IsReadOnly="True"
                                        ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"/>

                        <!-- Email -->
                        <DataGridTextColumn Header="Email" 
                                        Binding="{Binding Email}"
                                        Width="1.2*"
                                        IsReadOnly="True"
                                        ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"/>

                        <!-- Nhân sự phụ trách -->
                        <DataGridTextColumn Header="Nhân sự phụ trách" 
                                        Binding="{Binding EmployeeName}"
                                        Width="1.3*"
                                        IsReadOnly="True"
                                        ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"/>

                        <!-- Địa chỉ -->
                        <DataGridTextColumn Header="Địa chỉ" 
                                        Binding="{Binding Address}"
                                        Width="1.5*"
                                        IsReadOnly="True"
                                        ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"/>

                        <!-- Mức độ tiềm năng -->
                        <DataGridTextColumn Header="Mức độ tiềm năng" 
                                        Binding="{Binding PotentialLevel}"
                                        Width="1*"
                                        IsReadOnly="True"
                                        ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"/>

                        <!-- Trạng thái -->
                        <DataGridTextColumn Header="Trạng thái" 
                                        Binding="{Binding CurrentStatusDisplay}"
                                        Width="0.9*"
                                        IsReadOnly="True"
                                        ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"/>
                        
                        <DataGridTextColumn Header="Mô tả" 
                    Binding="{Binding Description}"
                    Width="1.3*"
                    IsReadOnly="True"
                    ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"/>


                        <!-- Dropdown Actions 
                        <DataGridTemplateColumn Header="Trạng thái" Width="150">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button x:Name="StatusButton"
                                        Content="{Binding CurrentStatusDisplay}"
                                        Style="{StaticResource MaterialDesignOutlinedButton}"
                                        Width="110"
                                        Height="32"
                                        Padding="16,0"
                                        HorizontalAlignment="Center"
                                        Click="StatusButton_Click"
                                        Tag="{Binding}">
                                        <Button.ContextMenu>
                                            <ContextMenu Style="{StaticResource MaterialDesignContextMenu}">
                                                <MenuItem Header="Mới" 
Click="StatusMenuItem_Click"
Tag="1"/>
                                                <MenuItem Header="Đã liên hệ" 
Click="StatusMenuItem_Click"
Tag="2"/>
                                                <MenuItem Header="Đã chuyển đổi" 
Click="StatusMenuItem_Click"
Tag="3"/>
                                                <MenuItem Header="Loại bỏ" 
Click="StatusMenuItem_Click"
Tag="4"/>
                                            </ContextMenu>
                                        </Button.ContextMenu>
                                    </Button>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
-->
                    </DataGrid.Columns>

                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="MouseDoubleClick">
                            <i:InvokeCommandAction Command="{Binding OpenDetailCommand}"
                               CommandParameter="{Binding SelectedItem, RelativeSource={RelativeSource AncestorType=DataGrid}}" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </DataGrid>

                <!-- Cột Actions cố định -->
                <Border Grid.Column="1" 
                        
        BorderBrush="Gray"
        BorderThickness="1"
        Background="White">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="48"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Header -->
                        <Border Grid.Row="0" 
                                
                Background="{DynamicResource MaterialDesignToolBarBackground}"
                BorderBrush="{DynamicResource MaterialDesignDivider}"
                BorderThickness="0,0,0,1">
                            <TextBlock Text="" 
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Center"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource MaterialDesignBody}"/>
                        </Border>

                        <!-- ListView cho Actions -->
                        <ListView x:Name="ActionsListView"
                              Grid.Row="1"
                              ItemsSource="{Binding LeadItems}"
                              SelectedItem="{Binding SelectedLeadItem, Mode=TwoWay}"
                              BorderThickness="0"
                              Background="White"
                              ScrollViewer.VerticalScrollBarVisibility="Hidden"
                              ScrollViewer.HorizontalScrollBarVisibility="Disabled">

                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                    <Setter Property="Padding" Value="0"/>
                                    <Setter Property="Margin" Value="0"/>
                                    <Setter Property="Height" Value="48"/> 
                                    <Setter Property="Background" Value="White"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Background" Value="{DynamicResource MaterialDesignSelection}"/>
                                        </Trigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="{DynamicResource MaterialDesignSelection}"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </ListView.ItemContainerStyle>

                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Button Style="{StaticResource MaterialDesignIconButton}"
                                            Width="40"
                                            Height="32"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Click="ActionButton_Click"
                                            Tag="{Binding DataContext, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            >
                                        <Button.ContextMenu>
                                            <ContextMenu Style="{StaticResource MaterialDesignContextMenu}">
                                                <MenuItem Header="Chuyển đổi" 
                                                          IsEnabled="{Binding CanConvertStage}"
                                                          Command="{Binding ConvertStageCommand}"
                                                          CommandParameter="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}">
                                                    <MenuItem.Icon>
                                                        <materialDesign:PackIcon Kind="SwapHorizontal" />
                                                    </MenuItem.Icon>
                                                </MenuItem>
                                                <MenuItem Header="Sửa" 
                                                          Command="{Binding PlacementTarget.DataContext.UpdateSelectedCommand, 
                                                                    RelativeSource={RelativeSource AncestorType=ContextMenu}}"
                                                          CommandParameter="{Binding}"
                                                            >
                                                    <MenuItem.Icon>
                                                        <materialDesign:PackIcon Kind="Pencil" />
                                                    </MenuItem.Icon>
                                                </MenuItem>
                                                <Separator/>
                                                <MenuItem Header="Xóa" 
                                          Tag="{Binding PlacementTarget.Tag, RelativeSource={RelativeSource AncestorType=ContextMenu}}">
                                                    <MenuItem.Icon>
                                                        <materialDesign:PackIcon Kind="Delete" Foreground="Red" />
                                                    </MenuItem.Icon>
                                                </MenuItem>
                                            </ContextMenu>
                                        </Button.ContextMenu>

                                        <!-- Icon ChevronDown -->
                                        <materialDesign:PackIcon Kind="ChevronDown" 
                                                 Width="20" 
                                                 Height="20"/>
                                    </Button>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Grid>
                </Border>
            </Grid>

        </Border>

        <!--Pagi -->
        <Grid Grid.Row="2" Margin="0,16,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Thông tin tổng số -->
            <TextBlock Grid.Column="0"
                       x:Name="TotalRecordsText"
                       Text="{Binding TotalRecordsText}"
                       Style="{StaticResource MaterialDesignBody2TextBlock}"
                       VerticalAlignment="Center"/>

            <!-- nút -->
            <StackPanel Grid.Column="1" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                <Button x:Name="FirstPageButton"
                        Command="{Binding FirstPageCommand}"
                        Content="&lt;&lt;"
                        Style="{StaticResource MaterialDesignOutlinedButton}"
                        Width="40" Height="32"
                        Margin="2"/>

                <Button x:Name="PreviousPageButton"
                        Command="{Binding PreviousPageCommand}"
                        Content="&lt;"
                        Style="{StaticResource MaterialDesignOutlinedButton}"
                        Width="40" Height="32"
                        Margin="2"/>
                
                <TextBox x:Name="PageNumberTextBox"
                         Text="{Binding CurrentPage, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         Width="60" Height="36"
                         FontSize="16"
                         FontWeight="Medium"
                         Padding="0,4,0,4"
                         Margin="8,0"
                         HorizontalContentAlignment="Center"
                         VerticalContentAlignment="Center"
                         KeyDown="PageNumberTextBox_KeyDown"
                         IsReadOnly="True"
                         />

                <Button x:Name="NextPageButton"
                        Command="{Binding NextPageCommand}"
                        Content=">"
                        Style="{StaticResource MaterialDesignOutlinedButton}"
                        Width="40" Height="32"
                        Margin="2"/>

                <Button x:Name="LastPageButton"
                        Command="{Binding LastPageCommand}"
                        Content="&gt;&gt;"
                        Style="{StaticResource MaterialDesignOutlinedButton}"
                        Width="40" Height="32"
                        Margin="2"/>
            </StackPanel>

            <!-- Records per page -->
            <StackPanel Grid.Column="2" 
                        Orientation="Horizontal"
                        VerticalAlignment="Center">
                <TextBlock Text="Hiển thị"
                           Style="{StaticResource MaterialDesignBody2TextBlock}"
                           VerticalAlignment="Center"
                           Margin="0,0,8,0"/>

                <ComboBox x:Name="RecordsPerPageComboBox"
                          ItemsSource="{Binding RecordsPerPageOptions}"
                          SelectedValue="{Binding RecordsPerPage}"
                          Style="{StaticResource MaterialDesignComboBox}"
                          Width="80"
                          Height="32"
                          SelectedIndex="0">
                </ComboBox>

                <TextBlock Text="bản ghi/trang"
                           Style="{StaticResource MaterialDesignBody2TextBlock}"
                           VerticalAlignment="Center"
                           Margin="8,0,0,0"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
