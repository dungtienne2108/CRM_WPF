<Window x:Class="CRM.UI.Views.LeadManagement.ConvertDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CRM.UI.Views.LeadManagement"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:converters="clr-namespace:CRM.UI.Converters"
        mc:Ignorable="d"
        Title="Chuyển đổi khách hàng tiềm năng"
        Height="700" Width="600"
         WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>
        <converters:StringToIntConverter x:Key="StringToIntConverter"/>
        <converters:StringToDecimalConveter x:Key="StringToDecimalConverter"/>
        <converters:CurrencyFormatConverter x:Key="CurrencyFormatConverter"/>

        <Style x:Key="MaterialCard" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Opacity="0.2" BlurRadius="20" ShadowDepth="5"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="#2196F3"/>
            <Setter Property="Margin" Value="0,16,0,8"/>
        </Style>

        <Style x:Key="MaterialTextBox" TargetType="TextBox" BasedOn="{StaticResource MaterialDesignOutlinedTextBox}">
            <Setter Property="materialDesign:HintAssist.IsFloating" Value="True"/>
            <Setter Property="Height" Value="48"/>
            <Setter Property="Margin" Value="0,8"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style x:Key="MaterialComboBox" TargetType="ComboBox" BasedOn="{StaticResource MaterialDesignOutlinedComboBox}">
            <Setter Property="materialDesign:HintAssist.IsFloating" Value="True"/>
            <Setter Property="Height" Value="48"/>
            <Setter Property="Margin" Value="0,8"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style x:Key="MaterialDatePicker" TargetType="DatePicker" BasedOn="{StaticResource MaterialDesignOutlinedDatePicker}">
            <Setter Property="materialDesign:HintAssist.IsFloating" Value="True"/>
            <Setter Property="Height" Value="48"/>
            <Setter Property="Margin" Value="0,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="SelectedDateFormat" Value="Short"/>
            <Setter Property="Language" Value="vi-VN"/>
            <Setter Property="CalendarStyle" Value="{StaticResource MaterialCalendarNoHeaderStyle}"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Grid Grid.Row="0" Background="#2196F3" Height="60">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                <TextBlock Text="Chuyển đổi" 
                               Grid.Column="0"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"
                               Margin="24,0"
                               FontSize="20"
                               FontWeight="Medium"
                               Foreground="White"/>
            </Grid>

                <!-- Content -->
                <ScrollViewer Grid.Row="1" 
                            VerticalScrollBarVisibility="Hidden"
                            Margin="24,16">
                    <StackPanel>

                        <!-- Thông tin khách hàng -->
                        <TextBlock Text="THÔNG TIN KHÁCH HÀNG" Style="{StaticResource SectionHeader}"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                        <!-- ComboBox chọn Kiểu thao tác -->
                            <ComboBox Grid.Row="0" Grid.Column="0"
                                      Style="{StaticResource MaterialComboBox}"
                                      materialDesign:HintAssist.Hint="Kiểu thao tác"
                                      Padding="8,4,8,4"
                                      Margin="0,8,8,8"
                                      SelectedValue="{Binding SelectedTypeAction, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      SelectedValuePath="Content">
                                <ComboBoxItem Content="Khách hàng mới"/>
                                <ComboBoxItem Content="Khách hàng cũ"/>
                            </ComboBox>

                        <ComboBox  Grid.Row="0" Grid.Column="1"
                                        Style="{StaticResource MaterialComboBox}"
                                        IsEditable="True"
                                        materialDesign:HintAssist.Hint="Khách hàng"
                                        Margin="8,8,0,8"
                                        Padding="8,4,8,4"
                                        TextSearch.TextPath="Name"
                                        DisplayMemberPath="Name"
                                        ItemsSource="{Binding CustomerSuggestions}"
                                        SelectedItem="{Binding SelectedCustomer, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        StaysOpenOnEdit="True"
                                        IsTextSearchEnabled="False"
                                        IsDropDownOpen="{Binding IsCustomerDropDownOpen, Mode=TwoWay}"
                                        Visibility="{Binding IsExistingCustomer, Converter={StaticResource BoolToVisConverter}}">
                            <ComboBox.Text>
                                <Binding Path="CustomerSearchKeyword"
                                             Mode="TwoWay"
                                             UpdateSourceTrigger="PropertyChanged">

                                </Binding>
                            </ComboBox.Text>
                        </ComboBox>
                            
                        <!-- Tên Khách Hàng -->
                            <TextBox Grid.Row="0" Grid.Column="1"
                                     Style="{StaticResource MaterialTextBox}"
                                     materialDesign:HintAssist.Hint="Tên Khách Hàng"
                                     Padding="8,4,8,4"
                                     Margin="8,8,0,8"
                                     VerticalContentAlignment="Center"
                                     Text="{Binding NewCustomerName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     Visibility="{Binding IsNewCustomer, Converter={StaticResource BoolToVisConverter}}"/>

                            <!-- Loại Khách hàng -->
                            <ComboBox Grid.Row="1" Grid.Column="0"
                                      Style="{StaticResource MaterialComboBox}"
                                      materialDesign:HintAssist.Hint="Loại Khách hàng"
                                      Padding="8,4,8,4"
                                      Margin="0,8,8,8"
                                      ItemsSource="{Binding DataContext.CustomerTypeOptions,
                                                    RelativeSource={RelativeSource AncestorType=Window}}"
                                      SelectedValue="{Binding NewCustomerTypeId}"
                                      SelectedValuePath="Id"
                                      DisplayMemberPath="Name"
                                      Visibility="{Binding IsNewCustomer, Converter={StaticResource BoolToVisConverter}}"/>
                            
                            <!-- Số điện thoại -->
                            <TextBox Grid.Row="1" Grid.Column="1"
                                     Style="{StaticResource MaterialTextBox}"
                                     materialDesign:HintAssist.Hint="Số điện thoại"
                                     Padding="8,4,8,4"
                                     VerticalContentAlignment="Center"
                                     Margin="8,8,0,8"
                                     Text="{Binding NewCustomerPhone, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     Visibility="{Binding IsNewCustomer, Converter={StaticResource BoolToVisConverter}}"/>

                            <!-- Số căn cước -->
                            <TextBox Grid.Row="2" Grid.Column="0"
                                     Style="{StaticResource MaterialTextBox}"
                                     materialDesign:HintAssist.Hint="Số căn cước"
                                     Padding="8,4,8,4"
                                     Margin="0,8,8,8"
                                     VerticalContentAlignment="Center"
                                     Text="{Binding NewCustomerIdCard, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     Visibility="{Binding IsNewCustomer, Converter={StaticResource BoolToVisConverter}}"/>
                        </Grid>

                    <StackPanel Margin="0,8,0,0">
                        <!-- Nút dấu cộng -->
                        <Button Content="+ Thêm thông tin liên hệ" 
                                Style="{StaticResource MaterialDesignRaisedButton}"
                            Width="200" Height="40"
                            Margin="0,8,0,8"
                                HorizontalAlignment="Left"
                            Command="{Binding AddNewContactCommand}"/>

                        <!-- Danh sách các Contact -->
                        <ItemsControl ItemsSource="{Binding ContactItems}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Margin="0,0,0,16">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <Button Grid.Row="0" Grid.Column="2"
                                                Content="❌"
                                                Width="28" Height="28"
                                                Margin="8,0,0,0"
                                                    Padding="0,4,0,4"
                                                Style="{StaticResource MaterialDesignFlatDarkBgButton}"
                                                Command="{Binding DataContext.RemoveContactItemCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                CommandParameter="{Binding}"/>

                                            <!-- Hàng 1 -->
                                            <TextBox Grid.Row="0" Grid.Column="0"
                                             Style="{StaticResource MaterialTextBox}"
                                             materialDesign:HintAssist.Hint="Tên liên hệ"
                                             Margin="0,8,8,8"
                                                     Padding="8,4,8,4"
                                             Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"/>

                                            <ComboBox Grid.Row="0" Grid.Column="1"
                                              Style="{StaticResource MaterialComboBox}"
                                              materialDesign:HintAssist.Hint="Danh xưng"
                                              Margin="8,8,0,8"
                                                      Padding="8,4,8,4"
                                              ItemsSource="{Binding DataContext.SalutationOptions, 
                                                RelativeSource={RelativeSource AncestorType=Window}}"
                                              SelectedValue="{Binding SalutationId}"
                                              SelectedValuePath="Id"
                                              DisplayMemberPath="Name"/>

                                            <!-- Hàng 2 -->
                                            <TextBox Grid.Row="1" Grid.Column="0"
                                             Style="{StaticResource MaterialTextBox}"
                                             materialDesign:HintAssist.Hint="Email"
                                             Margin="0,8,8,8"
                                                     Padding="8,4,8,4"
                                             Text="{Binding Email}"/>

                                            <TextBox Grid.Row="1" Grid.Column="1"
                                             Style="{StaticResource MaterialTextBox}"
                                             materialDesign:HintAssist.Hint="Số điện thoại"
                                             Margin="8,8,0,8"
                                                     Padding="8,4,8,4"
                                             Text="{Binding Phone}"/>

                                            <!-- Hàng 3 -->
                                            <TextBox Grid.Row="2" Grid.Column="0"
                                             Style="{StaticResource MaterialTextBox}"
                                             materialDesign:HintAssist.Hint="Địa chỉ"
                                             Margin="0,8,8,8"
                                                     Padding="8,4,8,4"
                                             Text="{Binding Address}"/>

                                            <TextBox Grid.Row="2" Grid.Column="1"
                                             Style="{StaticResource MaterialTextBox}"
                                             materialDesign:HintAssist.Hint="Chức vụ"
                                             Margin="8,8,0,8"
                                                     Padding="8,4,8,4"
                                             Text="{Binding Role}"/>

                                            <!-- Hàng 4 
                                            <TextBox Grid.Row="3"
                                             Style="{StaticResource MaterialTextBox}"
                                             materialDesign:HintAssist.Hint="Loại quan hệ"
                                             Margin="0,8,8,8"
                                                     Padding="8,4,8,4"
                                             Text="{Binding Description}"
                                             
                                            />-->
                                            <ComboBox Grid.Row="3" Grid.Column="0"
                                                  Style="{StaticResource MaterialComboBox}"
                                                  materialDesign:HintAssist.Hint="Loại quan hệ"
                                                  Padding="8,4,8,4"
                                                  Margin="0,8,8,8"
                                                  ItemsSource="{Binding DataContext.ContactTypeOptions,
                                                                RelativeSource={RelativeSource AncestorType=Window}}"
                                                  SelectedValue="{Binding ContactTypeId}"
                                                  SelectedValuePath="Id"
                                                  DisplayMemberPath="Name"
                                                  />
                                        </Grid>

                                        <Separator Margin="0,16,0,0"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <Button Content="Lưu thông tin liên hệ"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Width="200" Height="40"
                            Margin="0,24,0,0"
                            HorizontalAlignment="Right"
                            Command="{Binding SaveContactsCommand}"
                                Visibility="Hidden"/>
                    </StackPanel>

                    <!-- Thông tin cơ hội bán hàng -->
                        <TextBlock Text="THÔNG TIN CƠ HỘI BÁN HÀNG" Style="{StaticResource SectionHeader}"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBox Grid.Column="0"
                                Style="{StaticResource MaterialTextBox}"
                                materialDesign:HintAssist.Hint="Tên cơ hội bán hàng"
                                Margin="0,8,8,8"
                                Padding="8,4,8,4"
                                 Text="{Binding OpportunityName}"
                                />

                        <ComboBox Grid.Column="1" 
          Margin="8,8,0,8"
          Padding="8,4,8,4"
          IsEditable="True"
          Style="{StaticResource MaterialComboBox}"
          materialDesign:HintAssist.Hint="Nhân viên phụ trách"
          TextSearch.TextPath="Name"
          DisplayMemberPath="Name"
          ItemsSource="{Binding EmployeeSuggestions}"
          SelectedItem="{Binding SelectedEmployee, Mode=TwoWay}"
          StaysOpenOnEdit="True"
          IsTextSearchEnabled="False"
          IsDropDownOpen="{Binding IsEmployeeDropDownOpen, Mode=TwoWay}">
                            <ComboBox.Text>
                                <Binding Path="EmployeeSearchKeyword" 
                 Mode="TwoWay" 
                 UpdateSourceTrigger="PropertyChanged">
                                </Binding>
                            </ComboBox.Text>
                        </ComboBox>
                    </Grid>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <DatePicker Grid.Column="0"
                                    SelectedDate="{Binding OpportunityStartDate, Mode=TwoWay}"
                                    materialDesign:HintAssist.Hint="Ngày bắt đầu"
                                    Margin="0,8,8,8"
                                    Padding="8,4,8,4"
                                    VerticalContentAlignment="Center"
                                    Style="{StaticResource MaterialDatePicker}" />

                        <DatePicker Grid.Column="1"
                                    SelectedDate="{Binding OpportunityEndDate, Mode=TwoWay}"
                                    materialDesign:HintAssist.Hint="Ngày hết hạn"
                                    Margin="8,8,0,8"
                                    Padding="8,4,8,4"
                                    VerticalContentAlignment="Center"
                                    Style="{StaticResource MaterialDatePicker}" />
                    </Grid>

                    <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <ComboBox Grid.Column="0"
                                   Style="{StaticResource MaterialComboBox}"
                                   materialDesign:HintAssist.Hint="Tên dự án"
                                   Margin="0,8,8,8"
                                      Padding="8,4,8,4"
                                   ItemsSource="{Binding ProjectOptions}"
                                   SelectedValue="{Binding SelectedProjectId}"
                                   SelectedValuePath="ProjectId"
                                   DisplayMemberPath="ProjectName"/>

                            <ComboBox Grid.Column="1"
                               Style="{StaticResource MaterialComboBox}"
                               materialDesign:HintAssist.Hint="Sản phẩm"
                               Margin="8,8,0,8"
                                      Padding="8,4,8,4"
                               ItemsSource="{Binding ProductOptions}"
                               SelectedItem="{Binding SelectedProduct, Mode=TwoWay}"
                               DisplayMemberPath="ProductName"
                                />
                        </Grid>

                        <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                            
                        <ComboBox Grid.Column="1"
    Style="{StaticResource MaterialComboBox}"
    materialDesign:HintAssist.Hint="Trạng thái"
    Margin="8,8,0,8"
          Padding="8,4,8,4"
    ItemsSource="{Binding OpportunityStatusOptions}"
    SelectedValue="{Binding OpportunityStatusId}"
       SelectedValuePath="Id"
       DisplayMemberPath="Name" />


                        <TextBox Grid.Column="0"
                                Style="{StaticResource MaterialTextBox}"
                                materialDesign:HintAssist.Hint="Báo giá"
                                Margin="0,8,8,8"
                                Padding="8,4,8,4"
                                Text="{Binding ExpectedPrice, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource StringToDecimalConverter}}"    />


                    </Grid>

                    <Button Content="Lưu thông tin cơ hội"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        Width="200" Height="40"
                        Margin="0,24,0,0"
                        HorizontalAlignment="Right"
                            Visibility="Hidden"
                        Command="{Binding SaveOpportunityCommand}"/>
                </StackPanel>
                </ScrollViewer>

                <!-- Footer -->
                <Border Grid.Row="2" 
                       Background="#FAFAFA"
                       Height="72">
                    <StackPanel Orientation="Horizontal" 
                              HorizontalAlignment="Right"
                              VerticalAlignment="Center"
                              Margin="24,0">
                        
                    <TextBlock x:Name="ValidationMessageTextBlock"
                               Height="40"
                               Width="200"
                               Margin="0,0,100,0"
                               Style="{StaticResource MaterialDesignCaptionTextBlock}"
                               Foreground="{DynamicResource MaterialDesignValidationErrorBrush}"
                               VerticalAlignment="Center"
                               TextWrapping="Wrap"
                               Visibility="Hidden"
                               Text="{Binding ValidationMessage}"/>

                    <Button Content="HỦY"
                              Style="{StaticResource MaterialDesignOutlinedButton}"
                              Width="100"
                              Height="40"
                              Margin="0,0,16,0"
                              Command="{Binding CancelCommand}"/>

                    <Button Content="LƯU"
                          Style="{StaticResource MaterialDesignRaisedButton}"
                          Width="100"
                          Height="40"
                          Margin="0,0,16,0"
                          Command="{Binding SaveOpportunityCommand}"/>
                </StackPanel>
                </Border>

            </Grid>
    </Grid>
</Window>
