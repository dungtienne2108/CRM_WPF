<Window x:Class="CRM.UI.Views.LeadManagement.LeadDetailView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CRM.UI.Views.LeadManagement"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:converters="clr-namespace:CRM.UI.Converters"
        mc:Ignorable="d"
        Title="Chi tiết khách hàng tiềm năng" Height="800" Width="1400"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        FontFamily="{DynamicResource MaterialDesignFont}">

    <Window.Resources>
        <converters:StatusToColorConverter x:Key="StatusToColorConverter"/>
        <converters:StatusToIndexConverter x:Key="StatusToIndexConverter"/>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:BoolToFontWeightConverter x:Key="BoolToFontWeightConverter"/>
        <converters:InverseBooleanToVisibleConverter x:Key="InverseBoolToVisConverter"/>
        <converters:InverseBoolConverter x:Key="InverseBoolConverter"/>

        <Style x:Key="GroupBoxStyle" TargetType="GroupBox">
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#757575"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

        <Style x:Key="ValueStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Foreground" Value="#212121"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>
        
        <Style x:Key="EditTextBoxStyle" TargetType="TextBox" BasedOn="{StaticResource MaterialDesignOutlinedTextBox}">
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Margin" Value="0,5,0,15"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="materialDesign:HintAssist.HelperTextFontSize" Value="12"/>
            <Style.Triggers>
                
                <Trigger Property="IsKeyboardFocusWithin" Value="True">
                    <Setter Property="BorderBrush" Value="#2196F3"/>
                    <Setter Property="BorderThickness" Value="2"/>
                    <Setter Property="Background" Value="#D9D9D9"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="EditDatePickerStyle" TargetType="DatePicker" BasedOn="{StaticResource MaterialDesignOutlinedDatePicker}">
            <Setter Property="Margin" Value="0,5,0,15"/>
            <Setter Property="FontSize" Value="16" />
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="SelectedDateFormat" Value="Short"/>
            <Setter Property="Language" Value="vi-VN"/>
            <Setter Property="CalendarStyle" Value="{StaticResource NoHeaderStyle}"/>
        </Style>

        <Style x:Key="EditComboBoxStyle" TargetType="ComboBox" BasedOn="{StaticResource MaterialDesignOutlinedComboBox}">
            <Setter Property="Margin" Value="0,5,0,15"/>
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Background" Value="White"/>
        </Style>
    </Window.Resources>

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Dòng 1: Avatar + Name -->
            <RowDefinition Height="Auto"/>
            <!-- Dòng 2: Status Progress -->
            <RowDefinition Height="*"/>
            <!-- Dòng 3: MainContent + Panel phải -->
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                BorderThickness="1" BorderBrush="#E0E0E0"
            Background="White" Padding="20" CornerRadius="4" 
            materialDesign:ElevationAssist.Elevation="Dp4" 
            Margin="20,20,20,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Avatar -->
                <Border Grid.Column="0" Width="60" Height="60" 
                                Background="#2196F3" CornerRadius="30" 
                                VerticalAlignment="Top">
                    <materialDesign:PackIcon Kind="Account" 
                                                   Width="35" Height="35"
                                                   Foreground="White"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"/>
                </Border>

                <!-- Name and Code -->
                <StackPanel Grid.Column="1" Margin="15,0,0,0">
                    <TextBlock Text="Khách hàng tiềm năng" 
                                     FontSize="11" Foreground="#757575"/>
                    <TextBlock Text="{Binding LeadName}" 
                                     FontSize="24" FontWeight="SemiBold" 
                                     Foreground="#212121"/>
                    <TextBlock FontSize="12" Foreground="#757575" Margin="0,5,0,0">
                                <Run Text="Mã:"/>
                                <Run Text="{Binding LeadCode}" FontWeight="SemiBold"/>
                    </TextBlock>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Top">
                    <Button 
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            Command="{Binding ConvertStageCommand}"
                            Height="36"
                            Margin="0,0,10,0"
                        Visibility="{Binding IsConvertStageVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="SwapHorizontalCircleOutline" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                <TextBlock Text="Chuyển đổi" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button.Content>
                    </Button>

                    <Button 
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            Command="{Binding ToggleEditModeCommand}"
                            Height="36"
                            Margin="0,0,10,0">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Pencil" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                <TextBlock Text="Sửa" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button.Content>
                    </Button>

                    <Button 
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        Command="{Binding UpdateLeadCommand}"
                        Visibility="{Binding IsEditMode, Converter={StaticResource BooleanToVisibilityConverter}}"
                        IsEnabled="{Binding IsSaveEnabled}"
                        Height="36"
                        Margin="0,0,10,0">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Pencil" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                <TextBlock Text="Lưu" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button.Content>
                    </Button>

                    <Button 
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            Command="{Binding DeleteCommand}"
                            Height="36"
                            Margin="0,0,10,0"
                            Visibility="{Binding IsDeleteVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Delete" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                <TextBlock Text="Xóa" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button.Content>
                    </Button>
                </StackPanel>
            </Grid>


        </Border>

        <!-- Status Progress Bar -->
        <Border Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                BorderThickness="1" BorderBrush="#E0E0E0"
                        Background="White" Padding="15,10" CornerRadius="4" 
                        materialDesign:ElevationAssist.Elevation="Dp4" Margin="20,0,20,0">
            <Grid Visibility="{Binding IsStatusStepsVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Previous Button -->
                <Button Grid.Column="0" Style="{StaticResource MaterialDesignIconButton}"
                                Command="{Binding PreviousStatusCommand}"
                                ToolTip="Trạng thái trước"
                                Width="28" Height="28"
                                Margin="0,5,10,0">
                    <materialDesign:PackIcon Kind="ChevronLeft" Width="20" Height="20"/>
                </Button>

                <!-- Status Steps -->
                <ItemsControl Grid.Column="1" ItemsSource="{Binding StatusSteps}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Rows="1" VerticalAlignment="Center" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid VerticalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Step Circle and Text -->
                                <StackPanel Grid.Column="1" 
                        Orientation="Vertical" 
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">

                                    <Grid Width="28" Height="28"
                      HorizontalAlignment="Center">
                                        <Ellipse Width="28" Height="28" 
                             StrokeThickness="3">
                                            <Ellipse.Stroke>
                                                <SolidColorBrush Color="{Binding IsCompleted, Converter={StaticResource StatusToColorConverter}}"/>
                                            </Ellipse.Stroke>
                                            <Ellipse.Fill>
                                                <SolidColorBrush Color="{Binding IsCompleted, Converter={StaticResource StatusToColorConverter}}"/>
                                            </Ellipse.Fill>
                                        </Ellipse>
                                        <materialDesign:PackIcon Kind="Check" 
                                             Width="16" Height="16"
                                             Foreground="White"
                                             HorizontalAlignment="Center"
                                             VerticalAlignment="Center"
                                             Visibility="{Binding IsCompleted, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                    </Grid>

                                    <TextBlock Text="{Binding Title}" 
                           Width="100"
                           TextAlignment="Center"
                           TextWrapping="Wrap"
                           Margin="0,6,0,0"
                           FontSize="10"
                           FontWeight="{Binding IsCompleted, Converter={StaticResource BoolToFontWeightConverter}}">
                                        <TextBlock.Foreground>
                                            <SolidColorBrush Color="{Binding IsCompleted, Converter={StaticResource StatusToColorConverter}}"/>
                                        </TextBlock.Foreground>
                                    </TextBlock>

                                    <TextBlock Text="{Binding Subtitle}" 
                           Width="100"
                           TextAlignment="Center"
                           TextWrapping="Wrap"
                           Margin="0,2,0,0"
                           FontSize="9"
                           Foreground="#9E9E9E"/>
                                </StackPanel>

                                <!-- Connector Line -->
                                <Rectangle Grid.Column="2" 
                       Height="2" 
                       VerticalAlignment="Center"
                       HorizontalAlignment="Stretch"
                       Margin="10,0,0,0"
                       Visibility="{Binding IsLast, Converter={StaticResource InverseBoolToVisConverter}}">
                                    <Rectangle.Fill>
                                        <SolidColorBrush Color="{Binding IsCompleted, Converter={StaticResource StatusToColorConverter}}"/>
                                    </Rectangle.Fill>
                                </Rectangle>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- Next Button -->
                <Button Grid.Column="2" Style="{StaticResource MaterialDesignIconButton}"
                                Command="{Binding NextStatusCommand}"
                                ToolTip="Trạng thái tiếp theo"
                                Width="28" Height="28"
                                Margin="10,5,0,0">
                    <materialDesign:PackIcon Kind="ChevronRight" Width="20" Height="20"/>
                </Button>
            </Grid>
        </Border>

        <!--Main Content Area -->
        <ScrollViewer Grid.Row="2" Grid.Column="0" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">
                <!-- Tabs -->
                <TabControl materialDesign:ColorZoneAssist.Mode="PrimaryMid"
                          Style="{StaticResource MaterialDesignFilledTabControl}">

                    <!-- Tab Thông tin -->
                    <TabItem Header="Thông tin khách hàng tiềm năng">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
                            <StackPanel>

                                <!-- Trạng thái khách hàng -->
                                <GroupBox Margin="15" Header="TRẠNG THÁI KHÁCH HÀNG"
                                        Style="{StaticResource GroupBoxStyle}">
                                    <StackPanel>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            <!-- Nhân sự phụ trách -->
                                            <TextBlock Grid.Column="0" Grid.Row="1" Text="Nhân sự phụ trách:" 
                                                       Style="{StaticResource LabelStyle}" 
                                                       VerticalAlignment="Center" 
                                                       FontSize="16" 
                                                       Margin="0,0,15,0"/>
                                            <TextBox Grid.Column="1" Grid.Row="1" 
                                                         Text="{Binding EmployeeName, UpdateSourceTrigger=PropertyChanged}"
                                                         Style="{StaticResource EditTextBoxStyle}" 
                                                         FontSize="16"
                                                         Margin="0,10,20,10"
                                                         IsReadOnly="True"/>

                                            <!-- Trạng thái 
                                            <TextBlock Grid.Column="0" Grid.Row="1" Text="Trạng thái:" 
                                   Style="{StaticResource LabelStyle}" 
                                   VerticalAlignment="Center" 
                                   FontSize="16"
                                   Margin="0,0,15,0"/>
                                            <TextBox Grid.Column="1" Grid.Row="1" 
                                 Text="{Binding Status, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource EditTextBoxStyle}" 
                                 FontSize="16"
                                 Margin="0,10,20,10"
                                 IsEnabled="True"/>-->

                                            <!-- Mức độ tiềm năng -->
                                            <TextBlock Grid.Column="2" Grid.Row="1" Text="Mức độ tiềm năng:" 
                                   Style="{StaticResource LabelStyle}" 
                                   VerticalAlignment="Center" 
                                   FontSize="16"
                                   Margin="0,0,15,0"/>
                                            <ComboBox Grid.Column="3" Grid.Row="1"
                                  Style="{StaticResource EditComboBoxStyle}" 
                                  FontSize="16"
                                  Margin="0,10,20,10"
                                  ItemsSource="{Binding PotentialLevelOptions}"
                                  SelectedValue="{Binding PotentialLevelId}"
                                  SelectedValuePath="Id"
                                  DisplayMemberPath="Name"
                                                      IsDropDownOpen="False"
                                  IsReadOnly="True">
                                                <ComboBox.Text>
                                                    <Binding Path="PotentialLevel" Mode="TwoWay" UpdateSourceTrigger="PropertyChanged"/>
                                                </ComboBox.Text>
                                            </ComboBox>

                                            <!-- Ngày bắt đầu -->
                                            <TextBlock Grid.Column="0" Grid.Row="3" Text="Ngày bắt đầu:" 
                                   Style="{StaticResource LabelStyle}" 
                                   VerticalAlignment="Center" 
                                   FontSize="16"
                                   Margin="0,0,15,0"/>
                                            <DatePicker Grid.Column="1" Grid.Row="3" 
                                    SelectedDate="{Binding StartDate}"
                                    Style="{StaticResource EditDatePickerStyle}" 
                                                        materialDesign:CalendarAssist.IsHeaderVisible="False"
                                    FontSize="16"
                                    Margin="0,10,20,10"
                                                        IsEnabled="True"
                                    />

                                            <TextBlock Grid.Column="2" Grid.Row="2" Text="Ngày kết thúc:" 
                                                        Style="{StaticResource LabelStyle}" 
                                                        VerticalAlignment="Center" 
                                                        FontSize="16"
                                                        Margin="0,0,15,0"/>
                                            <DatePicker Grid.Column="3" Grid.Row="2" 
                                                         SelectedDate="{Binding EndDate}"
                                                         Style="{StaticResource EditDatePickerStyle}" 
                                                         FontSize="16"
                                                         Margin="0,10,20,10"
                                                        IsEnabled="True"
                                                         />

                                        </Grid>
                                    </StackPanel>
                                </GroupBox>

                                <!-- Thông tin khách hàng -->
                                <GroupBox Header="THÔNG TIN KHÁCH HÀNG TIỀM NĂNG"  Margin="15"
                                        Style="{StaticResource GroupBoxStyle}">
                                    <StackPanel>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <!-- Họ tên -->
                                            <TextBlock Grid.Column="0" Grid.Row="0" Text="Họ tên:" 
                                                   Style="{StaticResource LabelStyle}" 
                                                   VerticalAlignment="Center" 
                                                   FontSize="16"
                                                   Margin="0,0,15,0"/>
                                            <TextBox Grid.Column="1" Grid.Row="0" 
                                                 Style="{StaticResource EditTextBoxStyle}"
                                                 Text="{Binding LeadName,
                                                Mode=TwoWay,
                                                UpdateSourceTrigger=PropertyChanged}"
                                                 FontSize="16"
                                                 Margin="0,10,20,10"
                                                 IsReadOnly="{Binding IsEditMode, Converter={StaticResource InverseBoolConverter}}">
                                            </TextBox>
                                       
                                            <!-- Số điện thoại -->
                                            <TextBlock Grid.Column="2" Grid.Row="0" Text="Số điện thoại:" 
                                   Style="{StaticResource LabelStyle}" 
                                   VerticalAlignment="Center" 
                                   FontSize="16"
                                   Margin="0,0,15,0"/>
                                            <TextBox Grid.Column="3" Grid.Row="0" 
                                 Text="{Binding Phone, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource EditTextBoxStyle}" 
                                 FontSize="16"
                                 Margin="0,10,20,10"
                                 IsReadOnly="{Binding IsEditMode, Converter={StaticResource InverseBoolConverter}}"/>

                                            <!-- Email -->
                                            <TextBlock Grid.Column="0" Grid.Row="1" Text="Email:" 
                                   Style="{StaticResource LabelStyle}" 
                                   VerticalAlignment="Center" 
                                   FontSize="16"
                                   Margin="0,0,15,0"/>
                                            <TextBox Grid.Column="1" Grid.Row="1" 
                                 Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource EditTextBoxStyle}" 
                                 FontSize="16"
                                 Margin="0,10,20,10"
                                 IsReadOnly="{Binding IsEditMode, Converter={StaticResource InverseBoolConverter}}"/>

                                           
                                            <!-- Địa chỉ -->
                                            <TextBlock Grid.Column="2" Grid.Row="1" Text="Địa chỉ:" 
                                   Style="{StaticResource LabelStyle}" 
                                   VerticalAlignment="Center" 
                                   FontSize="16"
                                   Margin="0,0,15,0"/>
                                            <TextBox Grid.Column="3" Grid.Row="1" 
                                 Text="{Binding Address, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource EditTextBoxStyle}" 
                                 FontSize="16"
                                 Margin="0,10,20,10"
                                 IsReadOnly="{Binding IsEditMode, Converter={StaticResource InverseBoolConverter}}"/>

                                        </Grid>
                                    </StackPanel>
                                </GroupBox>
                                
                                <!-- Sản phẩm -->
                                
                                <!-- Mô tả -->
                                <GroupBox Header="MÔ TẢ" Style="{StaticResource GroupBoxStyle}" Margin="15">
                                    <StackPanel>
                                        <Grid Margin="0,0,15,0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Column="0" Text="" 
                                   Style="{StaticResource LabelStyle}" 
                                   VerticalAlignment="Top" 
                                   FontSize="16"
                                   Margin="0,10,15,0"/>
                                            <TextBox Grid.Column="1" 
                                 AcceptsReturn="True"
                                 TextWrapping="Wrap"
                                 VerticalScrollBarVisibility="Auto"
                                 Height="80"
                                 FontSize="16"
                                 Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource EditTextBoxStyle}" 
                                 Margin="0,10,20,10"
                                 IsReadOnly="{Binding IsEditMode, Converter={StaticResource InverseBoolConverter}}"/>

                                        </Grid>
                                    </StackPanel>
                                </GroupBox>
                            </StackPanel>
                        </ScrollViewer>
                    </TabItem>
                </TabControl>
            </StackPanel>
        </ScrollViewer>

        
    </Grid>
</Window>
