<Window x:Class="CRM.UI.Views.LeadManagement.AddLeadDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CRM.UI.Views.LeadManagement"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:converters="clr-namespace:CRM.UI.Converters"
        mc:Ignorable="d"
        Title="Thêm khách hàng tiềm năng"
        Height="600" Width="600"
         WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>
        <converters:StringToIntConverter x:Key="StringToIntConverter"/>
        <converters:StringToDecimalConveter x:Key="StringToDecimalConverter"/>

        <Style x:Key="MaterialCard" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Opacity="0.2" BlurRadius="20" ShadowDepth="5"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="#2196F3"/>
            <Setter Property="Margin" Value="0,16,0,8"/>
        </Style>

        <Style x:Key="MaterialTextBox" TargetType="TextBox" BasedOn="{StaticResource MaterialDesignOutlinedTextBox}">
            <Setter Property="materialDesign:HintAssist.IsFloating" Value="True"/>
            <Setter Property="Height" Value="48"/>
            <Setter Property="Margin" Value="0,8"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style x:Key="MaterialComboBox" TargetType="ComboBox" BasedOn="{StaticResource MaterialDesignOutlinedComboBox}">
            <Setter Property="materialDesign:HintAssist.IsFloating" Value="True"/>
            <Setter Property="Height" Value="48"/>
            <Setter Property="Margin" Value="0,8"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style x:Key="MaterialDatePicker" TargetType="DatePicker" BasedOn="{StaticResource MaterialDesignOutlinedDatePicker}">
            <Setter Property="materialDesign:HintAssist.IsFloating" Value="True"/>
            <Setter Property="Height" Value="48"/>
            <Setter Property="Margin" Value="0,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="SelectedDateFormat" Value="Short"/>
            <Setter Property="Language" Value="vi-VN"/>
            <Setter Property="CalendarStyle" Value="{StaticResource MaterialCalendarNoHeaderStyle}"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0" Background="#2196F3" Height="60">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Thêm khách hàng tiềm năng" 
                               Grid.Column="0"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"
                               Margin="24,0"
                               FontSize="20"
                               FontWeight="Medium"
                               Foreground="White"/>
            </Grid>

            <!-- Content -->
            <ScrollViewer Grid.Row="1" 
                            VerticalScrollBarVisibility="Hidden"
                            Margin="24,16">
                <StackPanel>

                    <!-- Thông tin khách hàng -->
                    <TextBlock Text="THÔNG TIN KHÁCH HÀNG TIỀM NĂNG" Style="{StaticResource SectionHeader}"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBox Grid.Row="0" Grid.Column="0"
                                     Style="{StaticResource MaterialTextBox}"
                                     materialDesign:HintAssist.Hint="Tên khách hàng"
                                     Padding="8,4,8,4"
                                     Margin="0,8,8,8"
                                     VerticalContentAlignment="Center"
                                     Text="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     />

                        <ComboBox  Grid.Row="0" Grid.Column="1"
                                   Style="{StaticResource MaterialComboBox}"
                                   IsEditable="True"
                                   materialDesign:HintAssist.Hint="Nhân sự phụ trách"
                                   Margin="8,8,0,8"
                                   Padding="8,4,8,4"
                                   TextSearch.TextPath="Name"
                                   DisplayMemberPath="Name"
                                   ItemsSource="{Binding EmployeeSuggestions}"
                                   SelectedItem="{Binding SelectedEmployee, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                   StaysOpenOnEdit="True"
                                   IsTextSearchEnabled="False"
                                   IsDropDownOpen="{Binding IsEmployeeDropDownOpen, Mode=TwoWay}">
                            <ComboBox.Text>
                                <Binding Path="EmployeeSearchKeyword"
                                                Mode="TwoWay"
                                                UpdateSourceTrigger="PropertyChanged">
                                </Binding>
                            </ComboBox.Text>
                        </ComboBox>

                        <DatePicker Grid.Column="0" Grid.Row="1"
                                    SelectedDate="{Binding StartDate, Mode=TwoWay}"
                                    materialDesign:HintAssist.Hint="Ngày bắt đầu"
                                    Margin="0,8,8,8"
                                    Padding="8,4,8,4"
                                    VerticalContentAlignment="Center"
                                    Style="{StaticResource MaterialDatePicker}" />

                        <DatePicker Grid.Column="1" Grid.Row="1"
                                    SelectedDate="{Binding EndDate, Mode=TwoWay}"
                                    materialDesign:HintAssist.Hint="Ngày kết thúc"
                                    Margin="8,8,0,8"
                                    Padding="8,4,8,4"
                                    VerticalContentAlignment="Center"
                                    Style="{StaticResource MaterialDatePicker}" />

                        <TextBox Grid.Row="2" Grid.Column="0"
                                 Style="{StaticResource MaterialTextBox}"
                                 materialDesign:HintAssist.Hint="Số điện thoại"
                                 Padding="8,4,8,4"
                                 Margin="0,8,8,8"
                                 VerticalContentAlignment="Center"
                                 Text="{Binding Phone, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 />

                        <TextBox Grid.Row="2" Grid.Column="1"
                                 Style="{StaticResource MaterialTextBox}"
                                 materialDesign:HintAssist.Hint="Email"
                                 Padding="8,4,8,4"
                                 Margin="8,8,0,8"
                                 VerticalContentAlignment="Center"
                                 Text="{Binding Email, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 />

                        <ComboBox Grid.Column="0" Grid.Row="3"
                                   Style="{StaticResource MaterialComboBox}"
                                   materialDesign:HintAssist.Hint="Mức độ tiềm năng"
                                   Margin="0,8,8,8"
                                      Padding="8,4,8,4"
                                   ItemsSource="{Binding PotentialLevelOptions}"
                                   SelectedValue="{Binding PotentialLevelId}"
                                   SelectedValuePath="Id"
                                   DisplayMemberPath="Name"/>

                        <ComboBox Grid.Column="1" Grid.Row="3"
                                   Style="{StaticResource MaterialComboBox}"
                                   materialDesign:HintAssist.Hint="Nguồn"
                                   Margin="8,8,0,8"
                                      Padding="8,4,8,4"
                                   ItemsSource="{Binding SourceOptions}"
                                   SelectedValue="{Binding SourceId}"
                                   SelectedValuePath="Id"
                                   DisplayMemberPath="Name"/>

                        <TextBox Grid.Row="4" Grid.Column="0"
                                 Style="{StaticResource MaterialTextBox}"
                                 materialDesign:HintAssist.Hint="Địa chỉ"
                                 Padding="8,4,8,4"
                                 Margin="0,8,8,8"
                                 VerticalContentAlignment="Center"
                                 Text="{Binding Address, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 />

                        <ComboBox  Grid.Row="4" Grid.Column="1"
           Style="{StaticResource MaterialComboBox}"
           IsEditable="True"
           materialDesign:HintAssist.Hint="Dự án"
           Margin="8,8,0,8"
           Padding="8,4,8,4"
           TextSearch.TextPath="ProjectName"
           DisplayMemberPath="ProjectName"
           ItemsSource="{Binding ProjectSuggestions}"
           SelectedItem="{Binding SelectedProject, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
           StaysOpenOnEdit="True"
           IsTextSearchEnabled="False"
           IsDropDownOpen="{Binding IsProjectDropDownOpen, Mode=TwoWay}">
                            <ComboBox.Text>
                                <Binding Path="ProjectSearchKeyword"
                    Mode="TwoWay"
                    UpdateSourceTrigger="PropertyChanged">
                                </Binding>
                            </ComboBox.Text>
                        </ComboBox>

                        <ComboBox Grid.Column="0" Grid.Row="5"
           Style="{StaticResource MaterialComboBox}"
           materialDesign:HintAssist.Hint="Sản phẩm"
           Margin="0,8,8,8"
              Padding="8,4,8,4"
           ItemsSource="{Binding ProductOptions}"
           SelectedItem="{Binding SelectedProduct, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
           DisplayMemberPath="ProductName"/>

                        <TextBox Grid.Row="5" Grid.Column="1"
         Style="{StaticResource MaterialTextBox}"
         materialDesign:HintAssist.Hint="Giá"
         Padding="8,4,8,4"
         Margin="8,8,0,8"
         VerticalContentAlignment="Center"
         Text="{Binding Price, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
         />
                    </Grid>
                </StackPanel>
            </ScrollViewer>

            <!-- Footer -->
            <Border Grid.Row="2" 
                       Background="#FAFAFA"
                       Height="72">
                <StackPanel Orientation="Horizontal" 
                              HorizontalAlignment="Right"
                              VerticalAlignment="Center"
                              Margin="24,0">

                    <Button Content="HỦY"
                              Style="{StaticResource MaterialDesignOutlinedButton}"
                              Width="100"
                              Height="40"
                              Margin="0,0,16,0"
                              Command="{Binding CancelCommand}"/>

                    <Button Content="Lưu"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Width="100" Height="40"
                            Margin="0,0,16,0"
                            HorizontalAlignment="Right"
                            Command="{Binding SaveCommand}"/>
                </StackPanel>
            </Border>

        </Grid>
    </Grid>
</Window>
