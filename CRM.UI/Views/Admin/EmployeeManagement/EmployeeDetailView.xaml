<Window x:Class="CRM.UI.Views.Admin.EmployeeManagement.EmployeeDetailView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CRM.UI.Views.Admin.EmployeeManagement"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:converters="clr-namespace:CRM.UI.Converters"
        mc:Ignorable="d"
        Title="Chi tiết nhân viên" Height="800" Width="1400"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        FontFamily="{DynamicResource MaterialDesignFont}">
    <Window.Resources>
        <converters:StatusToColorConverter x:Key="StatusToColorConverter"/>
        <converters:StatusToIndexConverter x:Key="StatusToIndexConverter"/>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:BoolToFontWeightConverter x:Key="BoolToFontWeightConverter"/>
        <converters:InverseBooleanToVisibleConverter x:Key="InverseBoolToVisConverter"/>
        <converters:InverseBoolConverter x:Key="InverseBoolConverter"/>

        <Style x:Key="GroupBoxStyle" TargetType="GroupBox">
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#757575"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

        <Style x:Key="ValueStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Foreground" Value="#212121"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>

        <Style x:Key="EditTextBoxStyle" TargetType="TextBox" BasedOn="{StaticResource MaterialDesignOutlinedTextBox}">
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Margin" Value="0,5,0,15"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Background" Value="White"/>
        </Style>

        <Style x:Key="EditDatePickerStyle" TargetType="DatePicker" BasedOn="{StaticResource MaterialDesignOutlinedDatePicker}">
            <Setter Property="Margin" Value="0,5,0,15"/>
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="SelectedDateFormat" Value="Short"/>
            <Setter Property="Language" Value="vi-VN"/>
            <Setter Property="CalendarStyle" Value="{StaticResource NoHeaderStyle}"/>
        </Style>

        <Style x:Key="EditComboBoxStyle" TargetType="ComboBox" BasedOn="{StaticResource MaterialDesignOutlinedComboBox}">
            <Setter Property="Margin" Value="0,5,0,15"/>
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Background" Value="White"/>
        </Style>
    </Window.Resources>

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Dòng 1: Avatar + Name -->
            <RowDefinition Height="Auto"/>
            <!-- Dòng 2: Status Progress -->
            <RowDefinition Height="*"/>
            <!-- Dòng 3: MainContent + Panel phải -->
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
    Background="White" Padding="20" CornerRadius="4" 
                BorderThickness="1" BorderBrush="#E0E0E0"
    materialDesign:ElevationAssist.Elevation="Dp4" 
    Margin="20,20,20,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Avatar -->
                <Border Grid.Column="0" Width="60" Height="60" 
                        Background="#2196F3" CornerRadius="30" 
                        VerticalAlignment="Top">
                    <materialDesign:PackIcon Kind="Account" 
                                           Width="35" Height="35"
                                           Foreground="White"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                </Border>

                <!-- Name and Code -->
                <StackPanel Grid.Column="1" Margin="15,0,0,0">
                    <TextBlock Text="Nhân viên" 
                             FontSize="11" Foreground="#757575"/>
                    <TextBlock Text="{Binding EmployeeName}" 
                             FontSize="24" FontWeight="SemiBold" 
                             Foreground="#212121"/>
                    <TextBlock FontSize="12" Foreground="#757575" Margin="0,5,0,0">
                        <Run Text="Mã:"/>
                        <Run Text="{Binding EmployeeCode}" FontWeight="SemiBold"/>
                    </TextBlock>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Top">
                    <Button 
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    Command="{Binding ToggleEditModeCommand}"
                    Height="36"
                    Margin="0,0,10,0">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Pencil" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                <TextBlock Text="Sửa" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button.Content>
                    </Button>

                    <Button 
                Style="{StaticResource MaterialDesignRaisedButton}"
                Command="{Binding SaveCommand}"
                Visibility="{Binding IsEditMode, Converter={StaticResource BooleanToVisibilityConverter}}"
                Height="36"
                Margin="0,0,10,0">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Pencil" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                <TextBlock Text="Lưu" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button.Content>
                    </Button>

                    <Button 
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    Command="{Binding DeleteCommand}"
                    Height="36"
                    Margin="0,0,10,0"
                    Visibility="{Binding IsDeleteVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Delete" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                <TextBlock Text="Xóa" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button.Content>
                    </Button>
                </StackPanel>
            </Grid>


        </Border>

        <!--Main Content Area -->
        <ScrollViewer Grid.Row="2" Grid.Column="0" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">
                <!-- Tabs -->
                <TabControl materialDesign:ColorZoneAssist.Mode="PrimaryMid"
                  Style="{StaticResource MaterialDesignFilledTabControl}">

                    <!-- Tab Thông tin -->
                    <TabItem Header="Thông tin">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
                            <StackPanel>
                                <!-- Thông tin khách hàng -->
                                <GroupBox Header="THÔNG TIN KHÁCH HÀNG"  Margin="15"
                                          Background="White"
                                Style="{StaticResource GroupBoxStyle}">
                                    <StackPanel>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <!-- Họ tên -->
                                            <TextBlock Grid.Column="0" Grid.Row="0" Text="Họ tên:" 
                                           Style="{StaticResource LabelStyle}" 
                                           VerticalAlignment="Center" 
                                           FontSize="16"
                                           Margin="0,0,15,0"/>
                                            <TextBox Grid.Column="1" Grid.Row="0" 
                                         Style="{StaticResource EditTextBoxStyle}"
                                         Text="{Binding EmployeeName,
                                        Mode=TwoWay,
                                        UpdateSourceTrigger=PropertyChanged,
                                        ValidatesOnDataErrors=True,
                                        ValidatesOnNotifyDataErrors=True,
                                        NotifyOnValidationError=True}"
                                         FontSize="16"
                                         Margin="0,10,20,10"
                                         IsReadOnly="{Binding IsEditMode, Converter={StaticResource InverseBoolConverter}}">
                                            </TextBox>

                                            <!-- Loại khách -->
                                            <TextBlock Grid.Column="2" Grid.Row="0" Text="Chức vụ:" 
                                                     Style="{StaticResource LabelStyle}" 
                                                     VerticalAlignment="Center" 
                                                     FontSize="16"
                                                     Margin="0,0,15,0"/>
                                            <ComboBox Grid.Column="3" Grid.Row="0" 
                                                Text="{Binding EmployeeLevel, UpdateSourceTrigger=PropertyChanged}"
                                                Style="{StaticResource EditComboBoxStyle}" 
                                                FontSize="16"
                                                Margin="0,10,20,10"
                                                ItemsSource="{Binding EmployeeLevelOptions}"
                                                SelectedValue="{Binding EmployeeLevelId}"
                                                SelectedValuePath="Id"
                                                DisplayMemberPath="Name"
                                                IsReadOnly="{Binding IsEditMode, Converter={StaticResource InverseBoolConverter}}"/>


                                            <!-- Giới tính -->
                                            <TextBlock Grid.Column="0" Grid.Row="1" Text="Căn cước:" 
                                                   Style="{StaticResource LabelStyle}" 
                                                   VerticalAlignment="Center" 
                                                   FontSize="16"
                                                   Margin="0,0,15,0"/>
                                            <TextBox Grid.Column="1" Grid.Row="1" 
                                                     Text="{Binding EmployeeIdentityCard, UpdateSourceTrigger=PropertyChanged}"
                                                     Style="{StaticResource EditTextBoxStyle}" 
                                                     FontSize="16"
                                                     Margin="0,10,20,10"
                                                     IsReadOnly="{Binding IsEditMode, Converter={StaticResource InverseBoolConverter}}"/>

                                            <!-- Số điện thoại -->
                                            <TextBlock Grid.Column="2" Grid.Row="1" Text="Số điện thoại:" 
                           Style="{StaticResource LabelStyle}" 
                           VerticalAlignment="Center" 
                           FontSize="16"
                           Margin="0,0,15,0"/>
                                            <TextBox Grid.Column="3" Grid.Row="1" 
                         Text="{Binding EmployeePhone, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource EditTextBoxStyle}" 
                         FontSize="16"
                         Margin="0,10,20,10"
                         IsReadOnly="{Binding IsEditMode, Converter={StaticResource InverseBoolConverter}}"/>

                                            <!-- Email -->
                                            <TextBlock Grid.Column="0" Grid.Row="2" Text="Email:" 
                           Style="{StaticResource LabelStyle}" 
                           VerticalAlignment="Center" 
                           FontSize="16"
                           Margin="0,0,15,0"/>
                                            <TextBox Grid.Column="1" Grid.Row="2" 
                         Text="{Binding EmployeeEmail, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource EditTextBoxStyle}" 
                         FontSize="16"
                         Margin="0,10,20,10"
                         IsReadOnly="{Binding IsEditMode, Converter={StaticResource InverseBoolConverter}}"/>

                                            <!-- Địa chỉ -->
                                            <TextBlock Grid.Column="2" Grid.Row="2" Text="Địa chỉ:" 
                           Style="{StaticResource LabelStyle}" 
                           VerticalAlignment="Center" 
                           FontSize="16"
                           Margin="0,0,15,0"/>
                                            <TextBox Grid.Column="3" Grid.Row="2" 
                         Text="{Binding EmployeeAddress, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource EditTextBoxStyle}" 
                         FontSize="16"
                         Margin="0,10,20,10"
                         IsReadOnly="{Binding IsEditMode, Converter={StaticResource InverseBoolConverter}}"/>

                                            <TextBlock Grid.Column="0" Grid.Row="3" Text="Giới tính" 
                                                       Style="{StaticResource LabelStyle}"
                                                       VerticalAlignment="Center"
                                                       FontSize="16"
                                                       Margin="0,0,15,0"/>
                                            <ComboBox Grid.Column="1" Grid.Row="3" 
                                                    Text="{Binding Gender, UpdateSourceTrigger=PropertyChanged}"
                                                    Style="{StaticResource EditComboBoxStyle}" 
                                                    FontSize="16"
                                                    Margin="0,10,20,10"
                                                    ItemsSource="{Binding GenderOptions}"
                                                    SelectedValue="{Binding GenderId}"
                                                    SelectedValuePath="Id"
                                                    DisplayMemberPath="Name"
                                                    IsReadOnly="{Binding IsEditMode, Converter={StaticResource InverseBoolConverter}}"/>

                                            <TextBlock Grid.Column="2" Grid.Row="3" Text="Ngày sinh:" 
                                                    Style="{StaticResource LabelStyle}" 
                                                    VerticalAlignment="Center" 
                                                    FontSize="16"
                                                    Margin="0,0,15,0"/>
                                            <DatePicker Grid.Column="3" Grid.Row="3" 
                                                         SelectedDate="{Binding EmployeeBirthday}"
                                                         Style="{StaticResource EditDatePickerStyle}" 
                                                        materialDesign:CalendarAssist.IsHeaderVisible="False"
                                                         FontSize="16"
                                                         Margin="0,10,20,10"
                                                                 IsEnabled="True"
                                             />
                                        </Grid>
                                    </StackPanel>
                                </GroupBox>

                                <!-- Mô tả -->
                                <GroupBox Header="MÔ TẢ" Style="{StaticResource GroupBoxStyle}" Margin="15" Background="White">
                                    <StackPanel>
                                        <Grid Margin="0,0,15,0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Column="0" Text="" 
                           Style="{StaticResource LabelStyle}" 
                           VerticalAlignment="Top" 
                           FontSize="16"
                           Margin="0,10,15,0"/>
                                            <TextBox Grid.Column="1" 
                         AcceptsReturn="True"
                         TextWrapping="Wrap"
                         VerticalScrollBarVisibility="Auto"
                         Height="120"
                         FontSize="16"
                         Text="{Binding EmployeeDescription, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource EditTextBoxStyle}" 
                         Margin="0,10,20,10"
                         IsReadOnly="{Binding IsEditMode, Converter={StaticResource InverseBoolConverter}}"/>

                                        </Grid>
                                    </StackPanel>
                                </GroupBox>
                            </StackPanel>
                        </ScrollViewer>
                    </TabItem>
                </TabControl>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
