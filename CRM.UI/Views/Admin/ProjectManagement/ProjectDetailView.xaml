<Window x:Class="CRM.UI.Views.Admin.ProjectManagement.ProjectDetailView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CRM.UI.Views.Admin.ProjectManagement"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:converters="clr-namespace:CRM.UI.Converters"
        mc:Ignorable="d"
        Title="Chi tiết dự án" Height="800" Width="1400"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        FontFamily="{DynamicResource MaterialDesignFont}">
    <Window.Resources>
        <converters:StatusToColorConverter x:Key="StatusToColorConverter"/>
        <converters:StatusToIndexConverter x:Key="StatusToIndexConverter"/>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:BoolToFontWeightConverter x:Key="BoolToFontWeightConverter"/>
        <converters:InverseBooleanToVisibleConverter x:Key="InverseBoolToVisConverter"/>
        <converters:InverseBoolConverter x:Key="InverseBoolConverter"/>
        <converters:StringToDecimalConveter x:Key="StringToDecimalConverter"/>

        <Style x:Key="GroupBoxStyle" TargetType="GroupBox">
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#757575"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

        <Style x:Key="ValueStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Foreground" Value="#212121"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>

        <Style x:Key="EditTextBoxStyle" TargetType="TextBox" BasedOn="{StaticResource MaterialDesignOutlinedTextBox}">
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Margin" Value="0,5,0,15"/>
            <Setter Property="Padding" Value="6"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Background" Value="White"/>
        </Style>

        <Style x:Key="EditDatePickerStyle" TargetType="DatePicker" BasedOn="{StaticResource MaterialDesignOutlinedDatePicker}">
            <Setter Property="Margin" Value="0,5,0,15"/>
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="SelectedDateFormat" Value="Short"/>
            <Setter Property="Language" Value="vi-VN"/>
            <Setter Property="CalendarStyle" Value="{StaticResource NoHeaderStyle}"/>
        </Style>

        <Style x:Key="EditComboBoxStyle" TargetType="ComboBox" BasedOn="{StaticResource MaterialDesignOutlinedComboBox}">
            <Setter Property="Margin" Value="0,5,0,15"/>
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Background" Value="White"/>
        </Style>
    </Window.Resources>

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Dòng 1: Avatar + Name -->
            <RowDefinition Height="Auto"/>
            <!-- Dòng 2: Status Progress -->
            <RowDefinition Height="*"/>
            <!-- Dòng 3: MainContent + Panel phải -->
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
        Background="White" Padding="20" CornerRadius="4" 
                BorderThickness="1" BorderBrush="#E0E0E0"
        materialDesign:ElevationAssist.Elevation="Dp4" 
        Margin="20,20,20,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Avatar -->
                <Border Grid.Column="0" Width="60" Height="60" 
                            Background="#2196F3" CornerRadius="30" 
                            VerticalAlignment="Top">
                    <materialDesign:PackIcon Kind="Account" 
                                               Width="35" Height="35"
                                               Foreground="White"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                </Border>

                <!-- Name and Code -->
                <StackPanel Grid.Column="1" Margin="15,0,0,0">
                    <TextBlock Text="Dự án" 
                                 FontSize="11" Foreground="#757575"/>
                    <TextBlock Text="{Binding ProjectName}" 
                                 FontSize="24" FontWeight="SemiBold" 
                                 Foreground="#212121"/>
                    <TextBlock FontSize="12" Foreground="#757575" Margin="0,5,0,0">
                            <Run Text="{Binding ProjectCode}"/>
                            <Run Text="PRJ001" FontWeight="SemiBold"/>
                    </TextBlock>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Top">
                    <Button 
                        Style="{StaticResource MaterialDesignOutlinedButton}"
                        Command="{Binding ToggleEditModeCommand}"
                        Height="36"
                        Margin="0,0,10,0">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Pencil" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                <TextBlock Text="Sửa" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button.Content>
                    </Button>

                    <Button 
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Command="{Binding SaveCommand}"
                    Visibility="{Binding IsEditMode, Converter={StaticResource BooleanToVisibilityConverter}}"
                    Height="36"
                    Margin="0,0,10,0">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Pencil" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                <TextBlock Text="Lưu" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button.Content>
                    </Button>

                    <Button 
                        Style="{StaticResource MaterialDesignOutlinedButton}"
                        Command="{Binding DeleteCommand}"
                        Height="36"
                        Margin="0,0,10,0"
                        Visibility="{Binding IsDeleteVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Delete" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                <TextBlock Text="Xóa" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button.Content>
                    </Button>
                </StackPanel>
            </Grid>


        </Border>

        <!--Main Content Area -->
        <ScrollViewer Grid.Row="2" Grid.Column="0" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">
                <!-- Tabs -->
                <TabControl materialDesign:ColorZoneAssist.Mode="PrimaryMid"
                      Style="{StaticResource MaterialDesignFilledTabControl}">

                    <!-- Tab Thông tin -->
                    <TabItem Header="Thông tin">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
                            <StackPanel>
                                <!-- Phần GroupBox chứa DataGrid sản phẩm -->
                                <GroupBox Header="SẢN PHẨM" Style="{StaticResource GroupBoxStyle}" Margin="15">

                                    <StackPanel>

                                        <Button Content="➕ Thêm mới"
                                                Width="120"
                                                Height="35"
                                                HorizontalAlignment="Right"
                                                Margin="0,0,0,10"
                                                Command="{Binding AddProductCommand}"
                                                Style="{StaticResource MaterialDesignRaisedButton}"
                                                />

                                        <DataGrid ItemsSource="{Binding Products}"
              AutoGenerateColumns="False"
              CanUserAddRows="False"
              CanUserDeleteRows="False"
              IsReadOnly="True"
              HeadersVisibility="Column"
              GridLinesVisibility="Horizontal"
              SelectionMode="Single"
              FontSize="14"
              RowHeight="40"
                                                  SelectedItem="{Binding SelectedProduct}"
              materialDesign:DataGridAssist.CellPadding="8"
              materialDesign:DataGridAssist.ColumnHeaderPadding="8">
                                            <DataGrid.Columns>
                                                <DataGridTextColumn Header="Mã căn" 
                                Binding="{Binding Code}" 
                                Width="0.6*"
                                MinWidth="80"/>
                                                <DataGridTextColumn Header="Tên sản phẩm" 
                                Binding="{Binding Name}" 
                                Width="1.5*"
                                MinWidth="120"/>
                                                <DataGridTextColumn Header="Số tầng" 
                                Binding="{Binding Floors}" 
                                Width="0.6*"
                                MinWidth="70"/>
                                                <DataGridTextColumn Header="Diện tích" 
                                Binding="{Binding Area}" 
                                Width="0.8*"
                                MinWidth="90"/>
                                                <DataGridTextColumn Header="Giá gốc" 
                                Binding="{Binding Price, Converter={StaticResource StringToDecimalConverter}}" 
                                Width="1*"
                                MinWidth="110"/>
                                                <DataGridTextColumn Header="Trạng thái" 
                                Binding="{Binding ProductStatusName}" 
                                Width="0.9*"
                                MinWidth="100"/>
                                                <DataGridTextColumn Header="Loại sản phẩm" 
                                Binding="{Binding ProductTypeName}" 
                                Width="0.9*"
                                MinWidth="100"/>
                                            </DataGrid.Columns>
                                            <i:Interaction.Triggers>
                                                <i:EventTrigger EventName="MouseDoubleClick">
                                                    <i:InvokeCommandAction Command="{Binding OpenDetailCommand}"
                                                        CommandParameter="{Binding SelectedItem, RelativeSource={RelativeSource AncestorType=DataGrid}}" />
                                                </i:EventTrigger>
                                            </i:Interaction.Triggers>
                                        </DataGrid>
                                    </StackPanel>
                                </GroupBox>
                                <!-- Mô tả -->
                                <GroupBox Header="MÔ TẢ" Style="{StaticResource GroupBoxStyle}" Margin="15">
                                    <StackPanel>
                                        <Grid Margin="0,0,15,0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Column="0" Text="" 
                               Style="{StaticResource LabelStyle}" 
                               VerticalAlignment="Top" 
                               FontSize="16"
                               Margin="0,10,15,0"/>
                                            <TextBox Grid.Column="1" 
                             AcceptsReturn="True"
                             TextWrapping="Wrap"
                             VerticalScrollBarVisibility="Auto"
                             Height="120"
                             FontSize="16"
                             Text="{Binding ProjectDescription, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource EditTextBoxStyle}" 
                             Margin="0,10,20,10"
                             IsReadOnly="{Binding IsEditMode, Converter={StaticResource InverseBoolConverter}}"/>

                                        </Grid>
                                    </StackPanel>
                                </GroupBox>
                            </StackPanel>
                        </ScrollViewer>
                    </TabItem>
                </TabControl>
            </StackPanel>
        </ScrollViewer>


    </Grid>
</Window>
