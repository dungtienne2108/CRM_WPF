<Window x:Class="CRM.UI.Views.ContractManagement.AddPaymentScheduleDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CRM.UI.Views.ContractManagement"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:converters="clr-namespace:CRM.UI.Converters"
        mc:Ignorable="d"
        Title="Thêm lịch trình thanh toán"
        Height="600" Width="600"
         WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>
        <converters:StringToIntConverter x:Key="StringToIntConverter"/>
        <converters:StringToDecimalConveter x:Key="StringToDecimalConverter"/>
        <converters:CurrencyFormatConverter x:Key="CurrencyFormatConverter"/>
        <converters:PercentageConverter x:Key="PercentageConverter"/>

        <Style x:Key="MaterialCard" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Opacity="0.2" BlurRadius="20" ShadowDepth="5"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="#2196F3"/>
            <Setter Property="Margin" Value="0,16,0,8"/>
        </Style>

        <Style x:Key="MaterialTextBox" TargetType="TextBox" BasedOn="{StaticResource MaterialDesignOutlinedTextBox}">
            <Setter Property="materialDesign:HintAssist.IsFloating" Value="True"/>
            <Setter Property="Height" Value="48"/>
            <Setter Property="Margin" Value="0,8"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style x:Key="MaterialComboBox" TargetType="ComboBox" BasedOn="{StaticResource MaterialDesignOutlinedComboBox}">
            <Setter Property="materialDesign:HintAssist.IsFloating" Value="True"/>
            <Setter Property="Height" Value="48"/>
            <Setter Property="Margin" Value="0,8"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style x:Key="MaterialDatePicker" TargetType="DatePicker" BasedOn="{StaticResource MaterialDesignOutlinedDatePicker}">
            <Setter Property="materialDesign:HintAssist.IsFloating" Value="True"/>
            <Setter Property="Height" Value="48"/>
            <Setter Property="Margin" Value="0,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="SelectedDateFormat" Value="Short"/>
            <Setter Property="Language" Value="vi-VN"/>
            <Setter Property="CalendarStyle" Value="{StaticResource MaterialCalendarNoHeaderStyle}"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0" Background="#2196F3" Height="60">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Thêm lịch trình thanh toán" 
                               Grid.Column="0"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"
                               Margin="24,0"
                               FontSize="20"
                               FontWeight="Medium"
                               Foreground="White"/>
            </Grid>

            <!-- Content -->
            <ScrollViewer Grid.Row="1" 
                            VerticalScrollBarVisibility="Hidden"
                            Margin="24,16">
                <StackPanel>

                    <!-- Thông tin khách hàng -->
                    <TextBlock Text="THÔNG TIN CHUNG" Style="{StaticResource SectionHeader}"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
      
                    <!--    <ComboBox  Grid.Row="0" Grid.Column="0"
                            Style="{StaticResource MaterialComboBox}"
                            IsEditable="True"
                            materialDesign:HintAssist.Hint="Hợp đồng"
                            Margin="0,8,8,8"
                            Padding="8,4,8,4"
                            TextSearch.TextPath="Name"
                            DisplayMemberPath="Name"
                            ItemsSource="{Binding CustomerSuggestions}"
                            SelectedItem="{Binding SelectedCustomer, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            StaysOpenOnEdit="True"
                            IsTextSearchEnabled="False"
                            IsDropDownOpen="{Binding IsCustomerDropDownOpen, Mode=TwoWay}"
                            Visibility="{Binding IsExistingCustomer, Converter={StaticResource BoolToVisConverter}}">
                            <ComboBox.Text>
                                <Binding Path="CustomerSearchKeyword"
                                         Mode="TwoWay"
                                         UpdateSourceTrigger="PropertyChanged">

                                </Binding>
                            </ComboBox.Text>
                        </ComboBox> -->

                        <TextBox Grid.Row="0" Grid.Column="0"
                              Style="{StaticResource MaterialTextBox}"
                              materialDesign:HintAssist.Hint="Số hợp đồng"
                              Padding="8,4,8,4"
                              Margin="0,8,8,8"
                                 IsReadOnly="True"
                              VerticalContentAlignment="Center"
                              Text="{Binding ContractNumber}"                                     
                                />

                        <TextBox Grid.Row="0" Grid.Column="1"
                          Style="{StaticResource MaterialTextBox}"
                          materialDesign:HintAssist.Hint="Tên hợp đồng"
                          Padding="8,4,8,4"
                          Margin="8,8,0,8"
                                 IsReadOnly="True"
                          VerticalContentAlignment="Center"
                          Text="{Binding ContractName}"                                     
                            />

                        <TextBox Grid.Row="1" Grid.Column="0"
                           Style="{StaticResource MaterialTextBox}"
                           materialDesign:HintAssist.Hint="Giá trị hợp đồng (VNĐ)"
                           Padding="8,4,8,4"
                           Margin="0,8,8,8"
                                 IsReadOnly="True"
                           VerticalContentAlignment="Center"
                           Text="{Binding ContractValue, Mode=OneWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource StringToDecimalConverter}}"                                     
                            />

                        <TextBox Grid.Row="1" Grid.Column="1"
                               Style="{StaticResource MaterialTextBox}"
                               materialDesign:HintAssist.Hint="Số tiền đã thanh toán (VNĐ)"
                               Padding="8,4,8,4"
                               Margin="8,8,0,8"
                                     IsReadOnly="True"
                               VerticalContentAlignment="Center"
                           Text="{Binding ContractPaidAmount, Mode=OneWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource StringToDecimalConverter}}"                                     
                               />

                        <TextBox Grid.Row="2" Grid.Column="0"
                               Style="{StaticResource MaterialTextBox}"
                               materialDesign:HintAssist.Hint="Số tiền còn lại (VNĐ)"
                               Padding="8,4,8,4"
                               Margin="0,8,8,8"
                                     IsReadOnly="True"
                               VerticalContentAlignment="Center"
                               Text="{Binding ContractRemainingValue, Mode=OneWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource StringToDecimalConverter}}"                                     
                                />


                        <TextBox Grid.Row="2" Grid.Column="1"
                           Style="{StaticResource MaterialTextBox}"
                           materialDesign:HintAssist.Hint="Nhân sự phụ trách"
                           Padding="8,4,8,4"
                           Margin="8,8,0,8"
                                 IsReadOnly="True"
                           VerticalContentAlignment="Center"
                           Text="{Binding EmployeeName, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"                                     
                           />
                    </Grid>

                    <TextBlock Text="THÔNG TIN LỊCH TRÌNH" Style="{StaticResource SectionHeader}"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBox Grid.Column="0"
                                    Style="{StaticResource MaterialTextBox}"
                                    materialDesign:HintAssist.Hint="Tên giai đoạn"
                                    Margin="0,8,8,8"
                                    Padding="8,4,8,4"
                                    
                                    Text="{Binding ScheduleName}"/>

                        <TextBox Grid.Column="1"
                                    Style="{StaticResource MaterialTextBox}"
                                    materialDesign:HintAssist.Hint="Giá trị giai đoạn (VNĐ)"
                                    Margin="8,8,0,8"
                                    Padding="8,4,8,4"
                                    
                                    Text="{Binding Amount, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource StringToDecimalConverter}}"/>
                    </Grid>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBox Grid.Column="0"
                                Style="{StaticResource MaterialTextBox}"
                                materialDesign:HintAssist.Hint="Tỉ lệ giá trị hợp đồng"
                                Margin="0,8,8,8"
                                     Padding="8,4,8,4"
                                 IsReadOnly="True"
                                Text="{Binding ValuePercentage, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource PercentageConverter}}"/>

                        <DatePicker Grid.Column="1"
                                SelectedDate="{Binding DueDate, Mode=TwoWay}"
                                materialDesign:HintAssist.Hint="Hạn thanh toán"
                                Margin="8,8,0,8"
                                Padding="8,4,8,4"
                                VerticalContentAlignment="Center"
                                Style="{StaticResource MaterialDatePicker}" />
                    </Grid>
                </StackPanel>
            </ScrollViewer>

            <!-- Footer -->
            <Border Grid.Row="2" 
                       Background="#FAFAFA"
                       Height="72">
                <StackPanel Orientation="Horizontal" 
                              HorizontalAlignment="Right"
                              VerticalAlignment="Center"
                              Margin="24,0">

                    <TextBlock x:Name="ValidationMessageTextBlock"
                               Height="40"
                               Width="200"
                               Margin="0,0,100,0"
                               Style="{StaticResource MaterialDesignCaptionTextBlock}"
                               Foreground="{DynamicResource MaterialDesignValidationErrorBrush}"
                               VerticalAlignment="Center"
                               TextWrapping="Wrap"
                               Text="{Binding ValidationMessage}"/>

                    <Button Content="HỦY"
                              Style="{StaticResource MaterialDesignOutlinedButton}"
                              Width="100"
                              Height="40"
                              Margin="0,0,16,0"
                              Command="{Binding CancelCommand}"/>

                    <Button Content="Lưu"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Width="100" Height="40"
                            Margin="0,0,16,0"
                            HorizontalAlignment="Right"
                            IsEnabled="{Binding CanSave, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource InverseBooleanConverter}}"
                            Command="{Binding SaveCommand}"/>
                </StackPanel>
            </Border>

        </Grid>
    </Grid>
</Window>
