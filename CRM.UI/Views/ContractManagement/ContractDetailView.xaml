<Window x:Class="CRM.UI.Views.ContractManagement.ContractDetailView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CRM.UI.Views.ContractManagement"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:converters="clr-namespace:CRM.UI.Converters"
        mc:Ignorable="d"
        Title="Chi tiết hợp đồng" Height="800" Width="1400"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        FontFamily="{DynamicResource MaterialDesignFont}"
        >

    <Window.Resources>
        <converters:StatusToColorConverter x:Key="StatusToColorConverter"/>
        <converters:StatusToIndexConverter x:Key="StatusToIndexConverter"/>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:BoolToFontWeightConverter x:Key="BoolToFontWeightConverter"/>
        <converters:InverseBooleanToVisibleConverter x:Key="InverseBoolToVisConverter"/>
        <converters:InverseBoolConverter x:Key="InverseBoolConverter"/>
        <converters:CurrencyFormatConverter x:Key="CurrencyFormatConverter"/>
        <converters:StringToDecimalConveter x:Key="StringToDecimalConverter"/>
        <converters:FileIconConverter x:Key="FileIconConverter"/>

        <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}">
            <Setter Property="Background" Value="{DynamicResource MaterialDesignToolBarBackground}"/>
            <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBody}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Height" Value="48"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
        </Style>

        <!-- Style cho DataGrid Row -->
        <Style TargetType="DataGridRow" BasedOn="{StaticResource MaterialDesignDataGridRow}">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource MaterialDesignSelection}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="GroupBoxStyle" TargetType="GroupBox">
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#757575"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

        <Style x:Key="ValueStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Foreground" Value="#212121"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>

        <Style x:Key="EditTextBoxStyle" TargetType="TextBox" BasedOn="{StaticResource MaterialDesignOutlinedTextBox}">
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Margin" Value="0,5,0,15"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="materialDesign:HintAssist.HelperTextFontSize" Value="12"/>
            <Style.Triggers>

                <Trigger Property="IsKeyboardFocusWithin" Value="True">
                    <Setter Property="BorderBrush" Value="#2196F3"/>
                    <Setter Property="BorderThickness" Value="2"/>
                    <Setter Property="Background" Value="#D9D9D9"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="EditDatePickerStyle" TargetType="DatePicker" BasedOn="{StaticResource MaterialDesignOutlinedDatePicker}">
            <Setter Property="Margin" Value="0,5,0,15"/>
            <Setter Property="FontSize" Value="16" />
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="SelectedDateFormat" Value="Short"/>
            <Setter Property="Language" Value="vi-VN"/>
            <Setter Property="CalendarStyle" Value="{StaticResource NoHeaderStyle}"/>
        </Style>

        <Style x:Key="EditComboBoxStyle" TargetType="ComboBox" BasedOn="{StaticResource MaterialDesignOutlinedComboBox}">
            <Setter Property="Margin" Value="0,5,0,15"/>
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Background" Value="White"/>
        </Style>
    </Window.Resources>

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Dòng 1: Avatar + Name -->
            <RowDefinition Height="Auto"/>
            <!-- Dòng 2: Status Progress -->
            <RowDefinition Height="*"/>
            <!-- Dòng 3: MainContent + Panel phải -->
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                BorderThickness="1" BorderBrush="#E0E0E0"
            Background="White" Padding="20" CornerRadius="4" 
            materialDesign:ElevationAssist.Elevation="Dp4" 
            Margin="20,20,20,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Avatar -->
                <Border Grid.Column="0" Width="60" Height="60" 
                                Background="#2196F3" CornerRadius="30" 
                                VerticalAlignment="Top">
                    <materialDesign:PackIcon Kind="Account" 
                                                   Width="35" Height="35"
                                                   Foreground="White"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"/>
                </Border>

                <!-- Name and Code -->
                <StackPanel Grid.Column="1" Margin="15,0,0,0">
                    <TextBlock Text="Hợp đồng" 
                                     FontSize="11" Foreground="#757575"/>
                    <TextBlock Text="{Binding ContractName}" 
                                     FontSize="24" FontWeight="SemiBold" 
                                     Foreground="#212121"/>
                    <TextBlock FontSize="12" Foreground="#757575" Margin="0,5,0,0">
                                <Run Text="Mã:"/>
                                <Run Text="{Binding ContractCode}" FontWeight="SemiBold"/>
                    </TextBlock>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Top">
                    <Button 
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            Command="{Binding ToggleEditModeCommand}"
                            Height="36"
                            Margin="0,0,10,0">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Pencil" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                <TextBlock Text="Sửa" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button.Content>
                    </Button>

                    <Button 
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        Command="{Binding SaveCommand}"
                        Visibility="{Binding IsEditMode, Converter={StaticResource BooleanToVisibilityConverter}}"
                        IsEnabled="{Binding CanSave}"
                        Height="36"
                        Margin="0,0,10,0">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Pencil" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                <TextBlock Text="Lưu" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button.Content>
                    </Button>

                    <Button 
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            Command="{Binding DeleteCommand}"
                            Height="36"
                            Margin="0,0,10,0"
                            Visibility="{Binding IsDeleteVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Delete" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                <TextBlock Text="Xóa" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button.Content>
                    </Button>
                </StackPanel>
            </Grid>


        </Border>


        <!--Main Content Area -->
        <ScrollViewer Grid.Row="2" Grid.Column="0" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">
                <!-- Tabs -->
                <TabControl materialDesign:ColorZoneAssist.Mode="PrimaryMid"
                          Style="{StaticResource MaterialDesignFilledTabControl}">

                    <!-- Tab Thông tin -->
                    <TabItem Header="Thông tin hợp đồng">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
                            <StackPanel>
                                <!--  -->
                                <GroupBox Margin="15" Header="THÔNG TIN HỢP ĐỒNG"
                                        Style="{StaticResource GroupBoxStyle}">
                                    <StackPanel>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            <TextBlock Grid.Column="0" Grid.Row="0" Text="Số hợp đồng:" 
                                                   Style="{StaticResource LabelStyle}" 
                                                   VerticalAlignment="Center" 
                                                   FontSize="16" 
                                                   Margin="0,0,15,0"/>
                                            <TextBox Grid.Column="1" Grid.Row="0" 
                                                     Text="{Binding ContractNumber, UpdateSourceTrigger=PropertyChanged}"
                                                     Style="{StaticResource EditTextBoxStyle}" 
                                                     FontSize="16"
                                                     Margin="0,10,20,10"
                                                     IsReadOnly="{Binding IsEditMode, Converter={StaticResource InverseBoolConverter}}"/>

                                            <TextBlock Grid.Column="2" Grid.Row="0" Text="Tên hợp đồng:" 
                                                   Style="{StaticResource LabelStyle}" 
                                                   VerticalAlignment="Center" 
                                                   FontSize="16" 
                                                   Margin="0,0,15,0"/>
                                            <TextBox Grid.Column="3" Grid.Row="0" 
                                                 Text="{Binding ContractName, UpdateSourceTrigger=PropertyChanged}"
                                                 Style="{StaticResource EditTextBoxStyle}" 
                                                 FontSize="16"
                                                 Margin="0,10,20,10"
                                                 IsReadOnly="{Binding IsEditMode, Converter={StaticResource InverseBoolConverter}}"/>

                                            <!-- Nhân sự phụ trách -->
                                            <TextBlock Grid.Column="0" Grid.Row="1" Text="Loại hợp đồng:" 
                                                       Style="{StaticResource LabelStyle}" 
                                                       VerticalAlignment="Center" 
                                                       FontSize="16" 
                                                       Margin="0,0,15,0"/>
                                            <TextBox Grid.Column="1" Grid.Row="1" 
                                                         Text="{Binding ContractTypeName, UpdateSourceTrigger=PropertyChanged}"
                                                         Style="{StaticResource EditTextBoxStyle}" 
                                                         FontSize="16"
                                                         Margin="0,10,20,10"
                                                         IsReadOnly="{Binding IsEditMode, Converter={StaticResource InverseBoolConverter}}"/>

                                            <!--  -->
                                            <TextBlock Grid.Column="2" Grid.Row="1" Text="Khách hàng:" 
                                               Style="{StaticResource LabelStyle}" 
                                               VerticalAlignment="Center" 
                                               FontSize="16"
                                               Margin="0,0,15,0"/>
                                            <TextBox Grid.Column="3" Grid.Row="1" 
                                                 Text="{Binding CustomerName, UpdateSourceTrigger=PropertyChanged}"
                                                 Style="{StaticResource EditTextBoxStyle}" 
                                                 FontSize="16"
                                                 Margin="0,10,20,10"
                                                 IsReadOnly="True"/>

                                            <!-- Ngày bắt đầu -->
                                            <TextBlock Grid.Column="0" Grid.Row="5" Text="Ngày có hiệu lực:" 
                                                   Style="{StaticResource LabelStyle}" 
                                                   VerticalAlignment="Center" 
                                                   FontSize="16"
                                                   Margin="0,0,15,0"/>
                                            <DatePicker Grid.Column="1" Grid.Row="5" 
                                                        SelectedDate="{Binding StartDate}"
                                                        Style="{StaticResource EditDatePickerStyle}" 
                                                        materialDesign:CalendarAssist.IsHeaderVisible="False"
                                                        FontSize="16"
                                                        Margin="0,10,20,10"
                                                        IsEnabled="True"
                                            />

                                            <TextBlock Grid.Column="2" Grid.Row="5" Text="Ngày hết hiệu lực:" 
                                                        Style="{StaticResource LabelStyle}" 
                                                        VerticalAlignment="Center" 
                                                        FontSize="16"
                                                        Margin="0,0,15,0"/>
                                            <DatePicker Grid.Column="3" Grid.Row="5" 
                                                         SelectedDate="{Binding EndDate}"
                                                         Style="{StaticResource EditDatePickerStyle}" 
                                                         FontSize="16"
                                                         Margin="0,10,20,10"
                                                        IsEnabled="True"
                                                         />

                                            <TextBlock Grid.Column="0" Grid.Row="6" Text="Mô tả:" 
                                               Style="{StaticResource LabelStyle}" 
                                               VerticalAlignment="Center" 
                                               FontSize="16"
                                               Margin="0,0,15,0"/>
                                            <TextBox Grid.Column="1" Grid.Row="6" Grid.ColumnSpan="3"
                                                     Height="80"
                                                 Text="{Binding ContractDescription, UpdateSourceTrigger=PropertyChanged}"
                                                 Style="{StaticResource EditTextBoxStyle}" 
                                                     AcceptsReturn="True"
                                                    TextWrapping="Wrap"
                                                 FontSize="16"
                                                 Margin="0,10,20,10"
                                                 IsReadOnly="{Binding IsEditMode, Converter={StaticResource InverseBoolConverter}}"/>

                                            <TextBlock Grid.Column="0" Grid.Row="2" Text="Bên bán:" 
                                               Style="{StaticResource LabelStyle}" 
                                               VerticalAlignment="Center" 
                                               FontSize="16"
                                               Margin="0,0,15,0"/>
                                            <TextBox Grid.Column="1" Grid.Row="2" 
                                                 Text="Công ty FLC"
                                                 Style="{StaticResource EditTextBoxStyle}" 
                                                 FontSize="16"
                                                 Margin="0,10,20,10"
                                                 IsReadOnly="True"/>

                                            <TextBlock Grid.Column="2" Grid.Row="2" Text="Trạng thái:" 
                                               Style="{StaticResource LabelStyle}" 
                                               VerticalAlignment="Center" 
                                               FontSize="16"
                                               Margin="0,0,15,0"/>
                                            <ComboBox Grid.Column="3" Grid.Row="2"
                                                        Style="{StaticResource EditComboBoxStyle}" 
                                                        FontSize="16"
                                                        Margin="0,10,20,10"
                                                        ItemsSource="{Binding ContractStatusOptions}"
                                                        SelectedValue="{Binding ContractStageId}"
                                                      SelectedValuePath="Id"
                                                        DisplayMemberPath="Name"
                                                        IsDropDownOpen="False"
                                                        IsReadOnly="{Binding IsEditMode, Converter={StaticResource InverseBoolConverter}}">
                                            </ComboBox>
                                            <TextBlock Grid.Column="0" Grid.Row="3" Text="Giá trị hợp đồng trước thuế (VNĐ):" 
                                               Style="{StaticResource LabelStyle}" 
                                               VerticalAlignment="Center" 
                                               FontSize="16"
                                               Margin="0,0,15,0"/>
                                            <TextBox Grid.Column="1" Grid.Row="3" 
                                                 Text="{Binding AmountBeforeTax, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource StringToDecimalConverter}}"
                                                 Style="{StaticResource EditTextBoxStyle}" 
                                                 FontSize="16"
                                                 Margin="0,10,20,10"
                                                 IsReadOnly="True"/>

                                            <TextBlock Grid.Column="2" Grid.Row="3" Text="Thuế:" 
                                                   Style="{StaticResource LabelStyle}" 
                                                   VerticalAlignment="Center" 
                                                   FontSize="16"
                                                   Margin="0,0,15,0"/>
                                            <TextBox Grid.Column="3" Grid.Row="3" 
                                                     Text="{Binding Tax, UpdateSourceTrigger=PropertyChanged}"
                                                     Style="{StaticResource EditTextBoxStyle}" 
                                                     FontSize="16"
                                                     Margin="0,10,20,10"
                                                     IsReadOnly="True"/>

                                            <TextBlock Grid.Column="0" Grid.Row="4" Text="Giá trị hợp đồng sau thuế (VNĐ):" 
                                               Style="{StaticResource LabelStyle}" 
                                               VerticalAlignment="Center" 
                                               FontSize="16"
                                               Margin="0,0,15,0"/>
                                            <TextBox Grid.Column="1" Grid.Row="4" 
                                                 Text="{Binding AmountAfterTax, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource StringToDecimalConverter}}"
                                                 Style="{StaticResource EditTextBoxStyle}" 
                                                 FontSize="16"
                                                 Margin="0,10,20,10"
                                                 IsReadOnly="True"/>

                                            <TextBlock Grid.Column="2" Grid.Row="4" Text="Thực thu (VNĐ):" 
                                               Style="{StaticResource LabelStyle}" 
                                               VerticalAlignment="Center" 
                                               FontSize="16"
                                               Margin="0,0,15,0"/>
                                            <TextBox Grid.Column="3" Grid.Row="4" 
                                                 Text="{Binding Amount, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource StringToDecimalConverter}}"
                                                 Style="{StaticResource EditTextBoxStyle}" 
                                                 FontSize="16"
                                                 Margin="0,10,20,10"
                                                 IsReadOnly="True"/>
                                        </Grid>
                                    </StackPanel>
                                </GroupBox>

                                <!-- Thông tin liên hệ -->
                                <GroupBox Header="THÔNG TIN ĐẶT CỌC"  Margin="15"
                                        Style="{StaticResource GroupBoxStyle}">
                                    <StackPanel>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <TextBlock Grid.Column="0" Grid.Row="0" Text="Tên đặt cọc:" 
                                                   Style="{StaticResource LabelStyle}" 
                                                   VerticalAlignment="Center" 
                                                   FontSize="16"
                                                   Margin="0,0,15,0"/>
                                            <TextBox Grid.Column="1" Grid.Row="0" 
                                                 Style="{StaticResource EditTextBoxStyle}"
                                                 Text="{Binding DepositName,
                                                Mode=TwoWay,
                                                UpdateSourceTrigger=PropertyChanged}"
                                                 FontSize="16"
                                                 Margin="0,10,20,10"
                                                 IsReadOnly="{Binding IsEditMode, Converter={StaticResource InverseBoolConverter}}">
                                            </TextBox>

                                            <TextBlock Grid.Column="2" Grid.Row="0" Text="Tiền cọc (VNĐ):" 
                                               Style="{StaticResource LabelStyle}" 
                                               VerticalAlignment="Center" 
                                               FontSize="16"
                                               Margin="0,0,15,0"/>
                                            <TextBox Grid.Column="3" Grid.Row="0" 
                                                 Text="{Binding DepositAmount, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource CurrencyFormatConverter}}"
                                                 Style="{StaticResource EditTextBoxStyle}" 
                                                 FontSize="16"
                                                 Margin="0,10,20,10"
                                                 IsReadOnly="{Binding IsEditMode, Converter={StaticResource InverseBoolConverter}}"/>

                                            <!-- Email -->
                                            <TextBlock Grid.Column="0" Grid.Row="1" Text="Dự án:" 
                                   Style="{StaticResource LabelStyle}" 
                                   VerticalAlignment="Center" 
                                   FontSize="16"
                                   Margin="0,0,15,0"/>
                                            <TextBox Grid.Column="1" Grid.Row="1" 
                                 Text="{Binding ProjectName, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource EditTextBoxStyle}" 
                                 FontSize="16"
                                 Margin="0,10,20,10"
                                 IsReadOnly="{Binding IsEditMode, Converter={StaticResource InverseBoolConverter}}"/>


                                            <!--  -->
                                            <TextBlock Grid.Column="2" Grid.Row="1" Text="Sản phẩm:" 
                                   Style="{StaticResource LabelStyle}" 
                                   VerticalAlignment="Center" 
                                   FontSize="16"
                                   Margin="0,0,15,0"/>
                                            <TextBox Grid.Column="3" Grid.Row="1" 
                                 Text="{Binding ProductName, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource EditTextBoxStyle}" 
                                 FontSize="16"
                                 Margin="0,10,20,10"
                                 IsReadOnly="{Binding IsEditMode, Converter={StaticResource InverseBoolConverter}}"/>

                                            <TextBlock Grid.Column="0" Grid.Row="2" Text="Giá gốc (VNĐ):" 
                                              Style="{StaticResource LabelStyle}" 
                                              VerticalAlignment="Center" 
                                              FontSize="16"
                                              Margin="0,0,15,0"/>
                                            <TextBox Grid.Column="1" Grid.Row="2" 
                                                Text="{Binding ProductPrice, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource CurrencyFormatConverter}}"
                                                Style="{StaticResource EditTextBoxStyle}" 
                                                FontSize="16"
                                                Margin="0,10,20,10"
                                                IsReadOnly="{Binding IsEditMode, Converter={StaticResource InverseBoolConverter}}"/>

                                        </Grid>
                                    </StackPanel>
                                </GroupBox>
                            </StackPanel>
                        </ScrollViewer>
                    </TabItem>

                    <TabItem Header="Lịch trình thanh toán">
                       <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
                            <StackPanel Margin="0,20,0,0">
                          <!--       <TextBlock Text="LỊCH TRÌNH THANH TOÁN" 
                       FontSize="20" 
                       FontWeight="Bold" 
                       Foreground="#1976D2" 
                       Margin="0,0,0,20"/> -->

                                <Button 
                                        Style="{StaticResource MaterialDesignOutlinedButton}"
                                        Command="{Binding CreatePaymentScheduleCommand}"
                                        IsEnabled="{Binding IsSaveEnabled}"
                                    HorizontalAlignment="Right"
                                    Width="100"
                                        Height="36"
                                        Margin="0,0,10,10">
                                    <Button.Content>
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="Plus" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                            <TextBlock Text="Thêm" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Button.Content>
                                </Button>

                                <DataGrid x:Name="PaymentScheduleGrid"
                                          ItemsSource="{Binding PaymentSchedulesItems}"
                                      Style="{StaticResource MaterialDesignDataGrid}"
                                            BorderBrush="Gray"
                                            BorderThickness="1"
                                            AutoGenerateColumns="False"
                                            CanUserAddRows="False"
                                            CanUserDeleteRows="False"
                                            HeadersVisibility="Column"
                                            GridLinesVisibility="All"
                                                RowHeight="48"
                                            HorizontalGridLinesBrush="{DynamicResource MaterialDesignDivider}"
                                            VerticalScrollBarVisibility="Auto"
                                            HorizontalScrollBarVisibility="Auto">

                                   
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="STT" 
                                        Binding="{Binding Index}" 
                                        Width="80"
                                                            IsReadOnly="True"
                                        ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"
                                        />

                                        <DataGridTextColumn Header="Tên giai đoạn" 
                                        Binding="{Binding InstallmentName}" 
                                        Width="280"
                                                            IsReadOnly="True"
ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"
                                        />

                                        <DataGridTextColumn Header="Giá trị giai đoạn" 
                                        Binding="{Binding Amount, StringFormat='{}{0:N0} VNĐ'}" 
                                        Width="220"
                                                            IsReadOnly="True"
ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"/>

                                        <DataGridTextColumn Header="Tỷ lệ (%)" 
                                        Binding="{Binding ContractValuePercentage, StringFormat='{}{0:0.##}%'}" 
                                        Width="160"
                                                            IsReadOnly="True"
ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"
                                        />

                                        <DataGridTextColumn Header="Hạn thanh toán" 
                                        Binding="{Binding DueDate, StringFormat='dd/MM/yyyy'}" 
                                        Width="220"
                                                            IsReadOnly="True"
ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"
                                        />

                                        <DataGridTextColumn Header="Số hóa đơn" 
                                        Binding="{Binding InvoiceNumber}" 
                                        Width="*"
                                                            IsReadOnly="True"
ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"
                                        />
                                    </DataGrid.Columns>
                                </DataGrid>

                                <!-- Summary Section 
                                <Border Background="#E3F2FD" 
                    Padding="15" 
                    Margin="0,20,0,0" 
                    CornerRadius="5"
                    BorderBrush="#1976D2" 
                    BorderThickness="1">
                                    <StackPanel>
                                        <TextBlock Text="TỔNG KẾT" 
                               FontSize="16" 
                               FontWeight="Bold" 
                               Foreground="#1976D2" 
                               Margin="0,0,0,10"/>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" 
                                   Text="Tổng giá trị hợp đồng:" 
                                   FontWeight="SemiBold"/>
                                            <TextBlock Grid.Column="1" 
                                   x:Name="TotalContractValue" 
                                   Text="0 VNĐ" 
                                   FontWeight="Bold" 
                                   Foreground="#1976D2" 
                                   HorizontalAlignment="Right"/>
                                        </Grid>
                                    </StackPanel>
                                </Border> -->
                            </StackPanel>
                        </ScrollViewer>
                    </TabItem>

                    <TabItem Header="Tài liệu">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
                            <StackPanel>
                                <!-- Tiêu đề + nút thêm -->
                                <Grid Margin="0,20,0,20">
                                    <TextBlock Text="TÀI LIỆU HỢP ĐỒNG"
       FontSize="20"
       FontWeight="Bold"
       Foreground="#1976D2"
       VerticalAlignment="Center"/>
                                    <Button x:Name="AddDocumentButton"
    HorizontalAlignment="Right"
    Style="{StaticResource MaterialDesignRaisedButton}"
    Background="#1976D2"
    BorderBrush="#1976D2"
    Height="40"
    Padding="20,0"
    Command="{Binding AddContractDocumentsCommand}">
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="FilePlus"
                             Width="20"
                             Height="20"
                             VerticalAlignment="Center"
                             Margin="0,0,8,0"/>
                                            <TextBlock Text="Thêm tài liệu"
               VerticalAlignment="Center"
               FontSize="14"
               FontWeight="SemiBold"/>
                                        </StackPanel>
                                    </Button>
                                </Grid>

                                <TextBlock Text="Danh sách tài liệu"
   FontSize="14"
   FontWeight="Bold"
   Foreground="#333333"
   Margin="0,10,0,10"/>

                                <!-- Danh sách tài liệu - Grid 2 cột -->
                                <ItemsControl x:Name="DocumentListBox"
 ItemsSource="{Binding ContractDocuments}"
 Background="#F5F5F5"
 BorderBrush="#DDDDDD"
 BorderThickness="1"
 Padding="8">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <UniformGrid Columns="2" 
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Top"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border BorderBrush="#E0E0E0"
            BorderThickness="1"
            CornerRadius="4"
            Background="White"
            Margin="6"
            Padding="12,10">
                                                <Grid VerticalAlignment="Center">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>

                                                    <!-- Icon theo loại file -->
                                                    <materialDesign:PackIcon 
                                    Width="22"
                                    Height="22"
                                    VerticalAlignment="Center"
                                    Grid.Column="0"
                                    Margin="0,0,10,0"
                                    Kind="{Binding FileName, Converter={StaticResource FileIconConverter}}"/>

                                                    <!-- Tên file -->
                                                    <TextBlock Text="{Binding FileName}"
                           VerticalAlignment="Center"
                           FontWeight="SemiBold"
                           FontSize="13"
                           Foreground="#333"
                           TextTrimming="CharacterEllipsis"
                           Grid.Column="1"/>

                                                    <!-- Buttons -->
                                                    <StackPanel Orientation="Horizontal"
                           VerticalAlignment="Center"
                           Grid.Column="2"
                           Margin="8,0,0,0">
                                                        <!-- Nút mở file -->
                                                        <Button Width="28"
                        Height="28"
                        Style="{StaticResource MaterialDesignIconButton}"
                        ToolTip="Mở file"
                        Foreground="#1976D2"
                        Padding="2"
                        Margin="0,0,4,0"
                        Command="{Binding DataContext.ViewContractDocumentCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                        CommandParameter="{Binding}">
                                                            <materialDesign:PackIcon Kind="OpenInNew" Width="16" Height="16"/>
                                                        </Button>

                                                        <!-- Nút xóa -->
                                                        <Button Width="28"
                        Height="28"
                        Style="{StaticResource MaterialDesignIconButton}"
                        Foreground="#FF5252"
                        Padding="2"
                        ToolTip="Xóa"
                        Command="{Binding DataContext.RemoveContractDocumentCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                        CommandParameter="{Binding}">
                                                            <materialDesign:PackIcon Kind="Delete" Width="16" Height="16"/>
                                                        </Button>
                                                    </StackPanel>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </ScrollViewer>
                    </TabItem>
                </TabControl>
            </StackPanel>
        </ScrollViewer>


    </Grid>
</Window>
