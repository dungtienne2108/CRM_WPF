<Window x:Class="CRM.UI.Views.OpportunityManagement.OpportunityDetail"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CRM.UI.Views.OpportunityManagement"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:converters="clr-namespace:CRM.UI.Converters"
        mc:Ignorable="d"
        Title="Chi tiết cơ hội bán hàng" Height="800" Width="1400"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        FontFamily="{DynamicResource MaterialDesignFont}">
    <Window.Resources>
        <converters:StatusToColorConverter x:Key="StatusToColorConverter"/>
        <converters:StatusToIndexConverter x:Key="StatusToIndexConverter"/>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:BoolToFontWeightConverter x:Key="BoolToFontWeightConverter"/>
        <converters:InverseBooleanToVisibleConverter x:Key="InverseBoolToVisConverter"/>
        <converters:InverseBoolConverter x:Key="InverseBoolConverter"/>
        <converters:CurrencyFormatConverter x:Key="CurrencyFormatConverter"/>

        <Style x:Key="GroupBoxStyle" TargetType="GroupBox">
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#757575"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

        <Style x:Key="ValueStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Foreground" Value="#212121"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>

        <Style x:Key="EditTextBoxStyle" TargetType="TextBox" BasedOn="{StaticResource MaterialDesignOutlinedTextBox}">
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Margin" Value="0,5,0,15"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Background" Value="White"/>
        </Style>

        <Style x:Key="EditDatePickerStyle" TargetType="DatePicker" BasedOn="{StaticResource MaterialDesignOutlinedDatePicker}">
            <Setter Property="Margin" Value="0,5,0,15"/>
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="SelectedDateFormat" Value="Short"/>
            <Setter Property="Language" Value="vi-VN"/>
            <Setter Property="CalendarStyle" Value="{StaticResource NoHeaderStyle}"/>
        </Style>

        <Style x:Key="EditComboBoxStyle" TargetType="ComboBox" BasedOn="{StaticResource MaterialDesignOutlinedComboBox}">
            <Setter Property="Margin" Value="0,5,0,15"/>
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Background" Value="White"/>
        </Style>
    </Window.Resources>

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Dòng 1: Avatar + Name -->
            <RowDefinition Height="Auto"/>
            <!-- Dòng 2: Status Progress -->
            <RowDefinition Height="*"/>
            <!-- Dòng 3: MainContent + Panel phải -->
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
        Background="White" Padding="20" CornerRadius="4" 
                BorderThickness="1" BorderBrush="#E0E0E0"
        materialDesign:ElevationAssist.Elevation="Dp4" 
        Margin="20,20,20,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Avatar -->
                <Border Grid.Column="0" Width="60" Height="60" 
                            Background="#2196F3" CornerRadius="30" 
                            VerticalAlignment="Top">
                    <materialDesign:PackIcon Kind="Account" 
                                               Width="35" Height="35"
                                               Foreground="White"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                </Border>

                <!-- Name and Code -->
                <StackPanel Grid.Column="1" Margin="15,0,0,0">
                    <TextBlock Text="Cơ hội bán hàng" 
                                 FontSize="11" Foreground="#757575"/>
                    <TextBlock Text="{Binding OpportunityName}" 
                                 FontSize="24" FontWeight="SemiBold" 
                                 Foreground="#212121"/>
                    <TextBlock FontSize="12" Foreground="#757575" Margin="0,5,0,0">
                            <Run Text="Mã:"/>
                            <Run Text="{Binding OpportunityCode}" FontWeight="SemiBold"/>
                    </TextBlock>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Top">
                    <Button 
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            Command="{Binding NewDepositCommand}"
                            Height="36"
                            Margin="0,0,10,0"
                            Visibility="{Binding CanDeposit, Converter={StaticResource BooleanToVisibilityConverter}}"
                            >
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="CreditCardAdd" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                <TextBlock Text="Đặt cọc" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button.Content>
                    </Button>

                    <Button 
                        Style="{StaticResource MaterialDesignOutlinedButton}"
                        Command="{Binding ToggleEditModeCommand}"
                        Height="36"
                        Margin="0,0,10,0">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Pencil" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                <TextBlock Text="Sửa" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button.Content>
                    </Button>

                    <Button 
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Command="{Binding UpdateOpportunityCommand}"
                    Visibility="{Binding IsEditMode, Converter={StaticResource BooleanToVisibilityConverter}}"
                    Height="36"
                    Margin="0,0,10,0">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Pencil" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                <TextBlock Text="Lưu" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button.Content>
                    </Button>

                    <Button 
                        Style="{StaticResource MaterialDesignOutlinedButton}"
                        Command="{Binding DeleteCommand}"
                        Height="36"
                        Margin="0,0,10,0"
                        Visibility="{Binding IsDeleteVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Delete" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                <TextBlock Text="Xóa" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button.Content>
                    </Button>
                </StackPanel>
            </Grid>


        </Border>

        <!-- Status Progress Bar -->
        <Border Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                BorderThickness="1" BorderBrush="#E0E0E0"
                    Background="White" Padding="15,10" CornerRadius="4" 
                    materialDesign:ElevationAssist.Elevation="Dp4" Margin="20,0,20,0">
            <Grid Visibility="{Binding IsStatusStepsVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Previous Button -->
                <Button Grid.Column="0" Style="{StaticResource MaterialDesignIconButton}"
                            Command="{Binding PreviousStatusCommand}"
                            ToolTip="Trạng thái trước"
                            Width="28" Height="28"
                            Margin="0,5,10,0">
                    <materialDesign:PackIcon Kind="ChevronLeft" Width="20" Height="20"/>
                </Button>

                <!-- Status Steps -->
                <ItemsControl Grid.Column="1" ItemsSource="{Binding StatusSteps}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Rows="1" VerticalAlignment="Center" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid VerticalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Step Circle and Text -->
                                <StackPanel Grid.Column="1" 
                    Orientation="Vertical" 
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">

                                    <Grid Width="28" Height="28"
                  HorizontalAlignment="Center">
                                        <Ellipse Width="28" Height="28" 
                         StrokeThickness="3">
                                            <Ellipse.Stroke>
                                                <SolidColorBrush Color="{Binding IsCompleted, Converter={StaticResource StatusToColorConverter}}"/>
                                            </Ellipse.Stroke>
                                            <Ellipse.Fill>
                                                <SolidColorBrush Color="{Binding IsCompleted, Converter={StaticResource StatusToColorConverter}}"/>
                                            </Ellipse.Fill>
                                        </Ellipse>
                                        <materialDesign:PackIcon Kind="Check" 
                                         Width="16" Height="16"
                                         Foreground="White"
                                         HorizontalAlignment="Center"
                                         VerticalAlignment="Center"
                                         Visibility="{Binding IsCompleted, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                    </Grid>

                                    <TextBlock Text="{Binding Title}" 
                       Width="100"
                       TextAlignment="Center"
                       TextWrapping="Wrap"
                       Margin="0,6,0,0"
                       FontSize="10"
                       FontWeight="{Binding IsCompleted, Converter={StaticResource BoolToFontWeightConverter}}">
                                        <TextBlock.Foreground>
                                            <SolidColorBrush Color="{Binding IsCompleted, Converter={StaticResource StatusToColorConverter}}"/>
                                        </TextBlock.Foreground>
                                    </TextBlock>

                                    <TextBlock Text="{Binding Subtitle}" 
                       Width="100"
                       TextAlignment="Center"
                       TextWrapping="Wrap"
                       Margin="0,2,0,0"
                       FontSize="9"
                       Foreground="#9E9E9E"/>
                                </StackPanel>

                                <!-- Connector Line -->
                                <Rectangle Grid.Column="2" 
                   Height="2" 
                   VerticalAlignment="Center"
                   HorizontalAlignment="Stretch"
                   Margin="10,0,0,0"
                   Visibility="{Binding IsLast, Converter={StaticResource InverseBoolToVisConverter}}">
                                    <Rectangle.Fill>
                                        <SolidColorBrush Color="{Binding IsCompleted, Converter={StaticResource StatusToColorConverter}}"/>
                                    </Rectangle.Fill>
                                </Rectangle>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- Next Button -->
                <Button Grid.Column="2" Style="{StaticResource MaterialDesignIconButton}"
                            Command="{Binding NextStatusCommand}"
                            ToolTip="Trạng thái tiếp theo"
                            Width="28" Height="28"
                            Margin="10,5,0,0">
                    <materialDesign:PackIcon Kind="ChevronRight" Width="20" Height="20"/>
                </Button>
            </Grid>
        </Border>

        <!--Main Content Area -->
        <ScrollViewer Grid.Row="2" Grid.Column="0" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">
                <!-- Tabs -->
                <TabControl materialDesign:ColorZoneAssist.Mode="PrimaryMid"
                      Style="{StaticResource MaterialDesignFilledTabControl}">

                    <!-- Tab Thông tin -->
                    <TabItem Header="Thông tin">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
                            <StackPanel>

                                <!-- Trạng thái -->
                                <GroupBox Header="TRẠNG THÁI CƠ HỘI BÁN HÀNG" Margin="15" 
                                    Style="{StaticResource GroupBoxStyle}">
                                    <StackPanel>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <!-- Tên cơ hội -->
                                            <TextBlock Grid.Column="0" Grid.Row="0" Text="Tên cơ hội:" 
                                                   Style="{StaticResource LabelStyle}" 
                                                   VerticalAlignment="Center" 
                                                   FontSize="16" 
                                                   Margin="0,0,15,0"/>
                                            <TextBox Grid.Column="1" Grid.Row="0" 
                                                     Text="{Binding OpportunityName, UpdateSourceTrigger=PropertyChanged}"
                                                     Style="{StaticResource EditTextBoxStyle}" 
                                                     FontSize="16"
                                                     Margin="0,10,20,10"
                                                     IsReadOnly="{Binding IsEditMode, Converter={StaticResource InverseBoolConverter}}"/>

                                            <!-- Trạng thái 
                                        <TextBlock Grid.Column="0" Grid.Row="1" Text="Trạng thái:" 
                               Style="{StaticResource LabelStyle}" 
                               VerticalAlignment="Center" 
                               FontSize="16"
                               Margin="0,0,15,0"/>
                                        <TextBox Grid.Column="1" Grid.Row="1" 
                             Text="{Binding Status, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource EditTextBoxStyle}" 
                             FontSize="16"
                             Margin="0,10,20,10"
                             IsEnabled="True"/>-->

                                            <!-- Loại cơ hội
                                            <TextBlock Grid.Column="2" Grid.Row="0" Text="Loại cơ hội:" 
                               Style="{StaticResource LabelStyle}" 
                               VerticalAlignment="Center" 
                               FontSize="16"
                               Margin="0,0,15,0"/>
                                            <ComboBox Grid.Column="3" Grid.Row="0" 
                              Text="{Binding PotentialLevel, UpdateSourceTrigger=PropertyChanged}"
                              Style="{StaticResource EditComboBoxStyle}" 
                              FontSize="16"
                              Margin="0,10,20,10"
                              ItemsSource="{Binding PotentialLevelOptions}"
                              SelectedValue="{Binding PotentialLevelId}"
                              SelectedValuePath="Id"
                              DisplayMemberPath="Name"
                              IsReadOnly="{Binding IsEditMode, Converter={StaticResource InverseBoolConverter}}"/> -->

                                            <!-- Ngày bắt đầu -->
                                            <TextBlock Grid.Column="0" Grid.Row="1" Text="Ngày bắt đầu:" 
                               Style="{StaticResource LabelStyle}" 
                               VerticalAlignment="Center" 
                               FontSize="16"
                               Margin="0,0,15,0"/>
                                            <DatePicker Grid.Column="1" Grid.Row="1" 
                                SelectedDate="{Binding StartDate}"
                                Style="{StaticResource EditDatePickerStyle}" 
                                FontSize="16"
                                Margin="0,10,20,10"
                                />

                                            <TextBlock Grid.Column="2" Grid.Row="1" Text="Ngày kết thúc:" 
                                                    Style="{StaticResource LabelStyle}" 
                                                    VerticalAlignment="Center" 
                                                    FontSize="16"
                                                    Margin="0,0,15,0"/>
                                            <DatePicker Grid.Column="3" Grid.Row="1" 
                                                     SelectedDate="{Binding EndDate}"
                                                     Style="{StaticResource EditDatePickerStyle}" 
                                                     FontSize="16"
                                                     Margin="0,10,20,10"
                                                     />
                                            
                                            <!--Nhân sự-->
                                            <TextBlock Grid.Column="2" Grid.Row="0" Text="Nhân sự liên quan:" 
                                                       Style="{StaticResource LabelStyle}" 
                                                       VerticalAlignment="Center" 
                                                       FontSize="16" 
                                                       Margin="0,0,15,0"/>
                                            <TextBox Grid.Column="3" Grid.Row="0" 
                                                     Text="{Binding EmployeeName, UpdateSourceTrigger=PropertyChanged}"
                                                     Style="{StaticResource EditTextBoxStyle}" 
                                                     FontSize="16"
                                                     Margin="0,10,20,10"
                                                     IsReadOnly="True"/>

                                        </Grid>
                                    </StackPanel>
                                </GroupBox>

                                <!-- Thông tin khách hàng -->
                                <GroupBox Header="THÔNG TIN KHÁCH HÀNG"  Margin="15"
                                    Style="{StaticResource GroupBoxStyle}">
                                    <StackPanel>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <!-- Họ tên -->
                                            <TextBlock Grid.Column="0" Grid.Row="0" Text="Họ tên:" 
                                               Style="{StaticResource LabelStyle}" 
                                               VerticalAlignment="Center" 
                                               FontSize="16"
                                               Margin="0,0,15,0"/>
                                            <TextBox Grid.Column="1" Grid.Row="0" 
                                             Style="{StaticResource EditTextBoxStyle}"
                                             Text="{Binding CustomerName,
                                            Mode=TwoWay,
                                            UpdateSourceTrigger=PropertyChanged,
                                            ValidatesOnDataErrors=True,
                                            ValidatesOnNotifyDataErrors=True,
                                            NotifyOnValidationError=True}"
                                             FontSize="16"
                                             Margin="0,10,20,10"
                                             IsReadOnly="{Binding IsEditMode, Converter={StaticResource InverseBoolConverter}}">
                                            </TextBox>

                                            <!-- Số điện thoại -->
                                            <TextBlock Grid.Column="2" Grid.Row="0" Text="Số điện thoại:" 
                               Style="{StaticResource LabelStyle}" 
                               VerticalAlignment="Center" 
                               FontSize="16"
                               Margin="0,0,15,0"/>
                                            <TextBox Grid.Column="3" Grid.Row="0" 
                             Text="{Binding CustomerPhone, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource EditTextBoxStyle}" 
                             FontSize="16"
                             Margin="0,10,20,10"
                             IsReadOnly="{Binding IsEditMode, Converter={StaticResource InverseBoolConverter}}"/>

                                            <!-- Email -->
                                            <TextBlock Grid.Column="0" Grid.Row="1" Text="Email:" 
                               Style="{StaticResource LabelStyle}" 
                               VerticalAlignment="Center" 
                               FontSize="16"
                               Margin="0,0,15,0"/>
                                            <TextBox Grid.Column="1" Grid.Row="1" 
                             Text="{Binding CustomerEmail, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource EditTextBoxStyle}" 
                             FontSize="16"
                             Margin="0,10,20,10"
                             IsReadOnly="{Binding IsEditMode, Converter={StaticResource InverseBoolConverter}}"/>
                                            <!-- Địa chỉ -->
                                            <TextBlock Grid.Column="2" Grid.Row="1" Text="Địa chỉ:" 
                               Style="{StaticResource LabelStyle}" 
                               VerticalAlignment="Center" 
                               FontSize="16"
                               Margin="0,0,15,0"/>
                                            <TextBox Grid.Column="3" Grid.Row="1" 
                             Text="{Binding CustomerAddress, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource EditTextBoxStyle}" 
                             FontSize="16"
                             Margin="0,10,20,10"
                             IsReadOnly="{Binding IsEditMode, Converter={StaticResource InverseBoolConverter}}"/>

                                        </Grid>
                                    </StackPanel>
                                </GroupBox>

                                <!-- Sản phẩm 
                                <GroupBox Header="SẢN PHẨM QUAN TÂM" Style="{StaticResource GroupBoxStyle}" Margin="15">
                                    <StackPanel>
                                        <ItemsControl ItemsSource="{Binding Products}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="*"/>
                                                        </Grid.ColumnDefinitions>

                                                        <TextBlock Grid.Column="0" Text="Tên dự án"
                                                                   Style="{StaticResource LabelStyle}"
                                                                   FontSize="16"
                                                                   VerticalAlignment="Center"
                                                                   Margin="0,0,15,0"/>
                                                        <TextBox Grid.Column="1"
                                                                 Text="{Binding ProjectName, UpdateSourceTrigger=PropertyChanged}"
                                                                 Style="{StaticResource EditTextBoxStyle}"
                                                                 FontSize="16"
                                                                 Margin="0,10,20,10"
                                                                 IsReadOnly="True"
                                                                 />

                                                        <TextBlock Grid.Column="2" Text="Tên sản phẩm"
                                                                   Style="{StaticResource LabelStyle}"
                                                                   FontSize="16"
                                                                   VerticalAlignment="Center"
                                                                   Margin="0,0,15,0"/>
                                                        <TextBox Grid.Column="3"
                                                                 Text="{Binding ProductName, UpdateSourceTrigger=PropertyChanged}"
                                                                 Style="{StaticResource EditTextBoxStyle}"
                                                                 FontSize="16"
                                                                 Margin="0,10,20,10"
                                                                 IsReadOnly="True"
                                                                 /> 
                                                    </Grid>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>
                                </GroupBox>
-->

                                <GroupBox Header="SẢN PHẨM" Style="{StaticResource GroupBoxStyle}" Margin="15">

                                    <StackPanel>

                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,10">
                                            <Button
                                                        Width="120"
                                                        Height="35" 
                                                    Margin="0,0,10,0"
                                                        Command="{Binding DeleteProductCommand}"
                                                        Style="{StaticResource MaterialDesignRaisedButton}"
                                                        Visibility="{Binding IsSelectedProduct, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                <Button.Content>
                                                    <StackPanel Orientation="Horizontal">
                                                        <materialDesign:PackIcon Kind="Delete" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                                        <TextBlock Text="Xóa" VerticalAlignment="Center"/>
                                                    </StackPanel>
                                                </Button.Content>
                                            </Button>

                                            <Button
                                                        Width="120"
                                                        Height="35"
                                                        Command="{Binding AddProductCommand}"
                                                        Style="{StaticResource MaterialDesignRaisedButton}">
                                                <Button.Content>
                                                    <StackPanel Orientation="Horizontal">
                                                        <materialDesign:PackIcon Kind="Plus" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                                        <TextBlock Text="Thêm" VerticalAlignment="Center"/>
                                                    </StackPanel>
                                                </Button.Content>
                                            </Button>

                                        </StackPanel>
                                        <DataGrid ItemsSource="{Binding Products}"
                                                    AutoGenerateColumns="False"
                                                    CanUserAddRows="False"
                                                    CanUserDeleteRows="False"
                                                    IsReadOnly="False"
                                                    HeadersVisibility="Column"
                                                    GridLinesVisibility="Horizontal"
                                                    SelectionMode="Single"
                                                    FontSize="14"
                                                    RowHeight="40"
                                                    BorderThickness="2"
                                                    SelectedItem="{Binding SelectedProduct}"
                                                    materialDesign:DataGridAssist.CellPadding="8"
                                                    materialDesign:DataGridAssist.ColumnHeaderPadding="8">
                                            <DataGrid.Columns>
                                                <DataGridTextColumn Header="Dự án" 
                  Binding="{Binding ProjectName}" 
                                                                    IsReadOnly="True"
                  Width="*"
                  MinWidth="100"/>
                                                <DataGridTextColumn Header="Sản phẩm" 
                  Binding="{Binding ProductName}" 
                                                                    IsReadOnly="True"
                  Width="*"
                  MinWidth="80"/>
                                                <DataGridTextColumn Header="Diện tích" 
                  Binding="{Binding ProductArea}" 
                                                                    IsReadOnly="True"
                  Width="*"
                  MinWidth="100"/>
                                                <DataGridTextColumn Header="Giá gốc (VNĐ)" 
                  Binding="{Binding ProductPrice, Converter={StaticResource CurrencyFormatConverter}}" 
                                                                    IsReadOnly="True"
                  Width="*"
                  MinWidth="120"/>
                                                <DataGridTemplateColumn Header="Trạng thái" MinWidth="120">
                                                    <DataGridTemplateColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <!-- Hiển thị dạng text -->
                                                            <TextBlock Text="{Binding ProductStatusName}" />
                                                        </DataTemplate>
                                                    </DataGridTemplateColumn.CellTemplate>

                                                    <DataGridTemplateColumn.CellEditingTemplate>
                                                        <DataTemplate>
                                                            <!-- Khi edit -> hiện ComboBox -->
                                                            <ComboBox
                                                                ItemsSource="{Binding DataContext.ProductStatusOptions, 
                                                                                      RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                                SelectedValue="{Binding DataContext.SelectedStatusOptionId,
                                                                RelativeSource={RelativeSource AncestorType=DataGrid}
                                                                , Mode=TwoWay}"
                                                                SelectedValuePath="Id"
                                                                DisplayMemberPath="Name"
                                                                />
                                                        </DataTemplate>
                                                    </DataGridTemplateColumn.CellEditingTemplate>
                                                </DataGridTemplateColumn>

                                                <DataGridTextColumn Header="Loại sản phẩm" 
                  Binding="{Binding ProductTypeName}" 
                                                                    IsReadOnly="True"
                  Width="*"
                  MinWidth="120"/>
                                            </DataGrid.Columns>
                                        </DataGrid>
                                    </StackPanel>
                                </GroupBox>

                                <!-- Mô tả -->
                                <GroupBox Header="MÔ TẢ" Style="{StaticResource GroupBoxStyle}" Margin="15">
                                    <StackPanel>
                                        <Grid Margin="0,0,15,0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Column="0" Text="" 
                               Style="{StaticResource LabelStyle}" 
                               VerticalAlignment="Top" 
                               FontSize="16"
                               Margin="0,10,15,0"/>
                                            <TextBox Grid.Column="1" 
                             AcceptsReturn="True"
                             TextWrapping="Wrap"
                             VerticalScrollBarVisibility="Auto"
                             Height="120"
                             FontSize="16"
                             Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource EditTextBoxStyle}" 
                             Margin="0,10,20,10"
                             IsReadOnly="{Binding IsEditMode, Converter={StaticResource InverseBoolConverter}}"/>

                                        </Grid>
                                    </StackPanel>
                                </GroupBox>
                            </StackPanel>
                        </ScrollViewer>
                    </TabItem>
                </TabControl>
            </StackPanel>
        </ScrollViewer>


    </Grid>
</Window>
