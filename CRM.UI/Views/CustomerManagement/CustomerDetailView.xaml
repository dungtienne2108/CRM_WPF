<Window x:Class="CRM.UI.Views.CustomerManagement.CustomerDetailView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CRM.UI.Views.CustomerManagement"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:converters="clr-namespace:CRM.UI.Converters"
        mc:Ignorable="d"
        Title="Chi tiết khách hàng" Height="800" Width="1400"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        FontFamily="{DynamicResource MaterialDesignFont}">
    <Window.Resources>
        <converters:StatusToColorConverter x:Key="StatusToColorConverter"/>
        <converters:StatusToIndexConverter x:Key="StatusToIndexConverter"/>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:BoolToFontWeightConverter x:Key="BoolToFontWeightConverter"/>
        <converters:InverseBooleanToVisibleConverter x:Key="InverseBoolToVisConverter"/>
        <converters:InverseBoolConverter x:Key="InverseBoolConverter"/>
        <converters:CurrencyFormatConverter x:Key="CurrencyFormatConverter"/>

        <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}">
            <Setter Property="Background" Value="{DynamicResource MaterialDesignToolBarBackground}"/>
            <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBody}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Height" Value="48"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
        </Style>

        <!-- Style cho DataGrid Row -->
        <Style TargetType="DataGridRow" BasedOn="{StaticResource MaterialDesignDataGridRow}">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource MaterialDesignSelection}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="GroupBoxStyle" TargetType="GroupBox">
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#757575"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

        <Style x:Key="ValueStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Foreground" Value="#212121"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>

        <Style x:Key="EditTextBoxStyle" TargetType="TextBox" BasedOn="{StaticResource MaterialDesignOutlinedTextBox}">
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Margin" Value="0,5,0,15"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Background" Value="White"/>
        </Style>

        <Style x:Key="EditDatePickerStyle" TargetType="DatePicker" BasedOn="{StaticResource MaterialDesignOutlinedDatePicker}">
            <Setter Property="Margin" Value="0,5,0,15"/>
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="SelectedDateFormat" Value="Short"/>
            <Setter Property="Language" Value="vi-VN"/>
            <Setter Property="CalendarStyle" Value="{StaticResource NoHeaderStyle}"/>
        </Style>

        <Style x:Key="EditComboBoxStyle" TargetType="ComboBox" BasedOn="{StaticResource MaterialDesignOutlinedComboBox}">
            <Setter Property="Margin" Value="0,5,0,15"/>
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Background" Value="White"/>
        </Style>
    </Window.Resources>

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Dòng 1: Avatar + Name -->
            <RowDefinition Height="Auto"/>
            <!-- Dòng 2: Status Progress -->
            <RowDefinition Height="*"/>
            <!-- Dòng 3: MainContent + Panel phải -->
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
    Background="White" Padding="20" CornerRadius="4" 
                BorderThickness="1" BorderBrush="#E0E0E0"
    materialDesign:ElevationAssist.Elevation="Dp4" 
    Margin="20,20,20,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Avatar -->
                <Border Grid.Column="0" Width="60" Height="60" 
                        Background="#2196F3" CornerRadius="30" 
                        VerticalAlignment="Top">
                    <materialDesign:PackIcon Kind="Account" 
                                           Width="35" Height="35"
                                           Foreground="White"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                </Border>

                <!-- Name and Code -->
                <StackPanel Grid.Column="1" Margin="15,0,0,0">
                    <TextBlock Text="Khách hàng" 
                             FontSize="11" Foreground="#757575"/>
                    <TextBlock Text="{Binding CustomerName}" 
                             FontSize="24" FontWeight="SemiBold" 
                             Foreground="#212121"/>
                    <TextBlock FontSize="12" Foreground="#757575" Margin="0,5,0,0">
                        <Run Text="Mã:"/>
                        <Run Text="{Binding CustomerCode}" FontWeight="SemiBold"/>
                    </TextBlock>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Top">
                    <Button 
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    Command="{Binding ToggleEditModeCommand}"
                    Height="36"
                    Margin="0,0,10,0">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Pencil" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                <TextBlock Text="Sửa" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button.Content>
                    </Button>

                    <Button 
                Style="{StaticResource MaterialDesignRaisedButton}"
                Command="{Binding UpdateCustomerCommand}"
                Visibility="{Binding IsEditMode, Converter={StaticResource BooleanToVisibilityConverter}}"
                Height="36"
                        IsEnabled="True"
                Margin="0,0,10,0">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Pencil" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                <TextBlock Text="Lưu" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button.Content>
                    </Button>

                    <Button 
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    Command="{Binding DeleteCommand}"
                    Height="36"
                    Margin="0,0,10,0"
                    Visibility="{Binding IsDeleteVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Delete" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                <TextBlock Text="Xóa" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button.Content>
                    </Button>
                </StackPanel>
            </Grid>


        </Border>

        <!--Main Content Area -->
        <ScrollViewer Grid.Row="2" Grid.Column="0" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">
                <!-- Tabs -->
                <TabControl materialDesign:ColorZoneAssist.Mode="PrimaryMid"
                  Style="{StaticResource MaterialDesignFilledTabControl}">

                    <!-- Tab Thông tin -->
                    <TabItem Header="Thông tin">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
                            <StackPanel>
                                <!-- Thông tin khách hàng -->
                                <GroupBox Header="THÔNG TIN KHÁCH HÀNG"  Margin="15"
                                          Background="White"
                                Style="{StaticResource GroupBoxStyle}">
                                    <StackPanel>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <!-- Họ tên -->
                                            <TextBlock Grid.Column="0" Grid.Row="0" Text="Họ tên:" 
                                           Style="{StaticResource LabelStyle}" 
                                           VerticalAlignment="Center" 
                                           FontSize="16"
                                           Margin="0,0,15,0"/>
                                            <TextBox Grid.Column="1" Grid.Row="0" 
                                         Style="{StaticResource EditTextBoxStyle}"
                                         Text="{Binding CustomerName,
                                        Mode=TwoWay,
                                        UpdateSourceTrigger=PropertyChanged,
                                        ValidatesOnDataErrors=True,
                                        ValidatesOnNotifyDataErrors=True,
                                        NotifyOnValidationError=True}"
                                         FontSize="16"
                                         Margin="0,10,20,10"
                                         IsReadOnly="{Binding IsEditMode, Converter={StaticResource InverseBoolConverter}}">
                                            </TextBox>

                                            <!-- Loại khách -->
                                            <TextBlock Grid.Column="2" Grid.Row="0" Text="Loại khách hàng:" 
                                                     Style="{StaticResource LabelStyle}" 
                                                     VerticalAlignment="Center" 
                                                     FontSize="16"
                                                     Margin="0,0,15,0"/>
                                            <TextBox Grid.Column="3" Grid.Row="0" 
                                                    Text="{Binding CustomerTypeName, UpdateSourceTrigger=PropertyChanged}"
                                                    Style="{StaticResource EditTextBoxStyle}" 
                                                    FontSize="16"
                                                    Margin="0,10,20,10"
                                                    IsReadOnly="True"
                                                     Visibility="{Binding IsEditMode, Converter={StaticResource InverseBoolToVisConverter}}"/>
                                            <ComboBox Grid.Column="3" Grid.Row="0" 
                                                Style="{StaticResource EditComboBoxStyle}" 
                                                FontSize="16"
                                                Margin="0,10,20,10"
                                                ItemsSource="{Binding CustomerTypes}"
                                                SelectedValue="{Binding CustomerTypeId}"
                                                SelectedValuePath="Id"
                                                DisplayMemberPath="Name"
                                                IsReadOnly="{Binding IsEditMode, Converter={StaticResource InverseBoolConverter}}"
                                                      Visibility="{Binding IsEditMode, Converter={StaticResource BooleanToVisibilityConverter}}"/>


                                            <!-- Giới tính -->
                                            <TextBlock Grid.Column="0" Grid.Row="1" Text="Căn cước:" 
                           Style="{StaticResource LabelStyle}" 
                           VerticalAlignment="Center" 
                           FontSize="16"
                           Margin="0,0,15,0"/>
                                            <TextBox Grid.Column="1" Grid.Row="1" 
                         Text="{Binding CustomerIdentityCard, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource EditTextBoxStyle}" 
                         FontSize="16"
                         Margin="0,10,20,10"
                         IsReadOnly="{Binding IsEditMode, Converter={StaticResource InverseBoolConverter}}"/>

                                            <!-- Số điện thoại -->
                                            <TextBlock Grid.Column="2" Grid.Row="1" Text="Số điện thoại:" 
                           Style="{StaticResource LabelStyle}" 
                           VerticalAlignment="Center" 
                           FontSize="16"
                           Margin="0,0,15,0"/>
                                            <TextBox Grid.Column="3" Grid.Row="1" 
                         Text="{Binding Phone, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource EditTextBoxStyle}" 
                         FontSize="16"
                         Margin="0,10,20,10"
                         IsReadOnly="{Binding IsEditMode, Converter={StaticResource InverseBoolConverter}}"/>

                                            <!-- Email -->
                                            <TextBlock Grid.Column="0" Grid.Row="2" Text="Email:" 
                           Style="{StaticResource LabelStyle}" 
                           VerticalAlignment="Center" 
                           FontSize="16"
                           Margin="0,0,15,0"/>
                                            <TextBox Grid.Column="1" Grid.Row="2" 
                         Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource EditTextBoxStyle}" 
                         FontSize="16"
                         Margin="0,10,20,10"
                         IsReadOnly="{Binding IsEditMode, Converter={StaticResource InverseBoolConverter}}"/>

                                            <!-- Địa chỉ -->
                                            <TextBlock Grid.Column="2" Grid.Row="2" Text="Địa chỉ:" 
                           Style="{StaticResource LabelStyle}" 
                           VerticalAlignment="Center" 
                           FontSize="16"
                           Margin="0,0,15,0"/>
                                            <TextBox Grid.Column="3" Grid.Row="2" 
                         Text="{Binding Address, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource EditTextBoxStyle}" 
                         FontSize="16"
                         Margin="0,10,20,10"
                         IsReadOnly="{Binding IsEditMode, Converter={StaticResource InverseBoolConverter}}"/>

                                       <!--     <TextBlock Grid.Column="0" Grid.Row="3" Text="Lĩnh vực kinh doanh" 
                                                       Style="{StaticResource LabelStyle}"
                                                       VerticalAlignment="Center"
                                                       FontSize="16"
                                                       Margin="0,0,15,0"/>
                                            <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding Major, UpdateSourceTrigger=PropertyChanged}"
                                                     Style="{StaticResource EditTextBoxStyle}"
                                                     FontSize="16"
                                                     Margin="0,10,20,10"
                                                     IsReadOnly="{Binding IsEditMode, Converter={StaticResource InverseBoolConverter}}"/> -->
                                        </Grid>
                                    </StackPanel>
                                </GroupBox>

                                <!-- Mô tả -->
                                <GroupBox Header="MÔ TẢ" Style="{StaticResource GroupBoxStyle}" Margin="15" Background="White">
                                    <StackPanel>
                                        <Grid Margin="0,0,15,0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Column="0" Text="" 
                           Style="{StaticResource LabelStyle}" 
                           VerticalAlignment="Top" 
                           FontSize="16"
                           Margin="0,10,15,0"/>
                                            <TextBox Grid.Column="1" 
                         AcceptsReturn="True"
                         TextWrapping="Wrap"
                         VerticalScrollBarVisibility="Auto"
                         Height="80"
                         FontSize="16"
                         Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource EditTextBoxStyle}" 
                         Margin="0,10,20,10"
                         IsReadOnly="{Binding IsEditMode, Converter={StaticResource InverseBoolConverter}}"/>

                                        </Grid>
                                    </StackPanel>
                                </GroupBox>
                            </StackPanel>
                        </ScrollViewer>
                    </TabItem>

                    <TabItem Header="Thông tin liên quan">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0,20,0,0">
                            <StackPanel>
                                <!-- Bảng khách hàng tiềm năng -->
                                <TextBlock Text="Khách hàng tiềm năng" FontSize="16" FontWeight="Bold" Margin="0,0,0,10" Foreground="#1565C0"/>
                                <DataGrid x:Name="LeadCustomerGrid"
          ItemsSource="{Binding Leads}"
          Style="{StaticResource MaterialDesignDataGrid}"
          BorderBrush="Gray"
          BorderThickness="1"
          AutoGenerateColumns="False"
          CanUserAddRows="False"
          CanUserDeleteRows="False"
          HeadersVisibility="Column"
          GridLinesVisibility="All"
          RowHeight="48"
          HorizontalGridLinesBrush="{DynamicResource MaterialDesignDivider}"
          VerticalScrollBarVisibility="Auto"
          HorizontalScrollBarVisibility="Hidden"
          VerticalAlignment="Stretch"
          FontSize="14"
          HorizontalAlignment="Stretch">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Mã" 
                            Binding="{Binding Code}" 
                            Width="100"
                            IsReadOnly="True"
                            ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"/>
                                        <DataGridTextColumn Header="Tên" 
                            Binding="{Binding Name}" 
                            Width="220"
                            IsReadOnly="True"
                            ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"/>
                                        <DataGridTextColumn Header="Nguồn" 
                            Binding="{Binding Source}" 
                            Width="220"
                            IsReadOnly="True"
                            ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"/>
                                        <DataGridTextColumn Header="Mức độ" 
                            Binding="{Binding PotentialLevel}" 
                            Width="220"
                            IsReadOnly="True"
                            ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"/>
                                        <DataGridTextColumn Header="Ngày tạo" 
                            Binding="{Binding StartDate, StringFormat='dd/MM/yyyy'}" 
                            Width="220"
                            IsReadOnly="True"
                            ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"/>
                                        <DataGridTextColumn Header="Mô tả" 
                            Binding="{Binding Description}" 
                            Width="*"
                            IsReadOnly="True"
                            ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"/>
                                    </DataGrid.Columns>
                                </DataGrid>


                                <!-- Bảng cơ hội bán hàng -->
                                <TextBlock Text="Cơ hội bán hàng" FontSize="16" FontWeight="Bold" Margin="0,0,0,10" Foreground="#1565C0"/>
                                <DataGrid x:Name="OpportunitiesGrid"
    ItemsSource="{Binding Opportunities}"
    Style="{StaticResource MaterialDesignDataGrid}"
    BorderBrush="Gray"
    BorderThickness="1"
    AutoGenerateColumns="False"
    CanUserAddRows="False"
    CanUserDeleteRows="False"
    HeadersVisibility="Column"
    GridLinesVisibility="All"
    RowHeight="48"
    HorizontalGridLinesBrush="{DynamicResource MaterialDesignDivider}"
    VerticalScrollBarVisibility="Auto"
    HorizontalScrollBarVisibility="Hidden"
    VerticalAlignment="Stretch"
    FontSize="14"
    HorizontalAlignment="Stretch">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Mã" 
            Binding="{Binding OpportunityCode}" 
            Width="100"
            IsReadOnly="True"
            ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"/>
                                        <DataGridTextColumn Header="Tên" 
            Binding="{Binding OpportunityName}" 
            Width="220"
            IsReadOnly="True"
            ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"/>
                                        <DataGridTextColumn Header="Số sản phẩm" 
            Binding="{Binding ItemCount}" 
            Width="220"
            IsReadOnly="True"
            ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"/>
                                        <DataGridTextColumn Header="Ngày tạo" 
            Binding="{Binding CreateDate, StringFormat='dd/MM/yyyy'}" 
            Width="220"
            IsReadOnly="True"
            ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"/>
                                        <DataGridTextColumn Header="Ngày kết thúc" 
            Binding="{Binding EndDate, StringFormat='dd/MM/yyyy'}" 
            Width="220"
            IsReadOnly="True"
            ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"/>
                                        <DataGridTextColumn Header="Mô tả" 
            Binding="{Binding OpportunityDescription}" 
            Width="*"
            IsReadOnly="True"
            ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"/>
                                    </DataGrid.Columns>
                                </DataGrid>

                                <!-- Đặt cọc -->
                                <TextBlock Text="Đặt cọc" FontSize="16" FontWeight="Bold" Margin="0,0,0,10" Foreground="#1565C0"/>
                                <DataGrid x:Name="DepositsGrid"
    ItemsSource="{Binding Deposits}"
    Style="{StaticResource MaterialDesignDataGrid}"
    BorderBrush="Gray"
    BorderThickness="1"
    AutoGenerateColumns="False"
    CanUserAddRows="False"
    CanUserDeleteRows="False"
    HeadersVisibility="Column"
    GridLinesVisibility="All"
    RowHeight="48"
    HorizontalGridLinesBrush="{DynamicResource MaterialDesignDivider}"
    VerticalScrollBarVisibility="Auto"
    HorizontalScrollBarVisibility="Hidden"
    VerticalAlignment="Stretch"
    FontSize="14"
    HorizontalAlignment="Stretch">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Mã" 
            Binding="{Binding Code}" 
            Width="100"
            IsReadOnly="True"
            ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"/>
                                        <DataGridTextColumn Header="Tên cơ hội" 
            Binding="{Binding OpportunityName}" 
            Width="220"
            IsReadOnly="True"
            ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"/>
                                        <DataGridTextColumn Header="Số tiền (VNĐ)" 
            Binding="{Binding Amount, Converter={StaticResource CurrencyFormatConverter}}" 
            Width="220"
            IsReadOnly="True"
            ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"/>
                                        <DataGridTextColumn Header="Ngày đặt cọc" 
            Binding="{Binding StartDate, StringFormat='dd/MM/yyyy'}" 
            Width="220"
            IsReadOnly="True"
            ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"/>
                                        <DataGridTextColumn Header="Dự án" 
            Binding="{Binding ProjectName}" 
            Width="220"
            IsReadOnly="True"
            ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"/>
                                        <DataGridTextColumn Header="Sản phẩm" 
            Binding="{Binding ProductName}" 
            Width="*"
            IsReadOnly="True"
            ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"/>
                                    </DataGrid.Columns>
                                </DataGrid>

                                <!-- Bảng hợp đồng -->
                                <TextBlock Text="Hợp đồng" FontSize="16" FontWeight="Bold" Margin="0,0,0,10" Foreground="#1565C0"/>
                                <DataGrid x:Name="ContractGrid"
    ItemsSource="{Binding ContractsItems}"
    Style="{StaticResource MaterialDesignDataGrid}"
    BorderBrush="Gray"
    BorderThickness="1"
    AutoGenerateColumns="False"
    CanUserAddRows="False"
    CanUserDeleteRows="False"
    HeadersVisibility="Column"
    GridLinesVisibility="All"
    RowHeight="48"
    HorizontalGridLinesBrush="{DynamicResource MaterialDesignDivider}"
    VerticalScrollBarVisibility="Auto"
    HorizontalScrollBarVisibility="Hidden"
    VerticalAlignment="Stretch"
    FontSize="14"
    HorizontalAlignment="Stretch">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Mã" 
            Binding="{Binding Code}" 
            Width="100"
            IsReadOnly="True"
            ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"/>
                                        <DataGridTextColumn Header="Tên" 
            Binding="{Binding Name}" 
            Width="220"
            IsReadOnly="True"
            ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"/>
                                        <DataGridTextColumn Header="Số tiền (VNĐ)" 
            Binding="{Binding Amount, Converter={StaticResource CurrencyFormatConverter}}" 
            Width="220"
            IsReadOnly="True"
            ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"/>
                                        <DataGridTextColumn Header="Dự án" 
            Binding="{Binding ProjectName}" 
            Width="220"
            IsReadOnly="True"
            ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"/>
                                        <DataGridTextColumn Header="Sản phẩm" 
            Binding="{Binding ProductName}" 
            Width="220"
            IsReadOnly="True"
            ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"/>
                                        <DataGridTextColumn Header="Ngày bắt đầu" 
            Binding="{Binding StartDate, StringFormat='dd/MM/yyyy'}" 
            Width="200"
            IsReadOnly="True"
            ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"/>
                                        <DataGridTextColumn Header="Ngày kết thúc" 
            Binding="{Binding EndDate, StringFormat='dd/MM/yyyy'}" 
            Width="*"
            IsReadOnly="True"
            ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"/>
                                    </DataGrid.Columns>
                                </DataGrid>

                            </StackPanel>
                        </ScrollViewer>
                    </TabItem>
                </TabControl>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
