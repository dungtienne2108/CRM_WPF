<UserControl x:Class="CRM.UI.Views.CustomerManagement.CustomerManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:local="clr-namespace:CRM.UI.Views.CustomerManagement"
             xmlns:viewModels="clr-namespace:CRM.UI.ViewModels.CustomerManagement"
             mc:Ignorable="d" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             Background="{DynamicResource MaterialDesignPaper}">

    <UserControl.Resources>
        <!-- Style cho DataGrid Header -->
        <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}">
            <Setter Property="Background" Value="{DynamicResource MaterialDesignToolBarBackground}"/>
            <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBody}"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Height" Value="48"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
        </Style>

        <!-- Style cho DataGrid Row -->
        <Style TargetType="DataGridRow" BasedOn="{StaticResource MaterialDesignDataGridRow}">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource MaterialDesignSelection}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style cho ComboBox trong dropdown button -->
        <Style x:Key="StatusComboBoxStyle" TargetType="ComboBox" BasedOn="{StaticResource MaterialDesignComboBox}">
            <Setter Property="Width" Value="140"/>
            <Setter Property="Height" Value="32"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!--Header-->
        <Grid Grid.Row="0" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Tiêu đề -->
            <TextBlock Grid.Column="0" 
               Text="Danh sách khách hàng"
               Style="{StaticResource MaterialDesignHeadline5TextBlock}"
               VerticalAlignment="Center"
               Margin="0,0,32,0"/>

            <TextBox Grid.Column="1"
             x:Name="SearchTextBox"
             Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
             materialDesign:HintAssist.Hint="Tìm kiếm..."
             materialDesign:TextFieldAssist.HasLeadingIcon="True"
             materialDesign:TextFieldAssist.LeadingIcon="Search"
             Style="{StaticResource MaterialDesignOutlinedTextBox}"
             MaxWidth="400"
             HorizontalAlignment="Center"
             VerticalAlignment="Center"
             Margin="16,0"
             >
                <TextBox.InputBindings>
                    <KeyBinding Key="Enter" Command="{Binding SearchCommand}" />
                </TextBox.InputBindings>
            </TextBox>

            <!-- Button Tạo mới -->
            <Button Grid.Column="2"
         Margin="0,0,5,0"
         Command="{Binding ExportCommand}"
         Content="Xuất dữ liệu"
         Style="{StaticResource MaterialDesignOutlinedButton}"
         materialDesign:ButtonAssist.CornerRadius="4"
         Height="40"
         Padding="24,0"
         VerticalAlignment="Center"/>
            
            <Button Grid.Column="3"
            x:Name="CreateNewButton"
            Command="{Binding CreateNewCommand}"
            Content="Tạo mới"
            Style="{StaticResource MaterialDesignRaisedButton}"
            materialDesign:ButtonAssist.CornerRadius="4"
            Height="40"
            Padding="24,0"
            VerticalAlignment="Center"/>
        </Grid>

        <Border Grid.Row="1"
            Margin="8" Padding="16"
            CornerRadius="2"                
            materialDesign:ElevationAssist.Elevation="Dp4"
                VerticalAlignment="Stretch">
            <DataGrid x:Name="CustomerDataGrid"
                      BorderThickness="1"
                      BorderBrush="Gray"
                       ItemsSource="{Binding CustomerItems}"
                       Style="{StaticResource MaterialDesignDataGrid}"
                       AutoGenerateColumns="False"
                      RowHeight="48"
                       CanUserAddRows="False"
                       CanUserDeleteRows="False"
                       HeadersVisibility="Column"
                       GridLinesVisibility="All"
                       HorizontalGridLinesBrush="{DynamicResource MaterialDesignDivider}"
                       VerticalScrollBarVisibility="Auto"
                       HorizontalScrollBarVisibility="Hidden"
                      VerticalAlignment="Stretch"
                      FontSize="14"
                      HorizontalAlignment="Stretch">
                <DataGrid.Columns>
                    <!-- STT -->
                    <DataGridTextColumn Header="STT" 
                    Binding="{Binding Index}"
                    Width="60"
                    IsReadOnly="True"
                    ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"/>

                    <!-- CheckBox -->
                    <DataGridCheckBoxColumn Header="" 
                        Binding="{Binding IsSelected}"
                        Width="50"
                        ElementStyle="{StaticResource MaterialDesignDataGridCheckBoxColumnStyle}"/>

                    <!-- Mã -->
                    <DataGridTextColumn Header="Mã" 
                    Binding="{Binding Code}"
                    Width="100"
                    IsReadOnly="True"
                    ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"/>


                    <!-- Tên -->
                    <DataGridTextColumn Header="Họ và tên" 
                    Binding="{Binding Name}"
                    Width="180"
                    IsReadOnly="True"
                    ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"/>

                    <!-- Số điện thoại -->
                    <DataGridTextColumn Header="Số điện thoại" 
                    Binding="{Binding Phone}"
                    Width="120"
                    IsReadOnly="True"
                    ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"/>

                    <!-- Email -->
                    <DataGridTextColumn Header="Email" 
                    Binding="{Binding Email}"
                    Width="180"
                    IsReadOnly="True"
                    ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"/>

                    <!-- Gender -->
                    <DataGridTextColumn Header="Giới tính" 
                    Binding="{Binding Gender}"
                    Width="100"
                    IsReadOnly="True"
                    ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"/>

                    <!-- Địa chỉ -->
                    <DataGridTextColumn Header="Địa chỉ" 
                    Binding="{Binding Address}"
                    Width="200"
                    IsReadOnly="True"
                    ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"/>

                    <DataGridTextColumn Header="Mô tả" 
                        Binding="{Binding Description}"
                        Width="*"
                        IsReadOnly="True"
                        ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"/>


                </DataGrid.Columns>
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="MouseDoubleClick">
                        <i:InvokeCommandAction Command="{Binding OpenDetailCommand}"
           CommandParameter="{Binding SelectedItem, RelativeSource={RelativeSource AncestorType=DataGrid}}" />
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </DataGrid>
        </Border>

        <Grid Grid.Row="2" Margin="0,16,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Thông tin tổng số -->
            <TextBlock Grid.Column="0"
               x:Name="TotalRecordsText"
               Text="{Binding TotalRecordsText}"
               Style="{StaticResource MaterialDesignBody2TextBlock}"
               VerticalAlignment="Center"/>

            <!-- nút -->
            <StackPanel Grid.Column="1" 
                Orientation="Horizontal" 
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
                <Button x:Name="FirstPageButton"
                Command="{Binding FirstPageCommand}"
                Content="&lt;&lt;"
                Style="{StaticResource MaterialDesignOutlinedButton}"
                Width="40" Height="32"
                Margin="2"/>

                <Button x:Name="PreviousPageButton"
                Command="{Binding PreviousPageCommand}"
                Content="&lt;"
                Style="{StaticResource MaterialDesignOutlinedButton}"
                Width="40" Height="32"
                Margin="2"/>

                <!-- <Button x:Name="Page1Button"
                Command="{Binding GoToPageCommand}"
                Content="1"
                Style="{StaticResource MaterialDesignRaisedButton}"
                Width="40" Height="32"
                Margin="2"/>

        <Button x:Name="Page2Button"
                Command="{Binding GoToPageCommand}"
                Content="2"
                Style="{StaticResource MaterialDesignOutlinedButton}"
                Width="40" Height="32"
                Margin="2"/>

        <Button x:Name="Page3Button"
                Command="{Binding GoToPageCommand}"
                Content="3"
                Style="{StaticResource MaterialDesignOutlinedButton}"
                Width="40" Height="32"
                Margin="2"/>

        <TextBlock Text="..."
                   VerticalAlignment="Center"
                   Margin="8,0"/>
        -->

                <TextBox x:Name="PageNumberTextBox"
                 Text="{Binding CurrentPage, UpdateSourceTrigger=PropertyChanged}"
                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                 Width="60" Height="36"
                 FontSize="16"
                 FontWeight="Medium"
                 Padding="0,4,0,4"
                 Margin="8,0"
                 HorizontalContentAlignment="Center"
                 VerticalContentAlignment="Center"
                 
                 />

                <Button x:Name="NextPageButton"
                Command="{Binding NextPageCommand}"
                Content=">"
                Style="{StaticResource MaterialDesignOutlinedButton}"
                Width="40" Height="32"
                Margin="2"/>

                <Button x:Name="LastPageButton"
                Command="{Binding LastPageCommand}"
                Content="&gt;&gt;"
                Style="{StaticResource MaterialDesignOutlinedButton}"
                Width="40" Height="32"
                Margin="2"/>
            </StackPanel>

            <!-- Records per page -->
            <StackPanel Grid.Column="2" 
                Orientation="Horizontal"
                VerticalAlignment="Center">
                <TextBlock Text="Hiển thị"
                   Style="{StaticResource MaterialDesignBody2TextBlock}"
                   VerticalAlignment="Center"
                   Margin="0,0,8,0"/>

                <ComboBox x:Name="RecordsPerPageComboBox"
                  ItemsSource="{x:Static viewModels:CustomerManagementViewModel.RecordsPerPageOptions}"
                  SelectedValue="{Binding RecordsPerPage}"
                  Style="{StaticResource MaterialDesignComboBox}"
                  Width="80"
                  Height="32"
                  SelectedIndex="0">
                </ComboBox>

                <TextBlock Text="bản ghi/trang"
                   Style="{StaticResource MaterialDesignBody2TextBlock}"
                   VerticalAlignment="Center"
                   Margin="8,0,0,0"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
