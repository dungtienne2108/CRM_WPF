<Window x:Class="CRM.UI.Views.PaymentManagement.InvoiceDetailView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CRM.UI.Views.PaymentManagement"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:converters="clr-namespace:CRM.UI.Converters"
        mc:Ignorable="d"
        Title="Chi tiết hóa đơn" Height="600" Width="1400"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        FontFamily="{DynamicResource MaterialDesignFont}">

    <Window.Resources>
        <converters:StatusToColorConverter x:Key="StatusToColorConverter"/>
        <converters:StatusToIndexConverter x:Key="StatusToIndexConverter"/>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:BoolToFontWeightConverter x:Key="BoolToFontWeightConverter"/>
        <converters:InverseBooleanToVisibleConverter x:Key="InverseBoolToVisConverter"/>
        <converters:InverseBoolConverter x:Key="InverseBoolConverter"/>
        <converters:CurrencyFormatConverter x:Key="CurrencyFormatConverter"/>
        <converters:StringToDecimalConveter x:Key="StringToDecimalConveter"/>
        <Style x:Key="GroupBoxStyle" TargetType="GroupBox">
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#757575"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

        <Style x:Key="ValueStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Foreground" Value="#212121"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>

        <Style x:Key="EditTextBoxStyle" TargetType="TextBox" BasedOn="{StaticResource MaterialDesignOutlinedTextBox}">
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Margin" Value="0,5,0,15"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="materialDesign:HintAssist.HelperTextFontSize" Value="12"/>
            <Style.Triggers>

                <Trigger Property="IsKeyboardFocusWithin" Value="True">
                    <Setter Property="BorderBrush" Value="#2196F3"/>
                    <Setter Property="BorderThickness" Value="2"/>
                    <Setter Property="Background" Value="#D9D9D9"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="EditDatePickerStyle" TargetType="DatePicker" BasedOn="{StaticResource MaterialDesignOutlinedDatePicker}">
            <Setter Property="Margin" Value="0,5,0,15"/>
            <Setter Property="FontSize" Value="16" />
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="SelectedDateFormat" Value="Short"/>
            <Setter Property="Language" Value="vi-VN"/>
            <Setter Property="CalendarStyle" Value="{StaticResource NoHeaderStyle}"/>
        </Style>

        <Style x:Key="EditComboBoxStyle" TargetType="ComboBox" BasedOn="{StaticResource MaterialDesignOutlinedComboBox}">
            <Setter Property="Margin" Value="0,5,0,15"/>
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Background" Value="White"/>
        </Style>
    </Window.Resources>

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Dòng 1: Avatar + Name -->
            <RowDefinition Height="Auto"/>
            <!-- Dòng 2: Status Progress -->
            <RowDefinition Height="*"/>
            <!-- Dòng 3: MainContent + Panel phải -->
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                BorderThickness="1" BorderBrush="#E0E0E0"
            Background="White" Padding="20" CornerRadius="4" 
            materialDesign:ElevationAssist.Elevation="Dp4" 
            Margin="20,20,20,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Avatar -->
                <Border Grid.Column="0" Width="60" Height="60" 
                                Background="#2196F3" CornerRadius="30" 
                                VerticalAlignment="Top">
                    <materialDesign:PackIcon Kind="Account" 
                                                   Width="35" Height="35"
                                                   Foreground="White"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"/>
                </Border>

                <!-- Name and Code -->
                <StackPanel Grid.Column="1" Margin="15,0,0,0">
                    <TextBlock Text="Hóa đơn" 
                                     FontSize="11" Foreground="#757575"/>
                    <TextBlock Text="{Binding InvoiceCode}" 
                                     FontSize="24" FontWeight="SemiBold" 
                                     Foreground="#212121"/>

                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Top">
                    <Button 
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            Command="{Binding ToggleEditModeCommand}"
                            Height="36"
                            Margin="0,0,10,0">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Pencil" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                <TextBlock Text="Sửa" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button.Content>
                    </Button>

                    <Button 
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        Command="{Binding SaveCommand}"
                        Visibility="{Binding IsEditMode, Converter={StaticResource BooleanToVisibilityConverter}}"
                        Height="36"
                        Margin="0,0,10,0">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Pencil" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                <TextBlock Text="Lưu" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button.Content>
                    </Button>

                    <Button 
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            Command="{Binding DeleteCommand}"
                            Height="36"
                            Margin="0,0,10,0"
                            Visibility="{Binding IsDeleteVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Delete" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                <TextBlock Text="Xóa" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button.Content>
                    </Button>
                </StackPanel>
            </Grid>


        </Border>


        <!--Main Content Area -->
        <ScrollViewer Grid.Row="2" Grid.Column="0" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">
                <!-- Tabs -->
                <TabControl materialDesign:ColorZoneAssist.Mode="PrimaryMid"
                          Style="{StaticResource MaterialDesignFilledTabControl}">

                    <!-- Tab Thông tin -->
                    <TabItem Header="Thông tin hóa đơn">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
                            <StackPanel>

                                <!--  -->
                                <GroupBox Margin="15" Header="THÔNG TIN HÓA ĐƠN"
                                        Style="{StaticResource GroupBoxStyle}">
                                    <StackPanel>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            <TextBlock Grid.Column="0" Grid.Row="0" Text="Số hóa đơn:" 
                                                   Style="{StaticResource LabelStyle}" 
                                                   VerticalAlignment="Center" 
                                                   FontSize="16" 
                                                   Margin="0,0,15,0"/>
                                            <TextBox Grid.Column="1" Grid.Row="0" 
                                                     Text="{Binding InvoiceCode, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                     Style="{StaticResource EditTextBoxStyle}" 
                                                     FontSize="16"
                                                     Margin="0,10,20,10"
                                                     IsReadOnly="True"/>

                                            <TextBlock Grid.Column="2" Grid.Row="0" Text="Hợp đồng:" 
                                                   Style="{StaticResource LabelStyle}" 
                                                   VerticalAlignment="Center" 
                                                   FontSize="16" 
                                                   Margin="0,0,15,0"/>
                                            <TextBox Grid.Column="3" Grid.Row="0" 
                                                 Text="{Binding ContractName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                 Style="{StaticResource EditTextBoxStyle}" 
                                                 FontSize="16"
                                                 Margin="0,10,20,10"
                                                 IsReadOnly="True"/>

                                            <!-- Nhân sự phụ trách -->
                                            <TextBlock Grid.Column="0" Grid.Row="1" Text="Giai đoạn:" 
                                                       Style="{StaticResource LabelStyle}" 
                                                       VerticalAlignment="Center" 
                                                       FontSize="16" 
                                                       Margin="0,0,15,0"/>
                                            <TextBox Grid.Column="1" Grid.Row="1" 
                                                         Text="{Binding InstallmentScheduleName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                         Style="{StaticResource EditTextBoxStyle}" 
                                                         FontSize="16"
                                                         Margin="0,10,20,10"
                                                         IsReadOnly="True"/>

                                            <TextBlock Grid.Column="2" Grid.Row="1" Text="Ngày đến hạn:" 
                                                        Style="{StaticResource LabelStyle}" 
                                                        VerticalAlignment="Center" 
                                                        FontSize="16"
                                                        Margin="0,0,15,0"/>
                                            <DatePicker Grid.Column="3" Grid.Row="1" 
                                                        SelectedDate="{Binding DueDate}"
                                                        Style="{StaticResource EditDatePickerStyle}" 
                                                        materialDesign:CalendarAssist.IsHeaderVisible="False"
                                                        FontSize="16"
                                                        Margin="0,10,20,10"
                                                        IsEnabled="True"/>

                                            <TextBlock Grid.Column="0" Grid.Row="3" Text="Số tiền (VNĐ):" 
                                               Style="{StaticResource LabelStyle}" 
                                               VerticalAlignment="Center" 
                                               FontSize="16"
                                               Margin="0,0,15,0"/>
                                            <TextBox Grid.Column="1" Grid.Row="3" 
                                                     Text="{Binding Amount, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource StringToDecimalConveter}}"
                                                     Style="{StaticResource EditTextBoxStyle}" 
                                                     FontSize="16"
                                                     Margin="0,10,20,10"
                                                     IsReadOnly="{Binding IsEditMode, Converter={StaticResource InverseBoolConverter}}"/>

                                            <TextBlock Grid.Column="2" Grid.Row="3" Text="Trạng thái:" 
                                               Style="{StaticResource LabelStyle}" 
                                               VerticalAlignment="Center" 
                                               FontSize="16"
                                               Margin="0,0,15,0"/>
                                            <TextBox Grid.Column="3" Grid.Row="3" 
                                                 Text="{Binding Status, UpdateSourceTrigger=PropertyChanged}"
                                                 Style="{StaticResource EditTextBoxStyle}" 
                                                 FontSize="16"
                                                 Margin="0,10,20,10"
                                                 IsReadOnly="True"/>


                                        </Grid>
                                    </StackPanel>
                                </GroupBox>
                            </StackPanel>
                        </ScrollViewer>
                    </TabItem>
                </TabControl>
            </StackPanel>
        </ScrollViewer>


    </Grid>
</Window>
