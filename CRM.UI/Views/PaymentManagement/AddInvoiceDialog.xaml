<Window x:Class="CRM.UI.Views.PaymentManagement.AddInvoiceDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CRM.UI.Views.PaymentManagement"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:converters="clr-namespace:CRM.UI.Converters"
        mc:Ignorable="d"
        Title="Thêm hóa đơn"
        Height="600" Width="600"
         WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>
        <converters:StringToIntConverter x:Key="StringToIntConverter"/>
        <converters:StringToDecimalConveter x:Key="StringToDecimalConverter"/>

        <Style x:Key="MaterialCard" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Opacity="0.2" BlurRadius="20" ShadowDepth="5"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="#2196F3"/>
            <Setter Property="Margin" Value="0,16,0,8"/>
        </Style>

        <Style x:Key="MaterialTextBox" TargetType="TextBox" BasedOn="{StaticResource MaterialDesignOutlinedTextBox}">
            <Setter Property="materialDesign:HintAssist.IsFloating" Value="True"/>
            <Setter Property="Height" Value="48"/>
            <Setter Property="Margin" Value="0,8"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style x:Key="MaterialComboBox" TargetType="ComboBox" BasedOn="{StaticResource MaterialDesignOutlinedComboBox}">
            <Setter Property="materialDesign:HintAssist.IsFloating" Value="True"/>
            <Setter Property="Height" Value="48"/>
            <Setter Property="Margin" Value="0,8"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style x:Key="MaterialDatePicker" TargetType="DatePicker" BasedOn="{StaticResource MaterialDesignOutlinedDatePicker}">
            <Setter Property="materialDesign:HintAssist.IsFloating" Value="True"/>
            <Setter Property="Height" Value="48"/>
            <Setter Property="Margin" Value="0,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="SelectedDateFormat" Value="Short"/>
            <Setter Property="Language" Value="vi-VN"/>
            <Setter Property="CalendarStyle" Value="{StaticResource MaterialCalendarNoHeaderStyle}"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0" Background="#2196F3" Height="60">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Thêm hóa đơn" 
                               Grid.Column="0"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"
                               Margin="24,0"
                               FontSize="20"
                               FontWeight="Medium"
                               Foreground="White"/>
            </Grid>

            <!-- Content -->
            <ScrollViewer Grid.Row="1" 
                            VerticalScrollBarVisibility="Hidden"
                            Margin="24,16">
                <StackPanel>

                    <!-- Thông tin khách hàng -->
                    <TextBlock Text="THÔNG TIN HÓA ĐƠN" Style="{StaticResource SectionHeader}"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                       <!-- <ComboBox Grid.Column="0" Grid.Row="0"
                                  Margin="0,8,8,8"
                                  Padding="8,4,8,4"
                                  IsEditable="True"
                                  Style="{StaticResource MaterialComboBox}"
                                  materialDesign:HintAssist.Hint="Nhân viên phụ trách"
                                  TextSearch.TextPath="Name"
                                  DisplayMemberPath="Name"
                                  ItemsSource="{Binding EmployeeSuggestions}"
                                  SelectedItem="{Binding SelectedEmployee, Mode=TwoWay}"
                                  StaysOpenOnEdit="True"
                                  IsTextSearchEnabled="False"
                                  IsDropDownOpen="{Binding IsEmployeeDropDownOpen, Mode=TwoWay}">
                            <ComboBox.Text>
                                <Binding Path="EmployeeSearchKeyword" 
                                         Mode="TwoWay" 
                                         UpdateSourceTrigger="PropertyChanged">
                                </Binding>
                            </ComboBox.Text>
                        </ComboBox> -->

                        <TextBox Grid.Row="0" Grid.Column="0"
                               Style="{StaticResource MaterialTextBox}"
                               materialDesign:HintAssist.Hint="Nhân viên phụ trách"
                               Padding="8,4,8,4"
                               Margin="0,8,8,8"
                               VerticalContentAlignment="Center"
                               Text="{Binding EmployeeName, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"                                     
                                />

                        <ComboBox Grid.Column="1" 
                                  Margin="8,8,0,8"
                                  Padding="8,4,8,4"
                                  IsEditable="True"
                                  Style="{StaticResource MaterialComboBox}"
                                  materialDesign:HintAssist.Hint="Hợp đồng"
                                  TextSearch.TextPath="Name"
                                  DisplayMemberPath="Name"
                                  ItemsSource="{Binding Contracts}"
                                  SelectedItem="{Binding SelectedContract, Mode=TwoWay}"
                                  StaysOpenOnEdit="True"
                                  IsTextSearchEnabled="False"
                                  IsDropDownOpen="{Binding IsContractDropdownOpen, Mode=TwoWay}">
                            <ComboBox.Text>
                                <Binding Path="ContractSearchKeyword" 
                                         Mode="TwoWay" 
                                         UpdateSourceTrigger="PropertyChanged">
                                </Binding>
                            </ComboBox.Text>
                        </ComboBox>

                        <ComboBox Grid.Column="0" Grid.Row="1"
                               Style="{StaticResource MaterialComboBox}"
                               materialDesign:HintAssist.Hint="Giai đoạn"
                               Margin="0,8,8,8"
                                  Padding="8,4,8,4"
                               ItemsSource="{Binding PaymentSchedules}"
                               SelectedItem="{Binding SelectedPaymentSchedule}"
                               DisplayMemberPath="InstallmentName"/>

                        <TextBox Grid.Row="1" Grid.Column="1"
                          Style="{StaticResource MaterialTextBox}"
                          materialDesign:HintAssist.Hint="Khách hàng"
                          Padding="8,4,8,4"
                          Margin="8,8,0,8"
                          VerticalContentAlignment="Center"
                          Text="{Binding CustomerName}"                                     
                            />

                    <!--    <TextBox Grid.Row="2" Grid.Column="0"
                           Style="{StaticResource MaterialTextBox}"
                           materialDesign:HintAssist.Hint="Số hóa đơn"
                           Padding="8,4,8,4"
                           Margin="0,8,8,8"
                           VerticalContentAlignment="Center"
                           Text="{Binding InvoiceNumber, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"                                     
                            /> -->

                       
                        <TextBox Grid.Row="2" Grid.Column="0"
                            Style="{StaticResource MaterialTextBox}"
                            materialDesign:HintAssist.Hint="Số tiền giai đoạn"
                            Padding="8,4,8,4"
                            Margin="0,8,8,8"
                            VerticalContentAlignment="Center"
                            Text="{Binding PaymentScheduleAmount, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource StringToDecimalConverter}}"                                     
                            />

                        <TextBox Grid.Row="2" Grid.Column="1"
                           Style="{StaticResource MaterialTextBox}"
                           materialDesign:HintAssist.Hint="Số tiền thực thu"
                           Padding="8,4,8,4"
                           Margin="8,8,0,8"
                           VerticalContentAlignment="Center"
                           Text="{Binding Amount, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource StringToDecimalConverter}}"                                     
                           />

                        <DatePicker Grid.Column="0" Grid.Row="3"
                                     SelectedDate="{Binding InvoiceDate, Mode=TwoWay}"
                                     materialDesign:HintAssist.Hint="Ngày xuất hóa đơn"
                                     Margin="0,8,8,8"
                                     Padding="8,4,8,4"
                                     VerticalContentAlignment="Center"
                                     Style="{StaticResource MaterialDatePicker}" />

                        <DatePicker Grid.Column="1" Grid.Row="3"
                                     SelectedDate="{Binding DueDate, Mode=TwoWay}"
                                     materialDesign:HintAssist.Hint="Ngày đến hạn"
                                     Margin="8,8,0,8"
                                     Padding="8,4,8,4"
                                     VerticalContentAlignment="Center"
                                     Style="{StaticResource MaterialDatePicker}" />
                    </Grid>
                </StackPanel>
            </ScrollViewer>

            <!-- Footer -->
            <Border Grid.Row="2" 
                       Background="#FAFAFA"
                       Height="72">
                <StackPanel Orientation="Horizontal" 
                              HorizontalAlignment="Right"
                              VerticalAlignment="Center"
                              Margin="24,0">

                    <TextBlock x:Name="ValidationMessageTextBlock"
                               Height="40"
                               Width="200"
                               Margin="0,0,100,0"
                               Style="{StaticResource MaterialDesignCaptionTextBlock}"
                               Foreground="{DynamicResource MaterialDesignValidationErrorBrush}"
                               VerticalAlignment="Center"
                               TextWrapping="Wrap"
                               Text="{Binding ValidationMessage}"/>

                    <Button Content="HỦY"
                              Style="{StaticResource MaterialDesignOutlinedButton}"
                              Width="100"
                              Height="40"
                              Margin="0,0,16,0"
                              Command="{Binding CancelCommand}"/>

                    <Button Content="Lưu"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Width="100" Height="40"
                            Margin="0,0,16,0"
                            HorizontalAlignment="Right"
                            Command="{Binding SaveCommand}"/>
                </StackPanel>
            </Border>

        </Grid>
    </Grid>
</Window>
